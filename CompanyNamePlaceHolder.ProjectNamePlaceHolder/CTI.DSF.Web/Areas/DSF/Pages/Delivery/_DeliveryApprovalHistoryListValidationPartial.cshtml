@using Models
@model DeliveryViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeDeliveryApprovalHistoryFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "DeliveryApprovalHistoryList[" + idx + "].DeliveryId", el: "Input", minlength:0, maxlength:450, isrequired: true, description: "Delivery"});
				reqs.push({name: "DeliveryApprovalHistoryList[" + idx + "].TransactionDateTime", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Transaction Date/Time"});
				reqs.push({name: "DeliveryApprovalHistoryList[" + idx + "].Status", el: "Input", minlength:0, maxlength:50, isrequired: false, description: "Status"});
				reqs.push({name: "DeliveryApprovalHistoryList[" + idx + "].TransactedBy", el: "Input", minlength:0, maxlength:450, isrequired: false, description: "Transacted By"});
				reqs.push({name: "DeliveryApprovalHistoryList[" + idx + "].Remarks", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Remarks"});
				
			}
			let validator = $("#delivery-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>