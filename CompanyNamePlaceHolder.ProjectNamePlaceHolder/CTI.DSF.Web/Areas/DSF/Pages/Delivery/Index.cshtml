@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Submission List"];
    ViewData["ActiveMainPage"] = "Delivery";
    ViewData["Level1"] = "DSF";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="delivery" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Task / Company Assignment"]
							</th>
							<th>
								@Localizer["Assignment Id"]
							</th>
							<th>
								@Localizer["Due Date"]
							</th>
							<th>
								@Localizer["Status"]
							</th>
							<th>
								@Localizer["Delivery Attachment"]
							</th>
							  
							<th>
								@Localizer["Status"]
							</th> 							
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
<div id="BatchUploadPartialContainer">
    <partial name="_BatchUpload" model="Model.BatchUpload" />
</div>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#delivery').DataTable({
            select: false,
            serverSide: true,
            order: [[ 6, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Delivery/Index", new { area = "DSF", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "taskCompanyAssignmentId", name: "TaskCompanyAssignmentId", responsivePriority: 1, title: '@Localizer["Task / Company Assignment"]', searchable: false },
				{ data: "assignmentId", name: "AssignmentId", responsivePriority: 1, title: '@Localizer["Assignment Id"]', searchable: false },
				{ data: "dueDate", name: "DueDate", responsivePriority: 1, title: '@Localizer["Due Date"]', searchable: false },
				{ data: "status", name: "Status", responsivePriority: 1, title: '@Localizer["Status"]', searchable: false },
				{ data: "deliveryAttachment", name: "DeliveryAttachment", responsivePriority: 1, title: '@Localizer["Delivery Attachment"]', searchable: false },
				   
				{ data: "statusBadge", name: "StatusBadge", responsivePriority: 1, title: '@Localizer["Approval Status"]', searchable: false, orderable: false },
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Delivery/Details", new { area = "DSF" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewDelivery" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Delivery.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Delivery/Edit", new { area = "DSF" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditDelivery" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Delivery.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Delivery/Delete", new { area = "DSF" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteDelivery" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders"></i></a>';
                    </text>
                }
				@if ((await AuthorizationService.AuthorizeAsync(User, Permission.Delivery.Approve)).Succeeded)
				{
					<text>
						url = '@Url.Page("/Delivery/Approve", new { area = "DSF" })' + '?id=' + row.id;
						button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle" title="@Localizer["Approve"]"><i class="fas fa-check"></i></a>';
					</text>
				}  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Delivery.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Delivery/Add", new { area = "DSF" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
		@if ((await AuthorizationService.AuthorizeAsync(User, Permission.Delivery.Upload)).Succeeded)
        {
            <text>
                {
                    text: 'Download Template',
                    action: function () {
                        // Trigger the hidden file input
                        $('#download-template-form').submit();   
                    },
                    className: 'btn btn-secondary text-light',
                },
            </text>
        }
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Delivery.Upload)).Succeeded)
        {
            <text>
                {
                    text: 'Upload',
                    action: function () {
                        // Trigger the hidden file input
                        $('#btnBatchUpload').click();
                    },
                    className: 'btn btn-info text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#delivery tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddDelivery",".btnEditDelivery",".btnViewDelivery",".btnDeleteDelivery"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddDelivery",".btnEditDelivery",".btnViewDelivery",".btnDeleteDelivery"]);
        $.EnableNavbarSearch(table);
		$('#btnBatchUpload').on('change', function (e) {
            $('#batch-upload-form').submit();          
        });
        @if (!string.IsNullOrEmpty(Model.BatchUpload.BatchUploadFileName))
        {
            <text>
                $('#btnDownloadBatchUploadTemplateLink')[0].click();             
            </text>
        }
    });
</script>
}