@using Models
@model TaskMasterViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskNo" class="form-label fieldrequired"><strong>@Localizer["Task No"] :</strong></label>
			<input asp-for="@Model.TaskNo" class="form-control"  />
			<span asp-validation-for="@Model.TaskNo" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskDescription" class="form-label fieldrequired"><strong>@Localizer["Task Description"] :</strong></label>
			<input asp-for="@Model.TaskDescription" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.TaskDescription" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskClassification" class="form-label fieldrequired"><strong>@Localizer["Task Classification"] :</strong></label>
			<input asp-for="@Model.TaskClassification" class="form-control"  />
			<span asp-validation-for="@Model.TaskClassification" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskFrequency" class="form-label fieldrequired"><strong>@Localizer["Task Frequency"] :</strong></label>
			<input asp-for="@Model.TaskFrequency" class="form-control"  />
			<span asp-validation-for="@Model.TaskFrequency" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskDueDay" class="form-label "><strong>@Localizer["Task Due Day"] :</strong></label>
			<input asp-for="@Model.TaskDueDay" class="form-control"  />
			<span asp-validation-for="@Model.TaskDueDay" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TargetDueDate" class="form-label "><strong>@Localizer["Target Due Date"] :</strong></label>
			<input asp-for="@Model.TargetDueDate" class="form-control"  />
			<span asp-validation-for="@Model.TargetDueDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.HolidayTag" class="form-label fieldrequired"><strong>@Localizer["Holiday Tag"] :</strong></label>
			<input asp-for="@Model.HolidayTag" class="form-control"  />
			<span asp-validation-for="@Model.HolidayTag" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Active" class="form-label "><strong>@Localizer["Active"] :</strong></label>
			<input asp-for="@Model.Active" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.Active" class="text-danger"></span>
			
	</div>
</div>

</div>
