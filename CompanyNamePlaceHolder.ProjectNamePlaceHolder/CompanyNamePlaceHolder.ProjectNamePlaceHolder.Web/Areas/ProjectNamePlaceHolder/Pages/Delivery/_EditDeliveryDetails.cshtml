@using Models
@model DeliveryViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DeliveryCode" class="form-label fieldrequired"><strong>@Localizer["Delivery Code"] :</strong></label>
			<input asp-for="@Model.DeliveryCode" class="form-control"  />
			<span asp-validation-for="@Model.DeliveryCode" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ApprovedTag" class="form-label "><strong>@Localizer["Approved Tag"] :</strong></label>
			<input asp-for="@Model.ApprovedTag" class="form-control"  />
			<span asp-validation-for="@Model.ApprovedTag" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.AssignmentCode" class="form-label fieldrequired"><strong>@Localizer["Assignment Code"] :</strong></label>
			<input asp-for="@Model.AssignmentCode" class="form-control"  />
			<span asp-validation-for="@Model.AssignmentCode" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DeliveryAttachment" class="form-label fieldrequired"><strong>@Localizer["Delivery Attachment"] :</strong></label>
			<input asp-for="@Model.DeliveryAttachmentForm" class="file-upload-control" />            
                            @if (!string.IsNullOrEmpty(Model.DeliveryAttachment)) { 
                            var fileName = System.IO.Path.GetFileName(Model.DeliveryAttachment);
                            var url = @Url.Page($"/{WebConstants.ViewAttachmentPath}/Index", new { area = "ProjectNamePlaceHolder" }) + "?subFolder=Delivery&id=" + Model.Id + "&fieldName=" + nameof(Model.DeliveryAttachment) + "&fileName=" + fileName;
                            <div class="input-group col-md-12 file-upload-filename">
                                <input asp-for="@Model.DeliveryAttachment" class="form-control" readonly />
                                <a href="@url" class="input-group-text btn btn-success file-view-button" target="_blank">@Localizer["View"]</a>
                            </div>
                            }
			<span asp-validation-for="@Model.DeliveryAttachment" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.EndorsedDate" class="form-label "><strong>@Localizer["Endorsed Date"] :</strong></label>
			<input asp-for="@Model.EndorsedDate" class="form-control"  />
			<span asp-validation-for="@Model.EndorsedDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ActualDeliveryRemarks" class="form-label "><strong>@Localizer["Actual Delivery Remarks"] :</strong></label>
			<input asp-for="@Model.ActualDeliveryRemarks" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.ActualDeliveryRemarks" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ApproverRemarks" class="form-label "><strong>@Localizer["ApproverRemarks"] :</strong></label>
			<input asp-for="@Model.ApproverRemarks" class="form-control"  />
			<span asp-validation-for="@Model.ApproverRemarks" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.EndorsedTag" class="form-label "><strong>@Localizer["Endorsed Tag"] :</strong></label>
			<input asp-for="@Model.EndorsedTag" class="form-control"  />
			<span asp-validation-for="@Model.EndorsedTag" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ActualDeliveryDate" class="form-label fieldrequired"><strong>@Localizer["Actual Delivery Date"] :</strong></label>
			<input asp-for="@Model.ActualDeliveryDate" class="form-control"  />
			<span asp-validation-for="@Model.ActualDeliveryDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Status" class="form-label "><strong>@Localizer["Status"] :</strong></label>
			<input asp-for="@Model.Status" class="form-control"  />
			<span asp-validation-for="@Model.Status" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DueDate" class="form-label "><strong>@Localizer["Due Date"] :</strong></label>
			<input asp-for="@Model.DueDate" class="form-control"  />
			<span asp-validation-for="@Model.DueDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.EndorserRemarks" class="form-label "><strong>@Localizer["EndorserRemarks"] :</strong></label>
			<input asp-for="@Model.EndorserRemarks" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.EndorserRemarks" class="text-danger"></span>
			
	</div>
</div>

</div>
