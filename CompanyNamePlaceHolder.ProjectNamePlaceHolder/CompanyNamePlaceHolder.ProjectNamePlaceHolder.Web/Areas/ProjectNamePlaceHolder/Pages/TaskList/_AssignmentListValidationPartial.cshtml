@using Models
@model TaskListViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeAssignmentFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "AssignmentList[" + idx + "].AssignmentCode", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Assignment Code"});
				reqs.push({name: "AssignmentList[" + idx + "].TaskListCode", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Task List Code"});
				reqs.push({name: "AssignmentList[" + idx + "].PrimaryAsignee", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Primary Assignee"});
				reqs.push({name: "AssignmentList[" + idx + "].AlternateAsignee", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Alternate Assignee"});
				reqs.push({name: "AssignmentList[" + idx + "].StartDate", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Start Date"});
				reqs.push({name: "AssignmentList[" + idx + "].EndDate", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "End Date"});
				
			}
			let validator = $("#taskList-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>