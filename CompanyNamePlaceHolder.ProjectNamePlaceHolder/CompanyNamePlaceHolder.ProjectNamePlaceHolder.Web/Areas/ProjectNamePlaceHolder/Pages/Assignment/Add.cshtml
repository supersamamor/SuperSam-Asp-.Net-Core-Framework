@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Assigment"];
    ViewData["ActiveMainPage"] = "Assignment";
    ViewData["Level1"] = "ProjectNamePlaceHolder";
}
<form id="assignment-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Assignment" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group">
        <a asp-page="Index" id="btnCancelConfirmationModal" class="btn btn-secondary" title="@Localizer["Back"]"><i class="fas fa-arrow-left"></i></a>
        <button type="button" id="btnConfirmationModal" class="btn btn-success" title="@Localizer["Save changes"]"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_DeliveryListValidationPartial" model="@Model.Assignment" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{			
			$.bindSaveConfirmationModal('Save', '#btnConfirmationModal','#assignment-form');
            $.bindCancelConfirmationModal('Cancel', '#btnCancelConfirmationModal','#assignment-form', 'Do you want to cancel the changes?');
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeDeliveryFieldValidations($('#DeliveryCount').val());
			$('.RemoveDeliveryButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveDelivery');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#assignment-form', InitializeForm, true);
			});

			$('#btnAddDelivery').on( 'click', function () {
				$('#AsyncAction').val('AddDelivery');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#assignment-form', InitializeForm, true);
			});

			$.fn.tasklistSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/TaskList/Index", new { area = "ProjectNamePlaceHolder", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#TaskListCode").tasklistSelect();

		}	
		InitializeForm();
    });
</script>
}