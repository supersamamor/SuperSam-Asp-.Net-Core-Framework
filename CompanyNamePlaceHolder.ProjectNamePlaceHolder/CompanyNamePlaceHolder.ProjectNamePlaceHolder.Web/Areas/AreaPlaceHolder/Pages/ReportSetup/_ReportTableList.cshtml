@using Models
@model ReportViewModel
<input type="hidden" id="ReportTableCount" value="@Model?.ReportTableList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span  class="card-header-custom">@Localizer["Table"]</span>
        <a id="btnAddReportTable" class="btn btnMaterial btn-flat primary semicircle cancel btnAddRemoveSubDetailList" title="@Localizer["Add"]"><i class="fas fa-plus"></i></a>
        <button class="cancel d-none" type="button" id="btnRemoveReportTable" value="RemoveReportTable"></button>
    </h5>
    <div class="card-body overflow-auto">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th class="d-none"></th>
                    <th>
								@Localizer["Table Name"]
							</th>
							<th>
								@Localizer["Alias"]
							</th>
							<th>
								@Localizer["Join Type"]
							</th>
							<th>
								@Localizer["Sequence"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.ReportTableList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.ReportTableList)
                    {
                        <tr>
                            <td class="d-none">
                                <input type="hidden" name="ReportTableList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="ReportTableList[@counter].ReportId" value="@item.ReportId" />
                            </td>
                            <td>
										<input  asp-for="@item.TableName" name="ReportTableList[@counter].TableName" class="form-control" maxlength="255" />
										<span data-valmsg-for="ReportTableList[@counter].TableName" asp-validation-for="@item.TableName" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Alias" name="ReportTableList[@counter].Alias" class="form-control" maxlength="255" />
										<span data-valmsg-for="ReportTableList[@counter].Alias" asp-validation-for="@item.Alias" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.JoinType" name="ReportTableList[@counter].JoinType" class="form-control" maxlength="50" />
										<span data-valmsg-for="ReportTableList[@counter].JoinType" asp-validation-for="@item.JoinType" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Sequence" name="ReportTableList[@counter].Sequence" class="form-control"  />
										<span data-valmsg-for="ReportTableList[@counter].Sequence" asp-validation-for="@item.Sequence" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveReportTableButton btnAddRemoveSubDetailList" title="@Localizer["Remove ReportTable"]" removeId="@(item.Id)"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
