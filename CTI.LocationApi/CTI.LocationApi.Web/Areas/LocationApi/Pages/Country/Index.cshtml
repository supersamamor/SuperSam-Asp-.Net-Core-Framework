@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Country List"];
    ViewData["ActiveMainPage"] = "Country";
    ViewData["Level1"] = "LocationApi";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="country" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Name"]
							</th>
							<th>
								@Localizer["Code"]
							</th>
							  
							<th>
								@Localizer["Status"]
							</th> 							
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#country').DataTable({
            select: false,
            serverSide: true,
            order: [[ 3, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Country/Index", new { area = "LocationApi", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "name", name: "Name", responsivePriority: 1, title: '@Localizer["Name"]', searchable: true },
				{ data: "code", name: "Code", responsivePriority: 1, title: '@Localizer["Code"]', searchable: false },
				   
				{ data: "statusBadge", name: "StatusBadge", responsivePriority: 1, title: '@Localizer["Approval Status"]', searchable: false, orderable: false },
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Country/Details", new { area = "LocationApi" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewCountry" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Country.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Country/Edit", new { area = "LocationApi" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditCountry" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Country.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Country/Delete", new { area = "LocationApi" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteCountry" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders" style="color: #DC3545;"></i></a>';
                    </text>
                }
				@if ((await AuthorizationService.AuthorizeAsync(User, Permission.Country.Approve)).Succeeded)
				{
					<text>
						url = '@Url.Page("/Country/Approve", new { area = "LocationApi" })' + '?id=' + row.id;
						button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle" title="@Localizer["Approve"]"><i class="fas fa-check"></i></a>';
					</text>
				}  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Country.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Country/Add", new { area = "LocationApi" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#country tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddCountry",".btnEditCountry",".btnViewCountry",".btnDeleteCountry"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddCountry",".btnEditCountry",".btnViewCountry",".btnDeleteCountry"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}