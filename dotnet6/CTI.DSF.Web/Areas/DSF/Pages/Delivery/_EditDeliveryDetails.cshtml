@using Models
@model DeliveryViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskCompanyAssignmentId" class="form-label fieldrequired"><strong>@Localizer["Task / Company Assignment"] :</strong></label>
			<select asp-for="@Model.TaskCompanyAssignmentId" class="form-control" asp-items="@(dropdownService.GetTaskCompanyAssignmentList(Model.TaskCompanyAssignmentId))"><option value="">- Select Task / Company Assignment -</option></select>
			<span asp-validation-for="@Model.TaskCompanyAssignmentId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DeliveryCode" class="form-label fieldrequired"><strong>@Localizer["Delivery Code"] :</strong></label>
			<input asp-for="@Model.DeliveryCode" class="form-control" maxlength="450" />
			<span asp-validation-for="@Model.DeliveryCode" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.AssignmentId" class="form-label fieldrequired"><strong>@Localizer["Assignment Id"] :</strong></label>
			<select asp-for="@Model.AssignmentId" class="form-control" asp-items="@(dropdownService.GetAssignmentList(Model.AssignmentId))"><option value="">- Select Assignment Id -</option></select>
			<span asp-validation-for="@Model.AssignmentId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DueDate" class="form-label fieldrequired"><strong>@Localizer["Due Date"] :</strong></label>
			<input asp-for="@Model.DueDate" class="form-control"  />
			<span asp-validation-for="@Model.DueDate" class="text-danger"></span>
			
	</div>
</div>
