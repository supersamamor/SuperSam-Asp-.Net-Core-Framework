	<div class="mb-3">
		<label asp-for="@Model.Status" class="form-label fieldrequired"><strong>@Localizer["Status"] :</strong></label>
			<input asp-for="@Model.Status" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.Status" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DeliveryAttachment" class="form-label fieldrequired"><strong>@Localizer["Delivery Attachment"] :</strong></label>
			<input asp-for="@Model.DeliveryAttachmentForm" class="file-upload-control" />            
                            @if (!string.IsNullOrEmpty(Model.DeliveryAttachment)) { 
                            var fileName = System.IO.Path.GetFileName(Model.DeliveryAttachment);
                            var url = @Url.Page($"/{WebConstants.ViewAttachmentPath}/Index", new { area = "DSF" }) + "?subFolder=Delivery&id=" + Model.Id + "&fieldName=" + nameof(Model.DeliveryAttachment) + "&fileName=" + fileName;
                            <div class="input-group col-md-12 file-upload-filename">
                                <input asp-for="@Model.DeliveryAttachment" class="form-control" readonly />
                                <a href="@url" class="input-group-text btn btn-success file-view-button" target="_blank">@Localizer["View"]</a>
                            </div>
                            }
			<span asp-validation-for="@Model.DeliveryAttachment" class="text-danger"></span>
			
	</div>
</div>
