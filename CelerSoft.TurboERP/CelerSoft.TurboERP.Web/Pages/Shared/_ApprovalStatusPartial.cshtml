@model string


@if (Model == CelerSoft.TurboERP.Core.TurboERP.ApprovalStatus.ForApproval)
{
    <h4><span class="badge badge-info">@Model</span></h4>
}
else if (Model == CelerSoft.TurboERP.Core.TurboERP.ApprovalStatus.PartiallyApproved)
{
    <h4><span class="badge badge-primary">@Model</span></h4>
}
else if (Model == CelerSoft.TurboERP.Core.TurboERP.ApprovalStatus.Approved)
{
    <h4><span class="badge badge-success">@Model</span></h4>
}
else if (Model == CelerSoft.TurboERP.Core.TurboERP.ApprovalStatus.Rejected)
{
    <h4><span class="badge badge-danger">@Model</span></h4>
}