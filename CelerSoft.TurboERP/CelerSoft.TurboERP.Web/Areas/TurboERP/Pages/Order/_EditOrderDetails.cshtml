@using Models
@model OrderViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.CheckedByFullName" class="form-label fieldrequired"><strong>@Localizer["Checked By"] :</strong></label>
			<input asp-for="@Model.CheckedByFullName" class="form-control" maxlength="400" />
			<span asp-validation-for="@Model.CheckedByFullName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Code" class="form-label "><strong>@Localizer["Code"] :</strong></label>
			<input asp-for="@Model.Code" class="form-control" maxlength="20"  readonly/>
			<span asp-validation-for="@Model.Code" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.CustomerId" class="form-label fieldrequired"><strong>@Localizer["Customer"] :</strong></label>
			<select asp-for="@Model.CustomerId" class="form-control" asp-items="@(dropdownService.GetCustomerList(Model.CustomerId))"><option value="">- Select Customer -</option></select>
			<span asp-validation-for="@Model.CustomerId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Remarks" class="form-label fieldrequired"><strong>@Localizer["Remarks"] :</strong></label>
			<input asp-for="@Model.Remarks" class="form-control" maxlength="500" />
			<span asp-validation-for="@Model.Remarks" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ShopperUsername" class="form-label fieldrequired"><strong>@Localizer["Shopper Username"] :</strong></label>
			<input asp-for="@Model.ShopperUsername" class="form-control" maxlength="450" />
			<span asp-validation-for="@Model.ShopperUsername" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Status" class="form-label "><strong>@Localizer["Status"] :</strong></label>
			<input asp-for="@Model.Status" class="form-control" maxlength="15"  readonly/>
			<span asp-validation-for="@Model.Status" class="text-danger"></span>
			
	</div>
</div>

</div>
