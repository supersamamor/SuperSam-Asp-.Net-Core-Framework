@using Models
@model OrderViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeOrderItemFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "OrderItemList[" + idx + "].Amount", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Amount"});
				reqs.push({name: "OrderItemList[" + idx + "].DeliveredByFullName", el: "Input", minlength:0, maxlength:255, isrequired: true, description: "Delivered By"});
				reqs.push({name: "OrderItemList[" + idx + "].InventoryId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Inventory"});
				reqs.push({name: "OrderItemList[" + idx + "].OrderByUserId", el: "Input", minlength:0, maxlength:400, isrequired: true, description: "Order By"});
				reqs.push({name: "OrderItemList[" + idx + "].OrderId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Order"});
				reqs.push({name: "OrderItemList[" + idx + "].Paid", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Paid"});
				reqs.push({name: "OrderItemList[" + idx + "].Quantity", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Quantity"});
				reqs.push({name: "OrderItemList[" + idx + "].ReceivedByFullName", el: "Input", minlength:0, maxlength:255, isrequired: true, description: "Received By"});
				reqs.push({name: "OrderItemList[" + idx + "].Status", el: "Input", minlength:0, maxlength:20, isrequired: false, description: "Status"});
				reqs.push({name: "OrderItemList[" + idx + "].TotalAmount", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Total Amount"});
				
			}
			let validator = $("#order-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>