@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Orders List"];
    ViewData["ActiveMainPage"] = "Order";
    ViewData["Level1"] = "TurboERP";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="order" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Checked By"]
							</th>
							<th>
								@Localizer["Code"]
							</th>
							<th>
								@Localizer["Customer"]
							</th>
							<th>
								@Localizer["Remarks"]
							</th>
							<th>
								@Localizer["Shopper Username"]
							</th>
							<th>
								@Localizer["Status"]
							</th>
							  
							<th>
								@Localizer["Status"]
							</th> 							
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#order').DataTable({
            select: false,
            serverSide: true,
            order: [[ 7, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Order/Index", new { area = "TurboERP", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "checkedByFullName", name: "CheckedByFullName", responsivePriority: 1, title: '@Localizer["Checked By"]', searchable: false },
				{ data: "code", name: "Code", responsivePriority: 1, title: '@Localizer["Code"]', searchable: true },
				{ data: "customerId", name: "CustomerId", responsivePriority: 1, title: '@Localizer["Customer"]', searchable: false },
				{ data: "remarks", name: "Remarks", responsivePriority: 1, title: '@Localizer["Remarks"]', searchable: false },
				{ data: "shopperUsername", name: "ShopperUsername", responsivePriority: 1, title: '@Localizer["Shopper Username"]', searchable: false },
				{ data: "status", name: "Status", responsivePriority: 1, title: '@Localizer["Status"]', searchable: false },
				   
				{ data: "statusBadge", name: "StatusBadge", responsivePriority: 1, title: '@Localizer["Approval Status"]', searchable: false, orderable: false },
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Order/Details", new { area = "TurboERP" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewOrder" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Order.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Order/Edit", new { area = "TurboERP" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditOrder" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Order.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Order/Delete", new { area = "TurboERP" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteOrder" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders" style="color: #DC3545;"></i></a>';
                    </text>
                }
				@if ((await AuthorizationService.AuthorizeAsync(User, Permission.Order.Approve)).Succeeded)
				{
					<text>
						url = '@Url.Page("/Order/Approve", new { area = "TurboERP" })' + '?id=' + row.id;
						button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle" title="@Localizer["Approve"]"><i class="fas fa-check"></i></a>';
					</text>
				}  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Order.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Order/Add", new { area = "TurboERP" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#order tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddOrder",".btnEditOrder",".btnViewOrder",".btnDeleteOrder"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddOrder",".btnEditOrder",".btnViewOrder",".btnDeleteOrder"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}