@using Models
@model CustomerViewModel
<input type="hidden" id="CustomerContactPersonCount" value="@Model?.CustomerContactPersonList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["Contact Person"]</span>
        <a id="btnAddCustomerContactPerson" class="btn btnMaterial btn-flat primary semicircle cancel" title="@Localizer["Add"]"><i class="fas fa-plus" style="font-size:18px;"></i></a>
        <button class="cancel" type="button" id="btnRemoveCustomerContactPerson" value="RemoveCustomerContactPerson" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
                        @Localizer["Name"]
                    </th>
                    <th>
                        @Localizer["Position"]
                    </th>
                    <th>
                        @Localizer["Email"]
                    </th>
                    <th>
                        @Localizer["Mobile Number"]
                    </th>
                    <th>
                        @Localizer["Phone Number"]
                    </th>

                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.CustomerContactPersonList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.CustomerContactPersonList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="CustomerContactPersonList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="CustomerContactPersonList[@counter].CustomerId" value="@item.CustomerId" />
                            </td>
                            <td>
                                <input asp-for="@item.FullName" name="CustomerContactPersonList[@counter].FullName" class="form-control" maxlength="450" />
                                <span data-valmsg-for="CustomerContactPersonList[@counter].FullName" asp-validation-for="@item.FullName" class="text-danger"></span>

                            </td>
                            <td>
                                <input asp-for="@item.Position" name="CustomerContactPersonList[@counter].Position" class="form-control" maxlength="100" />
                                <span data-valmsg-for="CustomerContactPersonList[@counter].Position" asp-validation-for="@item.Position" class="text-danger"></span>

                            </td>
                            <td>
                                <input asp-for="@item.Email" name="CustomerContactPersonList[@counter].Email" class="form-control" maxlength="255" />
                                <span data-valmsg-for="CustomerContactPersonList[@counter].Email" asp-validation-for="@item.Email" class="text-danger"></span>

                            </td>
                            <td>
                                <input asp-for="@item.MobileNumber" name="CustomerContactPersonList[@counter].MobileNumber" class="form-control" maxlength="50" />
                                <span data-valmsg-for="CustomerContactPersonList[@counter].MobileNumber" asp-validation-for="@item.MobileNumber" class="text-danger"></span>

                            </td>
                            <td>
                                <input asp-for="@item.PhoneNumber" name="CustomerContactPersonList[@counter].PhoneNumber" class="form-control" maxlength="50" />
                                <span data-valmsg-for="CustomerContactPersonList[@counter].PhoneNumber" asp-validation-for="@item.PhoneNumber" class="text-danger"></span>

                            </td>

                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveCustomerContactPersonButton" title="@Localizer["Remove CustomerContactPerson"]" removeId="@(item.Id)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
