@using Models
@model CustomerViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeCustomerContactPersonFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "CustomerContactPersonList[" + idx + "].CustomerId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Customer"});
				reqs.push({name: "CustomerContactPersonList[" + idx + "].FullName", el: "Input", minlength:0, maxlength:450, isrequired: true, description: "Name"});
				reqs.push({name: "CustomerContactPersonList[" + idx + "].Position", el: "Input", minlength:0, maxlength:100, isrequired: false, description: "Position"});
				reqs.push({name: "CustomerContactPersonList[" + idx + "].Email", el: "Input", minlength:0, maxlength:255, isrequired: true, description: "Email"});
				reqs.push({name: "CustomerContactPersonList[" + idx + "].MobileNumber", el: "Input", minlength:0, maxlength:50, isrequired: true, description: "Mobile Number"});
				reqs.push({name: "CustomerContactPersonList[" + idx + "].PhoneNumber", el: "Input", minlength:0, maxlength:50, isrequired: false, description: "Phone Number"});
				
			}
			let validator = $("#customer-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>