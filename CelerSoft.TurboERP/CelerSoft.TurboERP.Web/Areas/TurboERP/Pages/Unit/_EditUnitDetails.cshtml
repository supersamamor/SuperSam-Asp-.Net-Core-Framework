@using Models
@model UnitViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Abbreviations" class="form-label fieldrequired"><strong>@Localizer["Abbreviations"] :</strong></label>
			<input asp-for="@Model.Abbreviations" class="form-control" maxlength="5" />
			<span asp-validation-for="@Model.Abbreviations" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Name" class="form-label fieldrequired"><strong>@Localizer["Name"] :</strong></label>
			<input asp-for="@Model.Name" class="form-control" maxlength="100" />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
			
	</div>
</div>

</div>
