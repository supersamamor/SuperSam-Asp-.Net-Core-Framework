@using Models
@model SupplierViewModel
<input type="hidden" id="SupplierContactPersonCount" value="@Model?.SupplierContactPersonList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["Contact Person"]</span>
        <a id="btnAddSupplierContactPerson" class="btn btnMaterial btn-flat primary semicircle cancel" title="@Localizer["Add"]"><i class="fas fa-plus" style="font-size:18px;"></i></a>
        <button class="cancel" type="button" id="btnRemoveSupplierContactPerson" value="RemoveSupplierContactPerson" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
								@Localizer["Name"]
							</th>
							<th>
								@Localizer["Position"]
							</th>
							<th>
								@Localizer["Email"]
							</th>
							<th>
								@Localizer["Mobile Number"]
							</th>
							<th>
								@Localizer["Phone Number"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.SupplierContactPersonList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.SupplierContactPersonList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="SupplierContactPersonList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="SupplierContactPersonList[@counter].SupplierId" value="@item.SupplierId" />
                            </td>
                            <td>
										<input  asp-for="@item.FullName" name="SupplierContactPersonList[@counter].FullName" class="form-control" maxlength="450" />
										<span data-valmsg-for="SupplierContactPersonList[@counter].FullName" asp-validation-for="@item.FullName" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Position" name="SupplierContactPersonList[@counter].Position" class="form-control" maxlength="100" />
										<span data-valmsg-for="SupplierContactPersonList[@counter].Position" asp-validation-for="@item.Position" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Email" name="SupplierContactPersonList[@counter].Email" class="form-control" maxlength="255" />
										<span data-valmsg-for="SupplierContactPersonList[@counter].Email" asp-validation-for="@item.Email" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.MobileNumber" name="SupplierContactPersonList[@counter].MobileNumber" class="form-control" maxlength="50" />
										<span data-valmsg-for="SupplierContactPersonList[@counter].MobileNumber" asp-validation-for="@item.MobileNumber" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.PhoneNumber" name="SupplierContactPersonList[@counter].PhoneNumber" class="form-control" maxlength="50" />
										<span data-valmsg-for="SupplierContactPersonList[@counter].PhoneNumber" asp-validation-for="@item.PhoneNumber" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveSupplierContactPersonButton" title="@Localizer["Remove SupplierContactPerson"]" removeId="@(item.Id)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
