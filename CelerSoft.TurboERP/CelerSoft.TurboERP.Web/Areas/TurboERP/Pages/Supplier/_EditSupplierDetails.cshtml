@using Models
@model SupplierViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Company" class="form-label fieldrequired"><strong>@Localizer["Name"] :</strong></label>
			<input asp-for="@Model.Company" class="form-control" maxlength="450" />
			<span asp-validation-for="@Model.Company" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TINNumber" class="form-label "><strong>@Localizer["TIN Number"] :</strong></label>
			<input asp-for="@Model.TINNumber" class="form-control" maxlength="20" />
			<span asp-validation-for="@Model.TINNumber" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Address" class="form-label fieldrequired"><strong>@Localizer["Address"] :</strong></label>
			<input asp-for="@Model.Address" class="form-control" maxlength="1000" />
			<span asp-validation-for="@Model.Address" class="text-danger"></span>
			
	</div>
</div>

</div>
