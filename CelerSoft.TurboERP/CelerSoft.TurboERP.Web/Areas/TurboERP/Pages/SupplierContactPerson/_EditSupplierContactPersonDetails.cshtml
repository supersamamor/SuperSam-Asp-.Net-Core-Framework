@using Models
@model SupplierContactPersonViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.SupplierId" class="form-label "><strong>@Localizer["Supplier"] :</strong></label>
			<select asp-for="@Model.SupplierId" class="form-control" asp-items="@(dropdownService.GetSupplierList(Model.SupplierId))"><option value="">- Select Supplier -</option></select>
			<span asp-validation-for="@Model.SupplierId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.FullName" class="form-label "><strong>@Localizer["Name"] :</strong></label>
			<input asp-for="@Model.FullName" class="form-control" maxlength="450" />
			<span asp-validation-for="@Model.FullName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Position" class="form-label "><strong>@Localizer["Position"] :</strong></label>
			<input asp-for="@Model.Position" class="form-control" maxlength="100" />
			<span asp-validation-for="@Model.Position" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Email" class="form-label fieldrequired"><strong>@Localizer["Email"] :</strong></label>
			<input asp-for="@Model.Email" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.MobileNumber" class="form-label fieldrequired"><strong>@Localizer["Mobile Number"] :</strong></label>
			<input asp-for="@Model.MobileNumber" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.MobileNumber" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.PhoneNumber" class="form-label "><strong>@Localizer["Phone Number"] :</strong></label>
			<input asp-for="@Model.PhoneNumber" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
			
	</div>
</div>

</div>
