@using Models
@model PurchaseViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Code" class="form-label "><strong>@Localizer["Code"] :</strong></label>
			<input asp-for="@Model.Code" class="form-control" maxlength="20"  readonly/>
			<span asp-validation-for="@Model.Code" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.NotedByUsername" class="form-label fieldrequired"><strong>@Localizer["Noted By"] :</strong></label>
			<input asp-for="@Model.NotedByUsername" class="form-control" maxlength="400" />
			<span asp-validation-for="@Model.NotedByUsername" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.PurchaseRequisitionId" class="form-label "><strong>@Localizer["Purchase Requisition"] :</strong></label>
			<select asp-for="@Model.PurchaseRequisitionId" class="form-control" asp-items="@(dropdownService.GetPurchaseRequisitionList(Model.PurchaseRequisitionId))"><option value="">- Select Purchase Requisition -</option></select>
			<span asp-validation-for="@Model.PurchaseRequisitionId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.SupplierQuotationId" class="form-label "><strong>@Localizer["Supplier Quotation"] :</strong></label>
			<select asp-for="@Model.SupplierQuotationId" class="form-control" asp-items="@(dropdownService.GetSupplierQuotationList(Model.SupplierQuotationId))"><option value="">- Select Supplier Quotation -</option></select>
			<span asp-validation-for="@Model.SupplierQuotationId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ReferenceInvoiceNumber" class="form-label fieldrequired"><strong>@Localizer["Reference Invoice Number"] :</strong></label>
			<input asp-for="@Model.ReferenceInvoiceNumber" class="form-control" maxlength="400" />
			<span asp-validation-for="@Model.ReferenceInvoiceNumber" class="text-danger"></span>
			
	</div>
</div>

</div>
