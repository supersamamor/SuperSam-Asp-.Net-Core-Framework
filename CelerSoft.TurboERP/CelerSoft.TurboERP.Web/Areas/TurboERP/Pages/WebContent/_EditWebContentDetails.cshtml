@using Models
@model WebContentViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Code" class="form-label "><strong>@Localizer["Code"] :</strong></label>
			<input asp-for="@Model.Code" class="form-control" maxlength="20"  readonly/>
			<span asp-validation-for="@Model.Code" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Content" class="form-label fieldrequired"><strong>@Localizer["Content"] :</strong></label>
			<input asp-for="@Model.Content" class="form-control"  />
			<span asp-validation-for="@Model.Content" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.PageName" class="form-label "><strong>@Localizer["Page Name"] :</strong></label>
			<input asp-for="@Model.PageName" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.PageName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.PageTitle" class="form-label "><strong>@Localizer["Page Title"] :</strong></label>
			<input asp-for="@Model.PageTitle" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.PageTitle" class="text-danger"></span>
			
	</div>
</div>

</div>
