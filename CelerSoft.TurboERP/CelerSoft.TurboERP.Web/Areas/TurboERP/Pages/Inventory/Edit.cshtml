@page
@model EditModel
@{
    ViewData["Title"] = Localizer["Edit Inventory"];
    ViewData["ActiveMainPage"] = "Inventory";
    ViewData["Level1"] = "TurboERP";
}
<form id="inventory-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
    <div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Inventory" />
    </div>
    <div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
        <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Cancel"]"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-success" title="@Localizer["Save changes"]" style="color:#fff;"><i class="fas fa-save"></i></button>
    </div>
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_InventoryHistoryListValidationPartial" model="@Model.Inventory" />
<partial name="_OrderItemListValidationPartial" model="@Model.Inventory" />

<script asp-add-nonce>
    $(document).ready(function () {
        function InitializeForm()
        {
            $('.DisableSelectDropdown').on('mousedown', function(e) {
                e.preventDefault();
                this.blur();
                window.focus();
            });
            
			$.InitializeInventoryHistoryFieldValidations($('#InventoryHistoryCount').val());
			$('.RemoveInventoryHistoryButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveInventoryHistory');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#inventory-form', InitializeForm);
			});

			$('#btnAddInventoryHistory').on( 'click', function () {
				$('#AsyncAction').val('AddInventoryHistory');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#inventory-form', InitializeForm);
			});

			$.InitializeOrderItemFieldValidations($('#OrderItemCount').val());
			$('.RemoveOrderItemButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveOrderItem');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#inventory-form', InitializeForm);
			});

			$('#btnAddOrderItem').on( 'click', function () {
				$('#AsyncAction').val('AddOrderItem');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#inventory-form', InitializeForm);
			});

			$.fn.orderSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Order/Index", new { area = "TurboERP", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var orderlistdropdowns = document.getElementsByClassName('SelectOrder');
			for ( var i=0; i< orderlistdropdowns.length; i++) {
				$("#OrderItemList_"+i+"_OrderId").orderSelect();
			}

			$.fn.purchaseitemSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/PurchaseItem/Index", new { area = "TurboERP", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#PurchaseItemId").purchaseitemSelect();

			$.fn.productSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Product/Index", new { area = "TurboERP", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#ProductId").productSelect();


        }
        InitializeForm();
    });
</script>
}