@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Contact Person List"];
    ViewData["ActiveMainPage"] = "CustomerContactPerson";
    ViewData["Level1"] = "TurboERP";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="customerContactPerson" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Customer"]
							</th>
							<th>
								@Localizer["Name"]
							</th>
							<th>
								@Localizer["Position"]
							</th>
							<th>
								@Localizer["Email"]
							</th>
							<th>
								@Localizer["Mobile Number"]
							</th>
							<th>
								@Localizer["Phone Number"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#customerContactPerson').DataTable({
            select: false,
            serverSide: true,
            order: [[ 6, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/CustomerContactPerson/Index", new { area = "TurboERP", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "customerId", name: "CustomerId", responsivePriority: 1, title: '@Localizer["Customer"]', searchable: false },
				{ data: "fullName", name: "FullName", responsivePriority: 1, title: '@Localizer["Name"]', searchable: false },
				{ data: "position", name: "Position", responsivePriority: 1, title: '@Localizer["Position"]', searchable: false },
				{ data: "email", name: "Email", responsivePriority: 1, title: '@Localizer["Email"]', searchable: false },
				{ data: "mobileNumber", name: "MobileNumber", responsivePriority: 1, title: '@Localizer["Mobile Number"]', searchable: false },
				{ data: "phoneNumber", name: "PhoneNumber", responsivePriority: 1, title: '@Localizer["Phone Number"]', searchable: false },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/CustomerContactPerson/Details", new { area = "TurboERP" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewCustomerContactPerson" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.CustomerContactPerson.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/CustomerContactPerson/Edit", new { area = "TurboERP" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditCustomerContactPerson" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.CustomerContactPerson.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/CustomerContactPerson/Delete", new { area = "TurboERP" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteCustomerContactPerson" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders" style="color: #DC3545;"></i></a>';
                    </text>
                }
				  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.CustomerContactPerson.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/CustomerContactPerson/Add", new { area = "TurboERP" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#customerContactPerson tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddCustomerContactPerson",".btnEditCustomerContactPerson",".btnViewCustomerContactPerson",".btnDeleteCustomerContactPerson"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddCustomerContactPerson",".btnEditCustomerContactPerson",".btnViewCustomerContactPerson",".btnDeleteCustomerContactPerson"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}