@using Models
@model ItemViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ItemTypeId" class="form-label fieldrequired"><strong>@Localizer["Item Type"] :</strong></label>
			<select asp-for="@Model.ItemTypeId" class="form-control" asp-items="@(dropdownService.GetItemTypeList(Model.ItemTypeId))"><option value="">- Select Item Type -</option></select>
			<span asp-validation-for="@Model.ItemTypeId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Code" class="form-label "><strong>@Localizer["Code"] :</strong></label>
			<input asp-for="@Model.Code" class="form-control" maxlength="20"  readonly/>
			<span asp-validation-for="@Model.Code" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Name" class="form-label fieldrequired"><strong>@Localizer["Name"] :</strong></label>
			<input asp-for="@Model.Name" class="form-control" maxlength="500" />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.UnitId" class="form-label fieldrequired"><strong>@Localizer["Unit"] :</strong></label>
			<select asp-for="@Model.UnitId" class="form-control" asp-items="@(dropdownService.GetUnitList(Model.UnitId))"><option value="">- Select Unit -</option></select>
			<span asp-validation-for="@Model.UnitId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.AveragePrice" class="form-label "><strong>@Localizer["Average Price"] :</strong></label>
			<input asp-for="@Model.AveragePrice" class="form-control"   readonly/>
			<span asp-validation-for="@Model.AveragePrice" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LastPurchasedPrice" class="form-label "><strong>@Localizer["Last Purchased Price"] :</strong></label>
			<input asp-for="@Model.LastPurchasedPrice" class="form-control"   readonly/>
			<span asp-validation-for="@Model.LastPurchasedPrice" class="text-danger"></span>
			
	</div>
</div>

</div>
