@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Order Items List"];
    ViewData["ActiveMainPage"] = "OrderItem";
    ViewData["Level1"] = "TurboERP";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="orderItem" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Amount"]
							</th>
							<th>
								@Localizer["Delivered By"]
							</th>
							<th>
								@Localizer["Inventory"]
							</th>
							<th>
								@Localizer["Order By"]
							</th>
							<th>
								@Localizer["Order"]
							</th>
							<th>
								@Localizer["Paid"]
							</th>
							<th>
								@Localizer["Quantity"]
							</th>
							<th>
								@Localizer["Received By"]
							</th>
							<th>
								@Localizer["Status"]
							</th>
							<th>
								@Localizer["Total Amount"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#orderItem').DataTable({
            select: false,
            serverSide: true,
            order: [[ 10, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/OrderItem/Index", new { area = "TurboERP", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "amount", name: "Amount", responsivePriority: 1, title: '@Localizer["Amount"]', searchable: false },
				{ data: "deliveredByFullName", name: "DeliveredByFullName", responsivePriority: 1, title: '@Localizer["Delivered By"]', searchable: false },
				{ data: "inventoryId", name: "InventoryId", responsivePriority: 1, title: '@Localizer["Inventory"]', searchable: false },
				{ data: "orderByUserId", name: "OrderByUserId", responsivePriority: 1, title: '@Localizer["Order By"]', searchable: false },
				{ data: "orderId", name: "OrderId", responsivePriority: 1, title: '@Localizer["Order"]', searchable: false },
				{ data: "paid", name: "Paid", responsivePriority: 1, title: '@Localizer["Paid"]', searchable: false },
				{ data: "quantity", name: "Quantity", responsivePriority: 1, title: '@Localizer["Quantity"]', searchable: false },
				{ data: "receivedByFullName", name: "ReceivedByFullName", responsivePriority: 1, title: '@Localizer["Received By"]', searchable: false },
				{ data: "status", name: "Status", responsivePriority: 1, title: '@Localizer["Status"]', searchable: false },
				{ data: "totalAmount", name: "TotalAmount", responsivePriority: 1, title: '@Localizer["Total Amount"]', searchable: false },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/OrderItem/Details", new { area = "TurboERP" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewOrderItem" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.OrderItem.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/OrderItem/Edit", new { area = "TurboERP" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditOrderItem" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.OrderItem.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/OrderItem/Delete", new { area = "TurboERP" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteOrderItem" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders" style="color: #DC3545;"></i></a>';
                    </text>
                }
				  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.OrderItem.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/OrderItem/Add", new { area = "TurboERP" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#orderItem tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddOrderItem",".btnEditOrderItem",".btnViewOrderItem",".btnDeleteOrderItem"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddOrderItem",".btnEditOrderItem",".btnViewOrderItem",".btnDeleteOrderItem"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}