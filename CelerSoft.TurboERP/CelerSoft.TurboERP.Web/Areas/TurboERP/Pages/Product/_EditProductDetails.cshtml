@using Models
@model ProductViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.ItemId" class="form-label fieldrequired"><strong>@Localizer["Item"] :</strong></label>
            <select asp-for="@Model.ItemId" class="form-control" asp-items="@(dropdownService.GetItemList(Model.ItemId))"><option value="">- Select Item -</option></select>
            <span asp-validation-for="@Model.ItemId" class="text-danger"></span>

        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.BrandId" class="form-label "><strong>@Localizer["Brand"] :</strong></label>
            <select asp-for="@Model.BrandId" class="form-control" asp-items="@(dropdownService.GetBrandList(Model.BrandId))"><option value="">- Select Brand -</option></select>
            <span asp-validation-for="@Model.BrandId" class="text-danger"></span>

        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Model" class="form-label "><strong>@Localizer["Model"] :</strong></label>
            <input asp-for="@Model.Model" class="form-control" maxlength="255" />
            <span asp-validation-for="@Model.Model" class="text-danger"></span>

        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label "><strong>@Localizer["Description"] :</strong></label>
            <input asp-for="@Model.Description" class="form-control" maxlength="255" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>

        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.MinimumQuantity" class="form-label "><strong>@Localizer["Minimum Quantity"] :</strong></label>
            <input asp-for="@Model.MinimumQuantity" class="form-control" />
            <span asp-validation-for="@Model.MinimumQuantity" class="text-danger"></span>

        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.BarcodeNumber" class="form-label "><strong>@Localizer["Barcode Number"] :</strong></label>
            <input asp-for="@Model.BarcodeNumber" class="form-control" maxlength="450" readonly />
            <span asp-validation-for="@Model.BarcodeNumber" class="text-danger"></span>

        </div>
    </div>

</div>
