@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Product"];
    ViewData["ActiveMainPage"] = "Product";
    ViewData["Level1"] = "TurboERP";
}
<form id="product-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Product" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
        <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Cancel"]"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-success" title="@Localizer["Save changes"]" style="color:#fff;"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_ProductImageListValidationPartial" model="@Model.Product" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeProductImageFieldValidations($('#ProductImageCount').val());
			$('.RemoveProductImageButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveProductImage');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#product-form', InitializeForm);
			});

			$('#btnAddProductImage').on( 'click', function () {
				$('#AsyncAction').val('AddProductImage');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#product-form', InitializeForm);
			});

			$.fn.brandSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Brand/Index", new { area = "TurboERP", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#BrandId").brandSelect();

			$.fn.itemSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Item/Index", new { area = "TurboERP", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#ItemId").itemSelect();

		}	
		InitializeForm();
    });
</script>
}