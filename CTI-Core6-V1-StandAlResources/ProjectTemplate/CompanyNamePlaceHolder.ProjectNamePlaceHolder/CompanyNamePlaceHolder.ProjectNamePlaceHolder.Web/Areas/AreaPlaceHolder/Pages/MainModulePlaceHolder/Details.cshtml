@page
@model DetailsModel
@{
    ViewData["Title"] = Localizer["View MainModuleDescriptionPlaceHolder"];
    ViewData["ActiveMainPage"] = "MainModulePlaceHolder";
    ViewData["Level1"] = "AreaPlaceHolder";
}
<div class="row" id="mainModulePlaceHolder-container">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["MainModulePlaceHolder Info"]</h5>
                    </button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" id="PartialLoaderContainer">
				<partial name="_InputFieldsPartial" model="Model.MainModulePlaceHolder" />
			</div>
        </div>
    </div>
	Template:[InsertNewSubDetailPartialPage]
</div>
<div class="row">
    <div class="col-12">
        <p>
            <a asp-page="Index" class="btn btn-secondary">@Localizer["Close"]</a>
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MainModulePlaceHolder.Create)).Succeeded)
            {
                <a asp-page="Add" class="btn btn-success">@Localizer["Add"]</a>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MainModulePlaceHolder.Edit)).Succeeded)
            {
                <a asp-page="Edit" asp-route-id="@Model.MainModulePlaceHolder.Id" class="btn btn-primary">@Localizer["Edit"]</a>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MainModulePlaceHolder.Delete)).Succeeded)
            {
                <a asp-page="Delete" asp-route-id="@Model.MainModulePlaceHolder.Id" class="btn btn-danger">@Localizer["Delete"]</a>
            }
        </p>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DisableFieldsPartial" model="@("mainModulePlaceHolder-container")" />
}