@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Tag List"];
    ViewData["ActiveMainPage"] = "TaskTag";
    ViewData["Level1"] = "DSF";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="taskTag" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Task Master"]
							</th>
							<th>
								@Localizer["Tag"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
<div id="BatchUploadPartialContainer">
    <partial name="_BatchUpload" model="Model.BatchUpload" />
</div>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#taskTag').DataTable({
            select: false,
            serverSide: true,
            order: [[ 2, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/TaskTag/Index", new { area = "DSF", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "taskMasterId", name: "TaskMasterId", responsivePriority: 1, title: '@Localizer["Task Master"]', searchable: false },
				{ data: "tagId", name: "TagId", responsivePriority: 1, title: '@Localizer["Tag"]', searchable: false },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/TaskTag/Details", new { area = "DSF" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewTaskTag" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.TaskTag.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/TaskTag/Edit", new { area = "DSF" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditTaskTag" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.TaskTag.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/TaskTag/Delete", new { area = "DSF" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteTaskTag" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders"></i></a>';
                    </text>
                }
				  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.TaskTag.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/TaskTag/Add", new { area = "DSF" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
		@if ((await AuthorizationService.AuthorizeAsync(User, Permission.TaskTag.Upload)).Succeeded)
        {
            <text>
                {
                    text: 'Download Template',
                    action: function () {
                        // Trigger the hidden file input
                        $('#download-template-form').submit();   
                    },
                    className: 'btn btn-secondary text-light',
                },
            </text>
        }
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.TaskTag.Upload)).Succeeded)
        {
            <text>
                {
                    text: 'Upload',
                    action: function () {
                        // Trigger the hidden file input
                        $('#btnBatchUpload').click();
                    },
                    className: 'btn btn-info text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#taskTag tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddTaskTag",".btnEditTaskTag",".btnViewTaskTag",".btnDeleteTaskTag"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddTaskTag",".btnEditTaskTag",".btnViewTaskTag",".btnDeleteTaskTag"]);
        $.EnableNavbarSearch(table);
		$('#btnBatchUpload').on('change', function (e) {
            $('#batch-upload-form').submit();          
        });
        @if (!string.IsNullOrEmpty(Model.BatchUpload.BatchUploadFileName))
        {
            <text>
                $('#btnDownloadBatchUploadTemplateLink')[0].click();             
            </text>
        }
    });
</script>
}