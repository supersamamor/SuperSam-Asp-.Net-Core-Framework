@using Models
@model HolidayViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.HolidayDate" class="form-label fieldrequired"><strong>@Localizer["Holiday Date"] :</strong></label>
			<input asp-for="@Model.HolidayDate" class="form-control"  />
			<span asp-validation-for="@Model.HolidayDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.HolidayName" class="form-label fieldrequired"><strong>@Localizer["Holiday Name"] :</strong></label>
			<input asp-for="@Model.HolidayName" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.HolidayName" class="text-danger"></span>
			
	</div>
</div>

</div>
