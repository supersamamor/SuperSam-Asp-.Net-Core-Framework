@using Models
@model ProjectHistoryViewModel

<div class="col-md-12">
	<label asp-for="@Model.ProjectId" class="fieldrequired"></label>
	<select asp-for="@Model.ProjectId" class="form-control" asp-items="@(dropdownService.GetProjectList(Model.ProjectId))"><option value="">- Select Project -</option></select>
	<span asp-validation-for="@Model.ProjectId" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ClientId" class="fieldrequired"></label>
	<select asp-for="@Model.ClientId" class="form-control" asp-items="@(dropdownService.GetClientList(Model.ClientId))"><option value="">- Select Client -</option></select>
	<span asp-validation-for="@Model.ClientId" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ProjectName" class="fieldrequired"></label>
	<input asp-for="@Model.ProjectName" class="form-control" maxlength="255" />
	<span asp-validation-for="@Model.ProjectName" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ProjectDescription" class="fieldrequired"></label>
	<input asp-for="@Model.ProjectDescription" class="form-control" maxlength="500" />
	<span asp-validation-for="@Model.ProjectDescription" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Logo" class=""></label>
	<input asp-for="@Model.LogoForm" class="file-upload-control" style="display:block" /> @if (!string.IsNullOrEmpty(Model.Logo)) { <div class="input-group col-md-12" style="padding-left:0px;padding-right:0px;margin-top:10px;"><input asp-for="@Model.Logo" class="form-control" readonly /><a href="/@WebConstants.UploadFilesPath/@Model.Logo" class="input-group-text" style="cursor:pointer;background:#28a745;color:#fff;font-weight:700;" target="_blank">@Localizer["View"]</a></div> }
	<span asp-validation-for="@Model.LogoForm" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ProjectGoals" class="fieldrequired"></label>
	<input asp-for="@Model.ProjectGoals" class="form-control" maxlength="500" />
	<span asp-validation-for="@Model.ProjectGoals" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Discount" class=""></label>
	<input asp-for="@Model.Discount" class="form-control"  />
	<span asp-validation-for="@Model.Discount" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.PricingTypeId" class="fieldrequired"></label>
	<select asp-for="@Model.PricingTypeId" class="form-control" asp-items="@(dropdownService.GetPricingTypeList(Model.PricingTypeId))"><option value="">- Select Pricing Type -</option></select>
	<span asp-validation-for="@Model.PricingTypeId" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.EnablePricing" class=""></label>
	<input asp-for="@Model.EnablePricing" class="custom-checkbox-label"/>
	<span asp-validation-for="@Model.EnablePricing" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Template" class=""></label>
	<input asp-for="@Model.Template" class="form-control"  />
	<span asp-validation-for="@Model.Template" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.RevisionSummary" class="fieldrequired"></label>
	<input asp-for="@Model.RevisionSummary" class="form-control" maxlength="400" />
	<span asp-validation-for="@Model.RevisionSummary" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.DocumentCode" class="fieldrequired"></label>
	<input asp-for="@Model.DocumentCode" class="form-control" maxlength="50" />
	<span asp-validation-for="@Model.DocumentCode" class="text-danger"></span>
	
</div>

