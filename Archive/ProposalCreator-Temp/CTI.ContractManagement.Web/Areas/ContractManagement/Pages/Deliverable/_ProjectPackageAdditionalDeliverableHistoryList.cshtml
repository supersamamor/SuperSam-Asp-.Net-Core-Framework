@using Models
@model DeliverableViewModel
<input type="hidden" id="ProjectPackageAdditionalDeliverableHistoryCount" value="@Model?.ProjectPackageAdditionalDeliverableHistoryList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Project Package Additional Deliverable History"]</h5>
                    </button>
                    <button type="button" id="btnAddProjectPackageAdditionalDeliverableHistory" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveProjectPackageAdditionalDeliverableHistory" value="RemoveProjectPackageAdditionalDeliverableHistory" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="projectPackageAdditionalDeliverableHistory" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
							<th style="display:none;"></th>
                            <th>
								@Localizer["Project Package"]
							</th>
							<th>
								@Localizer["Sequence"]
							</th>
							
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProjectPackageAdditionalDeliverableHistoryList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ProjectPackageAdditionalDeliverableHistoryList)
                            {
                                <tr>
									<td style="display:none;">
                                        <input type="hidden" name="ProjectPackageAdditionalDeliverableHistoryList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ProjectPackageAdditionalDeliverableHistoryList[@counter].DeliverableId" value="@item.DeliverableId" />                                      
                                    </td>
                                    <td>
										<select asp-for="@item.ProjectPackageHistoryId" id="ProjectPackageAdditionalDeliverableHistoryList_@(counter)_ProjectPackageHistoryId" name="ProjectPackageAdditionalDeliverableHistoryList[@counter].ProjectPackageHistoryId" class="form-control SelectProjectPackageHistory" asp-items="@(dropdownService.GetProjectPackageHistoryList(item.ProjectPackageHistoryId))" >
											<option value="">- Select Project Package -</option>
										</select>
										<span data-valmsg-for="ProjectPackageAdditionalDeliverableHistoryList[@counter].ProjectPackageHistoryId" asp-validation-for="@item.ProjectPackageHistoryId" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Sequence" name="ProjectPackageAdditionalDeliverableHistoryList[@counter].Sequence" class="form-control"  />
										<span data-valmsg-for="ProjectPackageAdditionalDeliverableHistoryList[@counter].Sequence" asp-validation-for="@item.Sequence" class="text-danger"></span>
										
									</td>
									
                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveProjectPackageAdditionalDeliverableHistoryButton cancel" title="@Localizer["Remove ProjectPackageAdditionalDeliverableHistory"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
