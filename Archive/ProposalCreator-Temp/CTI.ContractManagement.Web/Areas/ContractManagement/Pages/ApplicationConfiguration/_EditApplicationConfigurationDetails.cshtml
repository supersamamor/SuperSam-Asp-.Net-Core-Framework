@using Models
@model ApplicationConfigurationViewModel

<div class="col-md-12">
	<label asp-for="@Model.Logo" class="fieldrequired"></label>
	<input asp-for="@Model.LogoForm" class="file-upload-control" style="display:block" /> @if (!string.IsNullOrEmpty(Model.Logo)) { <div class="input-group col-md-12" style="padding-left:0px;padding-right:0px;margin-top:10px;"><input asp-for="@Model.Logo" class="form-control" readonly /><a href="/@WebConstants.UploadFilesPath/@Model.Logo" class="input-group-text" style="cursor:pointer;background:#28a745;color:#fff;font-weight:700;" target="_blank">@Localizer["View"]</a></div> }
	<span asp-validation-for="@Model.LogoForm" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.AddressLineOne" class="fieldrequired"></label>
	<input asp-for="@Model.AddressLineOne" class="form-control" maxlength="400" />
	<span asp-validation-for="@Model.AddressLineOne" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.AddressLineTwo" class=""></label>
	<input asp-for="@Model.AddressLineTwo" class="form-control" maxlength="400" />
	<span asp-validation-for="@Model.AddressLineTwo" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.OrganizationOverview" class="fieldrequired"></label>
	<input asp-for="@Model.OrganizationOverview" class="form-control"  />
	<span asp-validation-for="@Model.OrganizationOverview" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.DocumentFooter" class="fieldrequired"></label>
	<input asp-for="@Model.DocumentFooter" class="form-control"  />
	<span asp-validation-for="@Model.DocumentFooter" class="text-danger"></span>
	
</div>

