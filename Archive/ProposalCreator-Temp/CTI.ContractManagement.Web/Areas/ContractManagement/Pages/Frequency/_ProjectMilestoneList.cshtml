@using Models
@model FrequencyViewModel
<input type="hidden" id="ProjectMilestoneCount" value="@Model?.ProjectMilestoneList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Project Milestone"]</h5>
                    </button>
                    <button type="button" id="btnAddProjectMilestone" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveProjectMilestone" value="RemoveProjectMilestone" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="projectMilestone" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
							<th style="display:none;"></th>
                            <th>
								@Localizer["Project"]
							</th>
							<th>
								@Localizer["Milestone Stage"]
							</th>
							<th>
								@Localizer["Sequence"]
							</th>
							<th>
								@Localizer["Quantity"]
							</th>
							
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProjectMilestoneList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ProjectMilestoneList)
                            {
                                <tr>
									<td style="display:none;">
                                        <input type="hidden" name="ProjectMilestoneList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ProjectMilestoneList[@counter].FrequencyId" value="@item.FrequencyId" />                                      
                                    </td>
                                    <td>
										<select asp-for="@item.ProjectId" id="ProjectMilestoneList_@(counter)_ProjectId" name="ProjectMilestoneList[@counter].ProjectId" class="form-control SelectProject" asp-items="@(dropdownService.GetProjectList(item.ProjectId))" >
											<option value="">- Select Project -</option>
										</select>
										<span data-valmsg-for="ProjectMilestoneList[@counter].ProjectId" asp-validation-for="@item.ProjectId" class="text-danger"></span>
										
									</td>
									<td>
										<select asp-for="@item.MilestoneStageId" id="ProjectMilestoneList_@(counter)_MilestoneStageId" name="ProjectMilestoneList[@counter].MilestoneStageId" class="form-control SelectMilestoneStage" asp-items="@(dropdownService.GetMilestoneStageList(item.MilestoneStageId))" >
											<option value="">- Select Milestone Stage -</option>
										</select>
										<span data-valmsg-for="ProjectMilestoneList[@counter].MilestoneStageId" asp-validation-for="@item.MilestoneStageId" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Sequence" name="ProjectMilestoneList[@counter].Sequence" class="form-control"  />
										<span data-valmsg-for="ProjectMilestoneList[@counter].Sequence" asp-validation-for="@item.Sequence" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.FrequencyQuantity" name="ProjectMilestoneList[@counter].FrequencyQuantity" class="form-control"  />
										<span data-valmsg-for="ProjectMilestoneList[@counter].FrequencyQuantity" asp-validation-for="@item.FrequencyQuantity" class="text-danger"></span>
										
									</td>
									
                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveProjectMilestoneButton cancel" title="@Localizer["Remove ProjectMilestone"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
