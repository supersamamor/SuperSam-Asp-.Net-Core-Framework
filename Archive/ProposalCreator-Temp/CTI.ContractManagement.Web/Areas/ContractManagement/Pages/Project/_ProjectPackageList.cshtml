@using Models
@model ProjectViewModel
<input type="hidden" id="ProjectPackageCount" value="@Model?.ProjectPackageList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Project Package"]</h5>
                    </button>
                    <button type="button" id="btnAddProjectPackage" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveProjectPackage" value="RemoveProjectPackage" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="projectPackage" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
							<th style="display:none;"></th>
                            <th>
								@Localizer["Option"]
							</th>
							<th>
								@Localizer["Amount"]
							</th>
							
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProjectPackageList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ProjectPackageList)
                            {
                                <tr>
									<td style="display:none;">
                                        <input type="hidden" name="ProjectPackageList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ProjectPackageList[@counter].ProjectId" value="@item.ProjectId" />                                      
                                    </td>
                                    <td>
										<input  asp-for="@item.OptionNumber" name="ProjectPackageList[@counter].OptionNumber" class="form-control"  />
										<span data-valmsg-for="ProjectPackageList[@counter].OptionNumber" asp-validation-for="@item.OptionNumber" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Amount" name="ProjectPackageList[@counter].Amount" class="form-control"  />
										<span data-valmsg-for="ProjectPackageList[@counter].Amount" asp-validation-for="@item.Amount" class="text-danger"></span>
										
									</td>
									
                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveProjectPackageButton cancel" title="@Localizer["Remove ProjectPackage"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
