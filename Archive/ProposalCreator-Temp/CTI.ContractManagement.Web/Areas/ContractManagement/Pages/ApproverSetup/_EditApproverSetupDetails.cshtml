@using Models
@model ApproverSetupViewModel

<div class="col-md-12">
    <label asp-for="@Model.TableName" class="fieldrequired"></label>
    <select asp-for="@Model.TableName" class="form-control" asp-items="@CTI.ContractManagement.Core.ContractManagement.ApprovalModule.ApprovalTableList.Select(l => new SelectListItem { Value = l, Text = l })">
        <option value="">- Select Table Name -</option>
    </select>
    <span asp-validation-for="@Model.TableName" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="@Model.ApprovalType" class="fieldrequired"></label>
    <select asp-for="@Model.ApprovalType" class="form-control" asp-items="@CTI.ContractManagement.Core.ContractManagement.ApprovalTypes.ApprovalTypeList.Select(l => new SelectListItem { Value = l, Text = l })">
        <option value="">- Select Approval Type -</option>
    </select>
    <span asp-validation-for="@Model.ApprovalType" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="@Model.EmailSubject" class="fieldrequired"></label>
    <input asp-for="@Model.EmailSubject" class="form-control" />
    <span asp-validation-for="@Model.EmailSubject" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="@Model.EmailBody" class="fieldrequired"></label>
    <textarea asp-for="@Model.EmailBody" class="form-control" rows=8 ></textarea>
    <span asp-validation-for="@Model.EmailBody" class="text-danger"></span>
</div>

