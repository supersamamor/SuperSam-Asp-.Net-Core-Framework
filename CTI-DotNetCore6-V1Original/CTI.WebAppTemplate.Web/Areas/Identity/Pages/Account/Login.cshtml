@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}

<p class="login-box-msg">Sign in to start your session</p>
<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="input-group mb-3">
            <input asp-for="Input!.Email" class="form-control" placeholder="Email">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <small><span asp-validation-for="Input!.Email" class="text-danger"></span></small>
    </div>
    <div class="form-group">
        <div class="input-group mb-3">
            <input asp-for="Input!.Password" class="form-control" placeholder="Password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <small><span asp-validation-for="Input!.Password" class="text-danger"></span></small>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input asp-for="Input!.RememberMe">
                <label asp-for="Input!.RememberMe">
                    Remember Me
                </label>
            </div>
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
    </div>
</form>
<div class="social-auth-links text-center mt-2 mb-3">
    <p>- OR -</p>
    <form id="microsoft-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <input type="hidden" name="provider" value="Microsoft">
        <input type="image" id="BtnLoginMicrosoft" src="~/img/ms_signin_dark.png" alt="Sign in using Microsoft">
    </form>
    <form id="google-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <input type="hidden" name="provider" value="Google">
        <input type="image" id="BtnLoginGoogle" src="~/img/google_signin_dark.png" alt="Sign in using Google">
    </form>
</div>
<p class="mb-1">
    <a id="forgot-password" asp-page="./ForgotPassword">I forgot my password</a>
</p>
<p class="mb-0">
    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
</p>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}