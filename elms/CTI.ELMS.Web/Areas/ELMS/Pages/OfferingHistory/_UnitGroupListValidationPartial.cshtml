@using Models
@model OfferingHistoryViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeUnitGroupFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "UnitGroupList[" + idx + "].UnitsInformation", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Units Information"});
				reqs.push({name: "UnitGroupList[" + idx + "].LotArea", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Lot Area"});
				reqs.push({name: "UnitGroupList[" + idx + "].BasicFixedMonthlyRent", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Basic Fixed"});
				reqs.push({name: "UnitGroupList[" + idx + "].OfferingHistoryID", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Offering History"});
				reqs.push({name: "UnitGroupList[" + idx + "].UnitOfferedHistoryID", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Unit Offered"});
				reqs.push({name: "UnitGroupList[" + idx + "].IsFixedMonthlyRent", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Is Fixed"});
				reqs.push({name: "UnitGroupList[" + idx + "].AreaTypeDescription", el: "Input", minlength:0, maxlength:50, isrequired: true, description: "Area Type"});
				
			}
			let validator = $("#offeringHistory-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>