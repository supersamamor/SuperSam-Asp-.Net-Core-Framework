@using Models
@model OfferingViewModel
<input type="hidden" id="UnitOfferedHistoryCount" value="@Model?.UnitOfferedHistoryList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["Unit Offered History"]</span>
        <a id="btnAddUnitOfferedHistory" class="btn btnMaterial btn-flat primary semicircle cancel" title="@Localizer["Add"]"><i class="fas fa-plus" style="font-size:18px;"></i></a>
        <button class="cancel" type="button" id="btnRemoveUnitOfferedHistory" value="RemoveUnitOfferedHistory" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
								@Localizer["Unit"]
							</th>
							<th>
								@Localizer["Lot Budget"]
							</th>
							<th>
								@Localizer["Lot Area"]
							</th>
							<th>
								@Localizer["Offering History"]
							</th>
							<th>
								@Localizer["Basic Fixed"]
							</th>
							<th>
								@Localizer["Percentage Rent"]
							</th>
							<th>
								@Localizer["Minimum Monthly"]
							</th>
							<th>
								@Localizer["Annual Increment"]
							</th>
							<th>
								@Localizer["Annual Increment"]
							</th>
							<th>
								@Localizer["Is Fixed"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.UnitOfferedHistoryList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.UnitOfferedHistoryList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="UnitOfferedHistoryList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="UnitOfferedHistoryList[@counter].OfferingID" value="@item.OfferingID" />
                            </td>
                            <td>
										<select asp-for="@item.UnitID" id="UnitOfferedHistoryList_@(counter)_UnitID" name="UnitOfferedHistoryList[@counter].UnitID" class="form-control SelectUnit" asp-items="@(dropdownService.GetUnitList(item.UnitID))" >
											<option value="">- Select Unit -</option>
										</select>
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].UnitID" asp-validation-for="@item.UnitID" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.LotBudget" name="UnitOfferedHistoryList[@counter].LotBudget" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].LotBudget" asp-validation-for="@item.LotBudget" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.LotArea" name="UnitOfferedHistoryList[@counter].LotArea" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].LotArea" asp-validation-for="@item.LotArea" class="text-danger"></span>
										
									</td>
									<td>
										<select asp-for="@item.OfferingHistoryID" id="UnitOfferedHistoryList_@(counter)_OfferingHistoryID" name="UnitOfferedHistoryList[@counter].OfferingHistoryID" class="form-control SelectOfferingHistory" asp-items="@(dropdownService.GetOfferingHistoryList(item.OfferingHistoryID))" >
											<option value="">- Select Offering History -</option>
										</select>
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].OfferingHistoryID" asp-validation-for="@item.OfferingHistoryID" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.BasicFixedMonthlyRent" name="UnitOfferedHistoryList[@counter].BasicFixedMonthlyRent" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].BasicFixedMonthlyRent" asp-validation-for="@item.BasicFixedMonthlyRent" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.PercentageRent" name="UnitOfferedHistoryList[@counter].PercentageRent" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].PercentageRent" asp-validation-for="@item.PercentageRent" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.MinimumMonthlyRent" name="UnitOfferedHistoryList[@counter].MinimumMonthlyRent" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].MinimumMonthlyRent" asp-validation-for="@item.MinimumMonthlyRent" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.AnnualIncrement" name="UnitOfferedHistoryList[@counter].AnnualIncrement" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].AnnualIncrement" asp-validation-for="@item.AnnualIncrement" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.AnnualIncrementInformation" name="UnitOfferedHistoryList[@counter].AnnualIncrementInformation" class="form-control"  />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].AnnualIncrementInformation" asp-validation-for="@item.AnnualIncrementInformation" class="text-danger"></span>
										
									</td>
									<td>
										<input asp-for="@item.IsFixedMonthlyRent" name="UnitOfferedHistoryList[@counter].IsFixedMonthlyRent" class="form-control" />
										<span data-valmsg-for="UnitOfferedHistoryList[@counter].IsFixedMonthlyRent" asp-validation-for="@item.IsFixedMonthlyRent" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveUnitOfferedHistoryButton" title="@Localizer["Remove UnitOfferedHistory"]" removeId="@(item.Id)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
