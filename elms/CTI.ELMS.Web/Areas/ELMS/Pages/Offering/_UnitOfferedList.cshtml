@using Models
@model OfferingViewModel
<input type="hidden" id="UnitOfferedCount" value="@Model?.UnitOfferedList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["Unit Offered"]</span>
        <a id="btnAddUnitOffered" class="btn btnMaterial btn-flat primary semicircle cancel" title="@Localizer["Add"]"><i class="fas fa-plus" style="font-size:18px;"></i></a>
        <button class="cancel" type="button" id="btnRemoveUnitOffered" value="RemoveUnitOffered" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
								@Localizer["Lot Budget"]
							</th>
							<th>
								@Localizer["Lot Area"]
							</th>
							<th>
								@Localizer["Unit"]
							</th>
							<th>
								@Localizer["Basic Fixed"]
							</th>
							<th>
								@Localizer["Percentage Rent"]
							</th>
							<th>
								@Localizer["Minimum Monthly"]
							</th>
							<th>
								@Localizer["Annual Increment"]
							</th>
							<th>
								@Localizer["Annual Increment"]
							</th>
							<th>
								@Localizer["Is Fixed"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.UnitOfferedList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.UnitOfferedList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="UnitOfferedList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="UnitOfferedList[@counter].OfferingID" value="@item.OfferingID" />
                            </td>
                            <td>
										<input  asp-for="@item.LotBudget" name="UnitOfferedList[@counter].LotBudget" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].LotBudget" asp-validation-for="@item.LotBudget" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.LotArea" name="UnitOfferedList[@counter].LotArea" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].LotArea" asp-validation-for="@item.LotArea" class="text-danger"></span>
										
									</td>
									<td>
										<select asp-for="@item.UnitID" id="UnitOfferedList_@(counter)_UnitID" name="UnitOfferedList[@counter].UnitID" class="form-control SelectUnit" asp-items="@(dropdownService.GetUnitList(item.UnitID))" >
											<option value="">- Select Unit -</option>
										</select>
										<span data-valmsg-for="UnitOfferedList[@counter].UnitID" asp-validation-for="@item.UnitID" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.BasicFixedMonthlyRent" name="UnitOfferedList[@counter].BasicFixedMonthlyRent" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].BasicFixedMonthlyRent" asp-validation-for="@item.BasicFixedMonthlyRent" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.PercentageRent" name="UnitOfferedList[@counter].PercentageRent" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].PercentageRent" asp-validation-for="@item.PercentageRent" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.MinimumMonthlyRent" name="UnitOfferedList[@counter].MinimumMonthlyRent" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].MinimumMonthlyRent" asp-validation-for="@item.MinimumMonthlyRent" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.AnnualIncrement" name="UnitOfferedList[@counter].AnnualIncrement" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].AnnualIncrement" asp-validation-for="@item.AnnualIncrement" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.AnnualIncrementInformation" name="UnitOfferedList[@counter].AnnualIncrementInformation" class="form-control"  />
										<span data-valmsg-for="UnitOfferedList[@counter].AnnualIncrementInformation" asp-validation-for="@item.AnnualIncrementInformation" class="text-danger"></span>
										
									</td>
									<td>
										<input asp-for="@item.IsFixedMonthlyRent" name="UnitOfferedList[@counter].IsFixedMonthlyRent" class="form-control" />
										<span data-valmsg-for="UnitOfferedList[@counter].IsFixedMonthlyRent" asp-validation-for="@item.IsFixedMonthlyRent" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveUnitOfferedButton" title="@Localizer["Remove UnitOffered"]" removeId="@(item.Id)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
