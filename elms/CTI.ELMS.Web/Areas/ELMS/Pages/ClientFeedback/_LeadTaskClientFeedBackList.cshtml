@using Models
@model ClientFeedbackViewModel
<input type="hidden" id="LeadTaskClientFeedBackCount" value="@Model?.LeadTaskClientFeedBackList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["Lead Task / Client Feedback Setup"]</span>
        <a id="btnAddLeadTaskClientFeedBack" class="btn btnMaterial btn-flat primary semicircle cancel" title="@Localizer["Add"]"><i class="fas fa-plus" style="font-size:18px;"></i></a>
        <button class="cancel" type="button" id="btnRemoveLeadTaskClientFeedBack" value="RemoveLeadTaskClientFeedBack" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
								@Localizer["Lead Task"]
							</th>
							<th>
								@Localizer["Activity Status"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.LeadTaskClientFeedBackList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.LeadTaskClientFeedBackList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="LeadTaskClientFeedBackList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="LeadTaskClientFeedBackList[@counter].ClientFeedbackId" value="@item.ClientFeedbackId" />
                            </td>
                            <td>
										<select asp-for="@item.LeadTaskId" id="LeadTaskClientFeedBackList_@(counter)_LeadTaskId" name="LeadTaskClientFeedBackList[@counter].LeadTaskId" class="form-control SelectLeadTask" asp-items="@(dropdownService.GetLeadTaskList(item.LeadTaskId))" >
											<option value="">- Select Lead Task -</option>
										</select>
										<span data-valmsg-for="LeadTaskClientFeedBackList[@counter].LeadTaskId" asp-validation-for="@item.LeadTaskId" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.ActivityStatus" name="LeadTaskClientFeedBackList[@counter].ActivityStatus" class="form-control" maxlength="25" />
										<span data-valmsg-for="LeadTaskClientFeedBackList[@counter].ActivityStatus" asp-validation-for="@item.ActivityStatus" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveLeadTaskClientFeedBackButton" title="@Localizer["Remove LeadTaskClientFeedBack"]" removeId="@(item.Id)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
