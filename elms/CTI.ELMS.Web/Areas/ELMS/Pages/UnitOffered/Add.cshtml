@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Unit Offered"];
    ViewData["ActiveMainPage"] = "UnitOffered";
    ViewData["Level1"] = "ELMS";
}
<form id="unitOffered-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.UnitOffered" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
        <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Cancel"]"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-success" title="@Localizer["Save changes"]" style="color:#fff;"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_AnnualIncrementListValidationPartial" model="@Model.UnitOffered" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeAnnualIncrementFieldValidations($('#AnnualIncrementCount').val());
			$('.RemoveAnnualIncrementButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveAnnualIncrement');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#unitOffered-form', InitializeForm);
			});

			$('#btnAddAnnualIncrement').on( 'click', function () {
				$('#AsyncAction').val('AddAnnualIncrement');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#unitOffered-form', InitializeForm);
			});

			$.fn.unitSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Unit/Index", new { area = "ELMS", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#UnitID").unitSelect();

			$.fn.offeringSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Offering/Index", new { area = "ELMS", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#OfferingID").offeringSelect();

		}	
		InitializeForm();
    });
</script>
}