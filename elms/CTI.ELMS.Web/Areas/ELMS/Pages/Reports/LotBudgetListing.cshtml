<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#report-table').DataTable({
            select: false,
            serverSide: true,
            order: [[ 1, 'asc' ]],
            ajax:
            {
                url: '@Url.Page("/Reports/LotBudgetListing", new { area = "ELMS", handler = "ListAll" })',
                type: "POST",
                data: function(d) {
                     d.projectId = $("#ProjectFilter").val();
                },
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
            initComplete: function( settings, json ) {

            },
            columns: [
                { data: "projectName", name: "Project.ProjectName", responsivePriority: 1, title: '@Localizer["Project Name"]', searchable: true },
                { data: "unitNo", name: "Unit.UnitNo", responsivePriority: 1, title: '@Localizer["Unit No"]', searchable: true },
                { data: "january", name: "January", responsivePriority: 1, title: '@Localizer["January"]', searchable: false },
                { data: "february", name: "February", responsivePriority: 1, title: '@Localizer["February"]', searchable: false },
                { data: "march", name: "March", responsivePriority: 1, title: '@Localizer["March"]', searchable: false },
                { data: "april", name: "April", responsivePriority: 1, title: '@Localizer["April"]', searchable: false },
                { data: "may", name: "May", responsivePriority: 1, title: '@Localizer["May"]', searchable: false },
                { data: "june", name: "June", responsivePriority: 1, title: '@Localizer["June"]', searchable: false },
                { data: "july", name: "July", responsivePriority: 1, title: '@Localizer["July"]', searchable: false },
                { data: "august", name: "August", responsivePriority: 1, title: '@Localizer["August"]', searchable: false },
                { data: "september", name: "September", responsivePriority: 1, title: '@Localizer["September"]', searchable: false },
                { data: "october", name: "October", responsivePriority: 1, title: '@Localizer["October"]', searchable: false },
                { data: "november", name: "November", responsivePriority: 1, title: '@Localizer["November"]', searchable: false },
                { data: "december", name: "December", responsivePriority: 1, title: '@Localizer["December"]', searchable: false },
                { data: "lotArea", name: "Unit.LotArea", responsivePriority: 1, title: '@Localizer["Lot Area"]', searchable: false },
                { data: "year", name: "Year", responsivePriority: 1, title: '@Localizer["Year"]', searchable: false },
                { data: "location", name: "Location", responsivePriority: 1, title: '@Localizer["Level"]', searchable: true },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
               'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search
        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
        //Pop-up for Report
        function reportModalPopUp() {          
            var url = '@Url.Page("/Reports/LotBudgetListing", new { area = "ELMS" })' + '?handler=PreviewReport&projectId=' + $("#ProjectFilter").val();
            var title = "Report Preview";
            openModal(url, title, null);
        }
        //Start Code for generating project list dropdown
        $.fn.DataTable.PrepareDataTableStyleForFilters("report-table");
        $.fn.DataTable.AddDropdownFilter(table,"report-table","ProjectFilter","Project",'@Url.Page("/Project/Index", new { area = "ELMS", handler = "Select2Data" })');
        $.fn.DataTable.AddButton("report-table", "GenerateReport", reportModalPopUp);
    });
</script>
}