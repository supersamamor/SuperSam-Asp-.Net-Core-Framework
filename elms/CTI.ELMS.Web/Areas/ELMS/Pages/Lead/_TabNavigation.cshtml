        }
        else
        {
            <li class="nav-item"><a class="nav-link" style="cursor:pointer;background:#ddd;">@Localizer["Offerings"]</a></li>
        }
    }
    @if (Model.TabName == "Award Notice")
    {
        <li class="nav-item"><a class="nav-link active" style="cursor:pointer;">@Localizer["Award Notice"]</a></li>
    }
