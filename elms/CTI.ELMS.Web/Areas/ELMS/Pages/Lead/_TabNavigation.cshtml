    {
        if ((await AuthorizationService.AuthorizeAsync(User, Permission.AwardNotice.View)).Succeeded)
        {
            <li class="nav-item"><a class="nav-link" href="AwardNoticeList?LeadId=@(Model.LeadId)&LeadName=@Model.LeadName" style="cursor:pointer;">@Localizer["Award Notice"]</a></li>
        }
        else
        {
            <li class="nav-item"><a class="nav-link" style="cursor:pointer;background:#ddd;">@Localizer["Award Notice"]</a></li>
        }
    }
    @if (Model.TabName == "Lease Contract")
