@page
@model DetailsModel
@{
    ViewData["Title"] = Localizer["View Prospects"];
    ViewData["ActiveMainPage"] = "Lead";
    ViewData["Level1"] = "ELMS";
}
<div class="card">
    <div class="card-header">
        <partial name="_TabNavigation" model="@Model.LeadTabNavigation" />
    </div>
    <div class="card-body">
        <form id="lead-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.RemoveSubDetailId" />
            <input type="hidden" asp-for="@Model.AsyncAction" />
            <div id="PartialLoaderContainer">
                <partial name="_InputFieldsPartial" model="Model.Lead" />
            </div>
            <div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
                <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Close"]"><i class="fas fa-ban"></i></a>
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Lead.Create)).Succeeded)
                {
                    <a asp-page="Add" class="btn btn-success" title="@Localizer["Add"]" style="color:#fff;"><i class="fas fa-plus"></i></a>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Lead.Edit)).Succeeded)
                {
                    <a asp-page="Edit" asp-route-id="@Model.Lead.Id" class="btn btn-primary" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>
                }
            </div>
        </form>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DisableFieldsPartial" model="@("PartialLoaderContainer")" />
<partial name="_BusinessNatureScripts" />
<partial name="_AddressScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
         $.bindBusinessNatureDropdown("#BusinessNatureID","#BusinessNatureSubItemID","#BusinessNatureSubItemIDSelected","#BusinessNatureCategoryID","#BusinessNatureCategoryIDSelected");
         $.bindAddressDropdown("#Province","#City","#CitySelected");
    });
</script>
}