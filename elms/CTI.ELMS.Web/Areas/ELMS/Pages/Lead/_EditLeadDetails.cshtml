@using Models
@model LeadViewModel
<div class="row">
    <div class="col-xs-12 col-sm-8 col-lg-8 pull-left">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="card">
                <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["Prospect Details"]</span><br></h5>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
                        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                            <div class="mb-3">
                                <label asp-for="@Model.Brand" class="form-label fieldrequired"><strong>@Localizer["Brand"] :</strong></label>
                                <input asp-for="@Model.Brand" class="form-control" maxlength="255" />
                                <span asp-validation-for="@Model.Brand" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                            <div class="mb-3">
                                <label asp-for="@Model.ClientType" class="form-label fieldrequired"><strong>@Localizer["Type"] :</strong></label>
                                <select asp-for="@Model.ClientType" class="form-control select2" asp-items="@(dropdownService.ClientTypes())"><option value="">- Select Client Type -</option></select>
                                <span asp-validation-for="@Model.ClientType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4" style="padding-top:40px;">
                            <div class="mb-3">
                                <label asp-for="@Model.IsFranchise" class="form-label "><strong>@Localizer["Franchise"] :</strong></label>
                                <input asp-for="@Model.IsFranchise" class="custom-checkbox-label" />
                                <span asp-validation-for="@Model.IsFranchise" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 col-xxl-6">
                            <div class="mb-3">
                                <label asp-for="@Model.Company" class="form-label fieldrequired"><strong>@Localizer["Registered Name"] :</strong></label>
                                <input asp-for="@Model.Company" class="form-control" maxlength="255" />
                                <span asp-validation-for="@Model.Company" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 col-xxl-6">
                            <div class="mb-3">
                                <label asp-for="@Model.TINNumber" class="form-label "><strong>@Localizer["TIN No."] :</strong></label>
                                <input asp-for="@Model.TINNumber" class="form-control TinNumber" maxlength="20" />
                                <span asp-validation-for="@Model.TINNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-top:10px;">
            <partial name="_ContactPersonList" model="Model" />
        </div>

        <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-top:10px;margin-bottom:10px;">
            <div class="card">
                <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["Address"]</span><br></h5>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
                        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                            <div class="mb-3">
                                <label asp-for="@Model.Country" class="form-label fieldrequired"><strong>@Localizer["Country"] :</strong></label>
                                <select asp-for="@Model.Country"
                                        asp-items="@(await dropdownService.GetCountryList())"
                                        class="form-control select2">
                                    <option value="">@Localizer["- Select a Country -"]</option>
                                </select>
                                <span asp-validation-for="@Model.Country" class="text-danger"></span>
                            </div>
                        </div>
                        @if (Model.Country == WebConstants.CountryPhilippines)
                        {
                            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.Province" class="form-label "><strong>@Localizer["Province"] :</strong></label>
                                    <select asp-for="@Model.Province"
                                        asp-items="@(await dropdownService.GetProvinceList())"
                                        class="form-control select2">
                                        <option value="">@Localizer["- Select a Province -"]</option>
                                    </select>
                                    <span asp-validation-for="@Model.Province" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.City" class="form-label "><strong>@Localizer["City/Municipality"] :</strong></label>
                                    <select asp-for="@Model.City"
                                        class="form-control">
                                        <option value="">@Localizer["- Select a City/Municipality -"]</option>
                                    </select>
                                    <input type="hidden" value="@Model.City" id="CitySelected" />
                                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.Province" class="form-label "><strong>@Localizer["Province"] :</strong></label>
                                    <input asp-for="@Model.Province" class="form-control" maxlength="100" />
                                    <span asp-validation-for="@Model.Province" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.City" class="form-label"><strong>@Localizer["City/Municipality"] :</strong></label>
                                    <input asp-for="@Model.City" class="form-control" maxlength="100" />
                                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                                </div>
                            </div>
                        }
                        <div class="col">
                            <div class="mb-3">
                                <label asp-for="@Model.Street" class="form-label "><strong>@Localizer["Street"] :</strong></label>
                                <input asp-for="@Model.Street" class="form-control" maxlength="100" />
                                <span asp-validation-for="@Model.Street" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-4 col-lg-4 pull-right">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="card">
                <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["Tenancy Mix"]</span><br></h5>
                <div class="card-body">
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="@Model.OperationTypeID" class="form-label fieldrequired"><strong>@Localizer["Type of Operation"] :</strong></label>
                            <select asp-for="@Model.OperationTypeID" class="form-control" asp-items="@(dropdownService.GetOperationTypeList(Model.OperationTypeID))"><option value="">- Select Type of Operation -</option></select>
                            <span asp-validation-for="@Model.OperationTypeID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="@Model.BusinessNatureID" class="form-label fieldrequired"><strong>@Localizer["Nature of Business"] :</strong></label>
                            <select asp-for="@Model.BusinessNatureID" class="form-control" asp-items="@(dropdownService.GetBusinessNatureList(Model.BusinessNatureID))"><option value="">- Select Nature of Business -</option></select>
                            <span asp-validation-for="@Model.BusinessNatureID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="@Model.BusinessNatureSubItemID" class="form-label fieldrequired"><strong>@Localizer["Classification"] :</strong></label>
                            <select asp-for="@Model.BusinessNatureSubItemID" class="form-control select2" asp-items="@(dropdownService.GetBusinessNatureSubItemList(Model.BusinessNatureSubItemID))"><option value="">- Select Classification -</option></select>
                            <input type="hidden" value="@Model.BusinessNatureSubItemID" id="BusinessNatureSubItemIDSelected" />
                            <span asp-validation-for="@Model.BusinessNatureSubItemID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="@Model.BusinessNatureCategoryID" class="form-label "><strong>@Localizer["Category"] :</strong></label>
                            <select asp-for="@Model.BusinessNatureCategoryID" class="form-control select2" asp-items="@(dropdownService.GetBusinessNatureCategoryList(Model.BusinessNatureCategoryID))"><option value="">- Select Category -</option></select>
                            <input type="text" value="@Model.BusinessNatureCategoryID" id="BusinessNatureCategoryIDSelected" />
                            <span asp-validation-for="@Model.BusinessNatureCategoryID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-top:10px;">
            <div class="card">
                <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["Prospect Information"]</span><br></h5>
                <div class="card-body">
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="@Model.LeadSourceId" class="form-label fieldrequired"><strong>@Localizer["Prospect Source"] :</strong></label>
                            <select asp-for="@Model.LeadSourceId" class="form-control" asp-items="@(dropdownService.GetLeadSourceList(Model.LeadSourceId))"><option value="">- Select Lead Source -</option></select>
                            <span asp-validation-for="@Model.LeadSourceId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="@Model.LeadTouchpointId" class="form-label fieldrequired"><strong>@Localizer["Prospect Touchpoint"] :</strong></label>
                            <select asp-for="@Model.LeadTouchpointId" class="form-control" asp-items="@(dropdownService.GetLeadTouchPointList(Model.LeadTouchpointId))"><option value="">- Select Lead Touchpoint -</option></select>
                            <span asp-validation-for="@Model.LeadTouchpointId" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-top:10px;">
            <partial name="_ContactList" model="Model" />
        </div>
    </div>
</div>

