@using Models
@model OfferingViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.CommencementDate" class="form-label"><strong>@Localizer["Commencement Date"] :</strong></label>
            <input type="date" asp-for="@Model.CommencementDate" class="form-control CommencementDate Lock_OfferSheetRates" min="@System.DateTime.Today.ToString("yyyy-MM-dd")"/>
            <span asp-validation-for="@Model.CommencementDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 row-cols-lg-3 row-cols-xl-3 row-cols-xxl-3">
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Year" class="form-label "><strong>@Localizer["Year"] :</strong></label>
            <input asp-for="@Model.Year" class="form-control Lock_OfferSheetRates" />
            <span asp-validation-for="@Model.Year" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Month" class="form-label "><strong>@Localizer["Month"] :</strong></label>
            <input asp-for="@Model.Month" class="form-control Lock_OfferSheetRates" />
            <span asp-validation-for="@Model.Month" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Day" class="form-label "><strong>@Localizer["Day"] :</strong></label>
            <input asp-for="@Model.Day" class="form-control Lock_OfferSheetRates" />
            <span asp-validation-for="@Model.Day" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.TerminationDate" class="form-label "><strong>@Localizer["Termination Date"] :</strong></label>
            <input type="date" asp-for="@Model.TerminationDate" class="form-control Lock_OfferSheetRates" min="@(((DateTime)Model.CommencementDate!).ToString("yyyy-MM-dd"))"/>
            <span asp-validation-for="@Model.TerminationDate" class="text-danger"></span>
        </div>
    </div>
</div>
