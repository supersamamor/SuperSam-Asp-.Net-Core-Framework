@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Prospects List"];
    ViewData["ActiveMainPage"] = "Lead";
    ViewData["Level1"] = "ELMS";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="lead" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>

                            </th>
                            <th>
                                @Localizer["Name"]
                            </th>                           
                            <th>
                                @Localizer["Contact No."]
                            </th>
                            <th>
                                @Localizer["Prospect Aging"]
                            </th>
                            <th>
                                @Localizer["Latest Update"]
                            </th>
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#lead').DataTable({
            select: false,
            serverSide: true,
            order: [[ 3, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Lead/Index", new { area = "ELMS", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
            initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
            columns: [
                { data: "emailLink", name: "EmailLink", responsivePriority: 1, searchable: false, orderable: false, width: "5%" },
                { data: "displayName", name: "Company", responsivePriority: 1, title: '@Localizer["Name"]', searchable: true, orderable: true },              
                { data: "contactNumber", name: "ContactNumber", responsivePriority: 1, title: '@Localizer["Contact No."]', searchable: false, orderable: false },
                { data: "prospectAging", name: "CreatedDate", responsivePriority: 1, title: '@Localizer["Prospect Aging"]', searchable: false, orderable: true },
                { data: "latestUpdatedDateString", name: "LatestUpdatedDate", responsivePriority: 1, title: '@Localizer["Latest Update"]', searchable: false, orderable: true },
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Lead/Details", new { area = "ELMS" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewLead" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Lead.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Lead/Edit", new { area = "ELMS" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditLead" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Lead.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Lead/Delete", new { area = "ELMS" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteLead" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders" style="color: #DC3545;"></i></a>';
                    </text>
                }

                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
                { data: "brand", name: "Brand", searchable: true, visible: false },
            ],
            columnDefs: [
                {
                    "targets": 0, 
                    "className": "text-center",
                    "width": "4%"
                }               
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Lead.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Lead/Add", new { area = "ELMS" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
        function BindTableRowCollapseEvent()
        {
            $('#lead tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddLead",".btnEditLead",".btnViewLead",".btnDeleteLead"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddLead",".btnEditLead",".btnViewLead",".btnDeleteLead"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}