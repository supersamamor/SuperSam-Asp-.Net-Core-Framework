@using Models
@model OfferingViewModel
<input type="hidden" id="UnitOfferedCount" value="@Model?.UnitOfferedList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["Offered Space(s)"]</span>
        <button class="cancel" type="button" id="btnRemoveUnitOffered" value="RemoveUnitOffered" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
                        @Localizer["Space No."]
                    </th>
                    <th>
                        @Localizer["Lot Area"]
                    </th>
                    <th>
                        @Localizer["Availability Date"]
                    </th>
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.UnitOfferedList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.UnitOfferedList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="UnitOfferedList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="UnitOfferedList[@counter].UnitId" class="selected-unitid" value="@item.UnitID" />
                                <input type="hidden" name="UnitOfferedList[@counter].OfferingID" value="@item.OfferingID" />
                                <input type="hidden" name="UnitOfferedList[@counter].UnitNo" value="@item.UnitNo" />
                                <input type="hidden" name="UnitOfferedList[@counter].LotArea" value="@item.LotArea" />
                                <input type="hidden" name="UnitOfferedList[@counter].AvailabilityDate" value="@item.AvailabilityDate" />
                            </td>
                            <td>
                                <span class="form-control" style="background:transparent;border:none;">@item!.UnitNo</span>
                            </td>
                            <td>
                                <span class="form-control" style="background:transparent;border:none;">
                                    @if (@item!.LotArea != null)
                                    {
                                        <text>
                                            @(((decimal)item!.LotArea).ToString("##,##.00"))
                                        </text>

                                    }
                                    else
                                    {
                                        <text>
                                            0
                                        </text>
                                    }
                                    @Localizer["sqm(s)"]
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item!.Availability == CTI.ELMS.Core.Constants.LotAvailability.Available)
                                {
                                    <span class="badge bg-success">@item!.Availability</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@item!.Availability</span>
                                }
                            </td>
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveUnitOfferedButton" title="@Localizer["Remove Unit Offered"]" removeId="@(item.UnitID)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
