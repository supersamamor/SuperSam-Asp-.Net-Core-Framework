@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Project"];
    ViewData["ActiveMainPage"] = "Project";
    ViewData["Level1"] = "ELMS";
}
<form id="project-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Project" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
        <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Cancel"]"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-success" title="@Localizer["Save changes"]" style="color:#fff;"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_OfferingHistoryListValidationPartial" model="@Model.Project" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeOfferingHistoryFieldValidations($('#OfferingHistoryCount').val());
			$('.RemoveOfferingHistoryButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveOfferingHistory');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#project-form', InitializeForm);
			});

			$('#btnAddOfferingHistory').on( 'click', function () {
				$('#AsyncAction').val('AddOfferingHistory');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#project-form', InitializeForm);
			});

			$.fn.offeringSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Offering/Index", new { area = "ELMS", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var offeringlistdropdowns = document.getElementsByClassName('SelectOffering');
			for ( var i=0; i< offeringlistdropdowns.length; i++) {
				$("#OfferingHistoryList_"+i+"_OfferingID").offeringSelect();
			}

			$.fn.leadSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Lead/Index", new { area = "ELMS", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var leadlistdropdowns = document.getElementsByClassName('SelectLead');
			for ( var i=0; i< leadlistdropdowns.length; i++) {
				$("#OfferingHistoryList_"+i+"_LeadID").leadSelect();
			}

			$.fn.entitygroupSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/EntityGroup/Index", new { area = "ELMS", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#EntityGroupId").entitygroupSelect();

		}	
		InitializeForm();
    });
</script>
}