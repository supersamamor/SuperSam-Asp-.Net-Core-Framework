@using Models
@model BusinessNatureSubItemViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.BusinessNatureSubItemName" class="form-label fieldrequired"><strong>@Localizer["Business Nature Sub Item Name"] :</strong></label>
			<input asp-for="@Model.BusinessNatureSubItemName" class="form-control"  />
			<span asp-validation-for="@Model.BusinessNatureSubItemName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.BusinessNatureID" class="form-label fieldrequired"><strong>@Localizer["Business Nature"] :</strong></label>
			<select asp-for="@Model.BusinessNatureID" class="form-control" asp-items="@(dropdownService.GetBusinessNatureList(Model.BusinessNatureID))"><option value="">- Select Business Nature -</option></select>
			<span asp-validation-for="@Model.BusinessNatureID" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.IsDisabled" class="form-label "><strong>@Localizer["Is Disabled"] :</strong></label>
			<input asp-for="@Model.IsDisabled" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.IsDisabled" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.BusinessNatureSubItemCode" class="form-label fieldrequired"><strong>@Localizer["Business Nature Sub Item Code"] :</strong></label>
			<input asp-for="@Model.BusinessNatureSubItemCode" class="form-control"  />
			<span asp-validation-for="@Model.BusinessNatureSubItemCode" class="text-danger"></span>
			
	</div>
</div>

</div>
