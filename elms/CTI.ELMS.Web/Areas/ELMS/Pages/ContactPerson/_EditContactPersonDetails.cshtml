@using Models
@model ContactPersonViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LeadId" class="form-label fieldrequired"><strong>@Localizer["Lead"] :</strong></label>
			<select asp-for="@Model.LeadId" class="form-control" asp-items="@(dropdownService.GetLeadList(Model.LeadId))"><option value="">- Select Lead -</option></select>
			<span asp-validation-for="@Model.LeadId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.SalutationID" class="form-label "><strong>@Localizer["Salutation"] :</strong></label>
			<select asp-for="@Model.SalutationID" class="form-control" asp-items="@(dropdownService.GetSalutationList(Model.SalutationID))"><option value="">- Select Salutation -</option></select>
			<span asp-validation-for="@Model.SalutationID" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.FirstName" class="form-label fieldrequired"><strong>@Localizer["First Name"] :</strong></label>
			<input asp-for="@Model.FirstName" class="form-control" maxlength="35" />
			<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.MiddleName" class="form-label "><strong>@Localizer["Middle Name"] :</strong></label>
			<input asp-for="@Model.MiddleName" class="form-control" maxlength="30" />
			<span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LastName" class="form-label fieldrequired"><strong>@Localizer["Last Name"] :</strong></label>
			<input asp-for="@Model.LastName" class="form-control" maxlength="70" />
			<span asp-validation-for="@Model.LastName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Position" class="form-label fieldrequired"><strong>@Localizer["Position"] :</strong></label>
			<input asp-for="@Model.Position" class="form-control" maxlength="120" />
			<span asp-validation-for="@Model.Position" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.IsSOARecipient" class="form-label "><strong>@Localizer["Is SOA Recipient"] :</strong></label>
			<input asp-for="@Model.IsSOARecipient" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.IsSOARecipient" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.IsANSignatory" class="form-label "><strong>@Localizer["Is AN Signatory"] :</strong></label>
			<input asp-for="@Model.IsANSignatory" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.IsANSignatory" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.IsCOLSignatory" class="form-label "><strong>@Localizer["Is COL Signatory"] :</strong></label>
			<input asp-for="@Model.IsCOLSignatory" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.IsCOLSignatory" class="text-danger"></span>
			
	</div>
</div>

</div>
