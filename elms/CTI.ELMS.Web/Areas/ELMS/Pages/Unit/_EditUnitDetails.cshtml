@using Models
@model UnitViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.UnitNo" class="form-label "><strong>@Localizer["Unit No"] :</strong></label>
			<input asp-for="@Model.UnitNo" class="form-control" maxlength="20" />
			<span asp-validation-for="@Model.UnitNo" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ProjectID" class="form-label "><strong>@Localizer["Project"] :</strong></label>
			<select asp-for="@Model.ProjectID" class="form-control" asp-items="@(dropdownService.GetProjectList(Model.ProjectID))"><option value="">- Select Project -</option></select>
			<span asp-validation-for="@Model.ProjectID" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LotBudget" class="form-label "><strong>@Localizer["Lot Budget"] :</strong></label>
			<input asp-for="@Model.LotBudget" class="form-control"  />
			<span asp-validation-for="@Model.LotBudget" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LotArea" class="form-label "><strong>@Localizer["Lot Area"] :</strong></label>
			<input asp-for="@Model.LotArea" class="form-control"  />
			<span asp-validation-for="@Model.LotArea" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.AvailabilityDate" class="form-label fieldrequired"><strong>@Localizer["Availability Date"] :</strong></label>
			<input asp-for="@Model.AvailabilityDate" class="form-control"  />
			<span asp-validation-for="@Model.AvailabilityDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.CommencementDate" class="form-label fieldrequired"><strong>@Localizer["Commencement Date"] :</strong></label>
			<input asp-for="@Model.CommencementDate" class="form-control"  />
			<span asp-validation-for="@Model.CommencementDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.CurrentTenantContractNo" class="form-label fieldrequired"><strong>@Localizer["Current Tenant Contract No."] :</strong></label>
			<input asp-for="@Model.CurrentTenantContractNo" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.CurrentTenantContractNo" class="text-danger"></span>
			
	</div>
</div>

</div>
