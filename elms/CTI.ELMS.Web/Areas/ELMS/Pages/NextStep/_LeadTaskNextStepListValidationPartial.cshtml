@using Models
@model NextStepViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeLeadTaskNextStepFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "LeadTaskNextStepList[" + idx + "].LeadTaskId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Lead Task"});
				reqs.push({name: "LeadTaskNextStepList[" + idx + "].ClientFeedbackId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Client Feedback"});
				reqs.push({name: "LeadTaskNextStepList[" + idx + "].NextStepId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Next Step"});
				reqs.push({name: "LeadTaskNextStepList[" + idx + "].PCTDay", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "PCT Day"});
				
			}
			let validator = $("#nextStep-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>