@model string

<script asp-add-nonce>
    $.DisableFieldsViaClass = function()
    {            
        $("select.@Model").prop("disabled", true);
        $('input.@Model').attr('readonly', true);
	    $('textarea.@Model').attr('readonly', true);
        $("input[type='checkbox'].@Model").prop("disabled", "disabled");  
        $('a.@Model, button.@Model').removeClass("primary")
        $('a.@Model, button.@Model').removeClass("accent")
        $('a.@Model, button.@Model').addClass('secondary');
        $('select.@Model').on('mousedown', function(e) {
           e.preventDefault();
           this.blur();
           window.focus();
        });
	    $(".file-upload-control .@Model").attr("style", "display:none;");
    } 
</script>