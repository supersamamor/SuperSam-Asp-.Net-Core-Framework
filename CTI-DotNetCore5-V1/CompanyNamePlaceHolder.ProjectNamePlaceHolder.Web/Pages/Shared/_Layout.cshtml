<!DOCTYPE html>
<html lang="en">
<head>
    <script asp-add-nonce src="~/lib/pace-progress/pace.min.js"></script>
    <link rel="stylesheet" href="~/lib/pace-progress/themes/blue/pace-theme-flat-top.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - CompanyNamePlaceHolder.ProjectNamePlaceHolder</title>
    <partial name="_Styles" />
    @RenderSection("Styles", required: false)
    <script asp-add-nonce>
        @Html.Raw(JavaScriptSnippet.ScriptBody)
    </script>
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <partial name="_Navbar" />
        <partial name="_Sidebar" />
        <div class="content-wrapper">
            <partial name="_CookieConsentPartial" />
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </section>
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
            <strong>Copyright &copy; @System.DateTime.Now.Year - Corporate Technologies Inc.</strong> All rights reserved.
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </footer>
    </div>
    <partial name="_Scripts" />
    <script asp-add-nonce>
        $(document).ready(function () {
            $('#logoutLink').click(function () {
                $('#logoutForm').submit();
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
    @await Component.InvokeAsync("NotyfSafe")
</body>
</html>
