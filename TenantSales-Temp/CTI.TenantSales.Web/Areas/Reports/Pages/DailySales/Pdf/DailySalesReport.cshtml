@*@model TenantSales.Web.Models.ReportViewModels.DailySalesReportModel

@{
    Layout = null;
}
<style>
    .TenantSales_TableHeader {
        text-align: center;
    }

    .Align-Right {
        text-align: right;
    }

    .Align-Left {
        text-align: left;
    }

    .Align-Center {
        text-align: center;
    }

    body * {
        font-family: Arial;
        font-size: 12px;
    }
</style>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body style="">
    @if (Model != null)
    {
        @foreach (var tenantItem in Model.TenantList)
        {
            @foreach (var posItem in tenantItem.TenantPOSList)
            {
                if (posItem.ShowSales)
                {
                    <div style="page-break-inside:avoid !important;">
                        <div style="border:1px solid #ddd; page-break-inside:avoid !important;padding:20px;">
                            <div class="row">
                                <div style="float:left;padding-left:10px;">
                                    <span><b>Daily Sales Report</b> / @tenantItem.ProjectName </span>
                                    <br />
                                    <span><b>Pos No. :</b> @posItem.Code / <b>For the period :</b> @Model.DateFrom.ToString(Resource.FormatDate) - @Model.DateTo.ToString(Resource.FormatDate)</span>
                                </div>
                                <div style="float:right;padding-right:10px;">
                                    <span><b>Tenant : </b>@tenantItem.TenantCode / @tenantItem.TenantName </span>
                                </div>
                            </div>
                        </div>

                        <table class="table table-hover tablesorter" style="border:1px solid #ddd;">
                            <thead>
                                <tr>
                                    <th class="TenantSales_TableHeader"></th>
                                    <th class="TenantSales_TableHeader">@Resource.LabelDay</th>
                                    <th class="TenantSales_TableHeader">@Resource.LabelSalesDate</th>
                                    <th class="TenantSales_TableHeader">@Resource.LabelSalesCategory</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelOldAccumulatedTotal</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelNewAccumulatedTotal</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelTaxableSalesAmount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelNonTaxableSalesAmount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelServiceCharge</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelTaxAmount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelTotalSales</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelRefundAmount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelAdjustmentAmount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelVoidAmount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelSeniorDiscount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelPromoDiscount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelOtherDiscount</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelCountOfAllTransaction</th>
                                    <th class="TenantSales_TableHeader" style="min-width:100px;">@Resource.LabelCountOfSalesTransaction</th>
                                </tr>
                            </thead>
                            <tbody id="TenantSalesTableContent">

                                @foreach (var item in posItem.SortedDailySalesReport)
                                {
                                    item.SetDayNumber(Model.DateFrom);
                                    @await Html.PartialAsync("DailySalesReportItem", item)
                                }

                                @if (posItem.SortedDailySalesReport.Count > 0)
                                {
                                    @await Html.PartialAsync("DailySalesReportSummary", posItem)
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
            @if (tenantItem.ShowSalesSummary)
            {
                @await Html.PartialAsync("DailySalesReportSummaryPerTenant", tenantItem)
            }
        }
    }

</body>
</html>
*@