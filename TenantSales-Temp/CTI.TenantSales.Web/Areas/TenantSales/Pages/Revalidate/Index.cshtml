@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Re-validate Sales List"];
    ViewData["ActiveMainPage"] = "Revalidate";
    ViewData["Level1"] = "TenantSales";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="revalidate" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Sales Date"]
							</th>
							<th>
								@Localizer["Project"]
							</th>
							<th>
								@Localizer["Tenant"]
							</th>
							<th>
								@Localizer["Status"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#revalidate').DataTable({
            select: false,
            serverSide: true,
            order: [[ 4, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Revalidate/Index", new { area = "TenantSales", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "salesDate", name: "SalesDate", responsivePriority: 1, title: '@Localizer["Sales Date"]', searchable: false },
				{ data: "projectId", name: "ProjectId", responsivePriority: 1, title: '@Localizer["Project"]', searchable: false },
				{ data: "tenantId", name: "TenantId", responsivePriority: 1, title: '@Localizer["Tenant"]', searchable: false },
				{ data: "status", name: "Status", responsivePriority: 1, title: '@Localizer["Status"]', searchable: false },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Revalidate/Details", new { area = "TenantSales" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btn-secondary btnViewRevalidate">@Localizer["View"]</a>';  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Revalidate.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Revalidate/Add", new { area = "TenantSales" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#revalidate tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddRevalidate",".btnEditRevalidate",".btnViewRevalidate",".btnDeleteRevalidate"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddRevalidate",".btnEditRevalidate",".btnViewRevalidate",".btnDeleteRevalidate"]);
    });
</script>
}