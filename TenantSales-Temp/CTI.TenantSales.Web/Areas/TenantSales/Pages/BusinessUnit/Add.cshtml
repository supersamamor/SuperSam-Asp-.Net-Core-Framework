@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Business Unit"];
    ViewData["ActiveMainPage"] = "BusinessUnit";
    ViewData["Level1"] = "TenantSales";
}
<form id="businessUnit-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.BusinessUnit" />
    </div>    
    <div class="row">
        <div class="col-12">
            <p>
                <a asp-page="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                <button type="submit" class="btn btn-success">@Localizer["Save changes"]</button>
            </p>
        </div>
    </div>
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_ProjectBusinessUnitListValidationPartial" model="@Model.BusinessUnit" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeProjectBusinessUnitFieldValidations($('#ProjectBusinessUnitCount').val());
			$('.RemoveProjectBusinessUnitButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveProjectBusinessUnit');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#businessUnit-form', InitializeForm);
			});

			$('#btnAddProjectBusinessUnit').on( 'click', function () {
				$('#AsyncAction').val('AddProjectBusinessUnit');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#businessUnit-form', InitializeForm);
			});

			$.fn.projectSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Project/Index", new { area = "TenantSales", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var projectlistdropdowns = document.getElementsByClassName('SelectProject');
			for ( var i=0; i< projectlistdropdowns.length; i++) {
				$("#ProjectBusinessUnitList_"+i+"_ProjectId").projectSelect();
			}

		}	
		InitializeForm();
    });
</script>
}