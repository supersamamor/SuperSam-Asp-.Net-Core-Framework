@using Models
@model ProjectViewModel
<input type="hidden" id="ProjectBusinessUnitCount" value="@Model?.ProjectBusinessUnitList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Project Business Unit"]</h5>
                    </button>
                    <button type="button" id="btnAddProjectBusinessUnit" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveProjectBusinessUnit" value="RemoveProjectBusinessUnit" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="projectBusinessUnit" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
							<th style="display:none;"></th>
                            <th>
								@Localizer["Business Unit"]
							</th>
							
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProjectBusinessUnitList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ProjectBusinessUnitList)
                            {
                                <tr>
									<td style="display:none;">
                                        <input type="hidden" name="ProjectBusinessUnitList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ProjectBusinessUnitList[@counter].ProjectId" value="@item.ProjectId" />                                      
                                    </td>
                                    <td>
										<select asp-for="@item.BusinessUnitId" id="ProjectBusinessUnitList_@(counter)_BusinessUnitId" name="ProjectBusinessUnitList[@counter].BusinessUnitId" class="form-control SelectBusinessUnit" asp-items="@(dropdownService.GetBusinessUnitList(item.BusinessUnitId))" >
											<option value="">- Select Business Unit -</option>
										</select>
										<span data-valmsg-for="ProjectBusinessUnitList[@counter].BusinessUnitId" asp-validation-for="@item.BusinessUnitId" class="text-danger"></span>
										
									</td>
									
                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveProjectBusinessUnitButton cancel" title="@Localizer["Remove ProjectBusinessUnit"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
