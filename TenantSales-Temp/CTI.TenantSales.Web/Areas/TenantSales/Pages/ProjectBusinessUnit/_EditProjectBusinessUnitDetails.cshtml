@using Models
@model ProjectBusinessUnitViewModel

<div class="col-md-12">
	<label asp-for="@Model.BusinessUnitId" class="fieldrequired"></label>
	<select asp-for="@Model.BusinessUnitId" class="form-control" asp-items="@(dropdownService.GetBusinessUnitList(Model.BusinessUnitId))"><option value="">- Select Business Unit -</option></select>
	<span asp-validation-for="@Model.BusinessUnitId" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ProjectId" class="fieldrequired"></label>
	<select asp-for="@Model.ProjectId" class="form-control" asp-items="@(dropdownService.GetProjectList(Model.ProjectId))"><option value="">- Select Project -</option></select>
	<span asp-validation-for="@Model.ProjectId" class="text-danger"></span>
	
</div>

