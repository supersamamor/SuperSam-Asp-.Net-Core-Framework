@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Theme List"];
    ViewData["ActiveMainPage"] = "Theme";
    ViewData["Level1"] = "TenantSales";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="theme" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Name"]
							</th>
							<th>
								@Localizer["Code"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#theme').DataTable({
            select: false,
            serverSide: true,
            order: [[ 2, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Theme/Index", new { area = "TenantSales", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "name", name: "Name", responsivePriority: 1, title: '@Localizer["Name"]', searchable: true },
				{ data: "code", name: "Code", responsivePriority: 1, title: '@Localizer["Code"]', searchable: true },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Theme/Details", new { area = "TenantSales" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btn-secondary btnViewTheme">@Localizer["View"]</a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Theme.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Theme/Edit", new { area = "TenantSales" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btn-primary btnEditTheme">@Localizer["Edit"]</a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Theme.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Theme/Delete", new { area = "TenantSales" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btn-danger btnDeleteTheme">@Localizer["Delete"]</a>';
                    </text>
                }
				   
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Theme.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Theme/Add", new { area = "TenantSales" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#theme tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddTheme",".btnEditTheme",".btnViewTheme",".btnDeleteTheme"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddTheme",".btnEditTheme",".btnViewTheme",".btnDeleteTheme"]);
    });
</script>
}