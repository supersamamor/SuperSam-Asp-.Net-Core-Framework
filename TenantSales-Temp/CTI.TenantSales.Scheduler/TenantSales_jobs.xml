<?xml version="1.0" encoding="UTF-8"?>

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 				version="2.0">
	<processing-directives>
		<overwrite-existing-data>true</overwrite-existing-data>
	</processing-directives>
	<schedule>
		<!--Jobs-->
		<job>
			<name>Scheduled Approval Notification Job</name>
			<group>Approval Notification Job</group>
			<description>Scheduled Job for proccessing approval notification</description>
			<job-type>CTI.TenantSales.Scheduler.Jobs.ApprovalNotificationJob, CTI.TenantSales.Scheduler</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<!--Triggers-->
		<trigger>
			<cron>
				<name>Trigger for Scheduled Approval Notification Job</name>
				<group>Approval Notification Job</group>
				<description>Run Scheduled Approval Notification Job</description>
				<job-name>Scheduled Approval Notification Job</job-name>
				<job-group>Approval Notification Job</job-group>
				<cron-expression>0/1 * * * * ?</cron-expression>
			</cron>
		</trigger>
		<!--Jobs-->
		<job>
			<name>Sales Processing Notification Job</name>
			<group>Sales Processing Job</group>
			<description>Scheduled Job for Sales Processing</description>
			<job-type>CTI.TenantSales.Scheduler.Jobs.SalesProcessingJob, CTI.TenantSales.Scheduler</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<!--Triggers-->
		<trigger>
			<cron>
				<name>Trigger for Sales Processing Notification Job</name>
				<group>Sales Processing Job</group>
				<description>Run Sales Processing Notification Job</description>
				<job-name>Sales Processing Notification Job</job-name>
				<job-group>Sales Processing Job</job-group>
				<cron-expression>0 0 */4 * * ?</cron-expression>
			</cron>
		</trigger>
		<!--Jobs-->
		<job>
			<name>Masterfile Synchronization Notification Job</name>
			<group>Masterfile Synchronization Job</group>
			<description>Scheduled Job for Masterfile Synchronization</description>
			<job-type>CTI.TenantSales.Scheduler.Jobs.MasterfileSynchronizationJob, CTI.TenantSales.Scheduler</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<!--Triggers-->
		<trigger>
			<cron>
				<name>Trigger for Masterfile Synchronization Notification Job</name>
				<group>Masterfile Synchronization Job</group>
				<description>Run Masterfile Synchronization Notification Job</description>
				<job-name>Masterfile Synchronization Notification Job</job-name>
				<job-group>Masterfile Synchronization Job</job-group>
				<cron-expression>0/1 * * * * ?</cron-expression>
			</cron>
		</trigger>
		<!--Jobs-->
		<job>
			<name>Report Data Synchronization Notification Job</name>
			<group>Report Data Synchronization Job</group>
			<description>Scheduled Job for Report Data Synchronization</description>
			<job-type>CTI.TenantSales.Scheduler.Jobs.ReportDataSynchronizationJob, CTI.TenantSales.Scheduler</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<!--Triggers-->
		<trigger>
			<cron>
				<name>Trigger for Report Data Synchronization Notification Job</name>
				<group>Report Data Synchronization Job</group>
				<description>Run Report Data Synchronization Notification Job</description>
				<job-name>Report Data Synchronization Notification Job</job-name>
				<job-group>Report Data Synchronization Job</job-group>
				<cron-expression>0/1 * * * * ?</cron-expression>
			</cron>
		</trigger>
		<!--Jobs-->
		<job>
			<name>Revalidate Sales Notification Job</name>
			<group>Revalidate Sales Job</group>
			<description>Scheduled Job for Revalidate Sales</description>
			<job-type>CTI.TenantSales.Scheduler.Jobs.RevalidateSalesJob, CTI.TenantSales.Scheduler</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<!--Triggers-->
		<trigger>
			<cron>
				<name>Trigger for Revalidate Sales Notification Job</name>
				<group>Revalidate Sales Job</group>
				<description>Run Revalidate Sales Notification Job</description>
				<job-name>Revalidate Sales Notification Job</job-name>
				<job-group>Revalidate Sales Job</job-group>
				<cron-expression>0 */1 * * * ?</cron-expression>
			</cron>
		</trigger>
	</schedule>
</job-scheduling-data>
