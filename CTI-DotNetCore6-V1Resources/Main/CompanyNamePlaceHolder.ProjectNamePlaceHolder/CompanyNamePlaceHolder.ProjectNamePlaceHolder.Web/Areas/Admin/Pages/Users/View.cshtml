@page
@model ViewModel
@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["View User"];
    ViewData["ActiveMainPage"] = "Users";
    ViewData["Level1"] = "Admin";
}
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["User Info"]</h5>
                    </button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="@Model.UserDetails.Id" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.UserDetails.Id" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.UserDetails.Email" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.UserDetails.Email" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.UserDetails.Name" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.UserDetails.Name" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.UserDetails.BirthDate" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.UserDetails.BirthDate" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.UserDetails.Entity" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.UserDetails.Entity" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.UserDetails.IsActive" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9 d-flex align-items-center">
                        @Html.DisplayFor(m => m.UserDetails.IsActive, "UserStatus")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Roles"]</h5>
                    </button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <partial name="_ViewRoles" model="Model.Roles" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <p>
            <a asp-page="Index" class="btn btn-secondary">@Localizer["Close"]</a>
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Users.Create)).Succeeded)
            {
                <a asp-page="Add" class="btn btn-success">@Localizer["Add"]</a>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Users.Edit)).Succeeded)
            {
                <a asp-page="Edit" asp-route-id="@Model.UserDetails.Id" class="btn btn-primary">@Localizer["Edit"]</a>
            }
        </p>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var roles = $("#roles").DataTable({
            select: false,
            searching: true,
            paging: true,
            info: true,
            buttons: [],
            columnDefs: [
                {
                    targets: [1],
                    orderDataType: 'dom-checkbox',
                }
            ]
        });
    });
</script>
}