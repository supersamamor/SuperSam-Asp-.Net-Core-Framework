@using Models
@model ReportViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeReportDetailFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "ReportDetailList[" + idx + "].ReportId", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "ReportId"});
				reqs.push({name: "ReportDetailList[" + idx + "].ReportDetailNumber", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "ReportDetailNumber"});
				reqs.push({name: "ReportDetailList[" + idx + "].Description", el: "Input", minlength:0, maxlength:255, isrequired: true, description: "Description"});
				reqs.push({name: "ReportDetailList[" + idx + "].ConnectionString", el: "Input", minlength:0, maxlength:255, isrequired: true, description: "ConnectionString"});
				reqs.push({name: "ReportDetailList[" + idx + "].QueryString", el: "Input", minlength:0, maxlength:8000, isrequired: true, description: "QueryString"});
				
			}
			let validator = $("#report-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>