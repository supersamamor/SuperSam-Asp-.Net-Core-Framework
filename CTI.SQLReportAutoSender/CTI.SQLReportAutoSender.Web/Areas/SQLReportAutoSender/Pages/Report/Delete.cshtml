@page
@model DeleteModel
@{
    ViewData["Title"] = Localizer["Delete Report"];
    ViewData["ActiveMainPage"] = "Report";
    ViewData["Level1"] = "SQLReportAutoSender";
}
<link rel="stylesheet" href="~/lib/codemirror/codemirror.min.css" />
<link rel="stylesheet" href="~/lib/codemirror/3024-night.min.css" />
<div class=row>
    <div class="col-12">
        <div class="alert alert-danger" role="alert">
            @Localizer["Are you sure you want to delete this report?"]
        </div>
    </div>
</div>
<form id="report-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Report" />
    </div> 
    <div class="row">
        <div class="col-12">
            <p>
                <a asp-page="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
            </p>
        </div>
    </div>
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DisableFieldsPartial" model="@("report-form")" />
<script asp-add-nonce src="~/lib/codemirror/codemirror.min.js"></script>
<script asp-add-nonce src="~/lib/codemirror/sql.min.js"></script>
<script asp-add-nonce src="~/lib/codemirror/closebrackets.min.js"></script>
<script asp-add-nonce src="~/lib/codemirror/closetag.min.js"></script>
<script asp-add-nonce>
    for (let i = 0; i < $('#ReportDetailCount').val(); i++) {
		var editor = CodeMirror.fromTextArea(
		document.getElementById('ReportDetailList_' + i + '_QueryString'), {
			mode: 'sql',
			theme: '3024-night',
			lineNumbers: true,
			autoCloseBrackets: true,
			autoCloseTags: true
		}); 
	}	
</script>
}