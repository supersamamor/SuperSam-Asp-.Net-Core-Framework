@using Models
@model ReportViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeMailSettingFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "MailSettingList[" + idx + "].ReportId", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "ReportId"});
				reqs.push({name: "MailSettingList[" + idx + "].Account", el: "Input", minlength:0, maxlength:50, isrequired: false, description: "Account"});
				reqs.push({name: "MailSettingList[" + idx + "].Password", el: "Input", minlength:0, maxlength:255, isrequired: false, description: "Password"});
				reqs.push({name: "MailSettingList[" + idx + "].Body", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Body"});
				reqs.push({name: "MailSettingList[" + idx + "].Subject", el: "Input", minlength:0, maxlength:50, isrequired: true, description: "Subject"});
				
			}
			let validator = $("#report-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>