@using Models
@model ReportViewModel
<input type="hidden" id="MailRecipientCount" value="@Model?.MailRecipientList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Recipient"]</h5>
                    </button>
                    <button type="button" id="btnAddMailRecipient" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveMailRecipient" value="RemoveMailRecipient" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="mailRecipient" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th style="display:none;"></th>
                            <th>
                                @Localizer["Recipient Email"]
                            </th>
                            <th>
                                @Localizer["Sequence Number"]
                            </th>

                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.MailRecipientList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.MailRecipientList)
                            {
                                <tr>
                                    <td style="display:none;">
                                        <input type="hidden" name="MailRecipientList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="MailRecipientList[@counter].ReportId" value="@item.ReportId" />
                                    </td>
                                    <td>
                                        <input asp-for="@item.RecipientEmail" name="MailRecipientList[@counter].RecipientEmail" class="form-control" maxlength="100" />
                                        <span data-valmsg-for="MailRecipientList[@counter].RecipientEmail" asp-validation-for="@item.RecipientEmail" class="text-danger"></span>

                                    </td>
                                    <td>
                                        <input asp-for="@item.SequenceNumber" name="MailRecipientList[@counter].SequenceNumber" class="form-control" />
                                        <span data-valmsg-for="MailRecipientList[@counter].SequenceNumber" asp-validation-for="@item.SequenceNumber" class="text-danger"></span>

                                    </td>

                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveMailRecipientButton cancel" title="@Localizer["Remove MailRecipient"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
