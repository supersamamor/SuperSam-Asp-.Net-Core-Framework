@using Models
@model ReportViewModel

<div class="col-md-6">
    <label asp-for="@Model.Description" class="fieldrequired"></label>
    <input asp-for="@Model.Description" class="form-control" maxlength="255" />
    <span asp-validation-for="@Model.Description" class="text-danger"></span>
</div>
<div class="col-md-6">
    <label asp-for="@Model.ScheduleFrequencyId" class="fieldrequired"></label>
    <select asp-for="@Model.ScheduleFrequencyId" class="form-control" asp-items="@(dropdownService.GetScheduleFrequencyList(Model.ScheduleFrequencyId))"><option value="">- Select  -</option></select>
    <span asp-validation-for="@Model.ScheduleFrequencyId" class="text-danger"></span>
</div>
<div class="col-md-12" style="color:transparent;">
.
</div>
<div class="col-md-6">
    <label asp-for="@Model.IsActive" class="fieldrequired"></label>
    <input asp-for="@Model.IsActive" class="custom-checkbox-label" />
    <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
</div>

<div class="col-md-6" style="padding-left:0px;padding-right:0px;">
    <div class="col-md-12">
        <label asp-for="@Model.MultipleReportType" class="fieldrequired"></label>
    </div>
    <div class="col-md-12">
        <div class="col-md-4">
            <input class="" asp-for="@Model.MultipleReportType" type="radio" value="@CTI.SQLReportAutoSender.Core.SQLReportAutoSender.MultipleReportTypeItems.MultipleSheets">
            <label class="">@Localizer["Multiple Sheets"]</label>
        </div>
        <div class="col-md-4">
            <input class="" asp-for="@Model.MultipleReportType" type="radio" value="@CTI.SQLReportAutoSender.Core.SQLReportAutoSender.MultipleReportTypeItems.MultipleFile">
            <label class="">@Localizer["Multiple File"]</label>
        </div>
    </div>
</div>