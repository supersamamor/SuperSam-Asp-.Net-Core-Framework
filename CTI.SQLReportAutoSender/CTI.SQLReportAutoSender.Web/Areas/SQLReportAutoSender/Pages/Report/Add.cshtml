@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Report"];
    ViewData["ActiveMainPage"] = "Report";
    ViewData["Level1"] = "SQLReportAutoSender";
}
<link rel="stylesheet" href="~/lib/codemirror/codemirror.min.css" />
<link rel="stylesheet" href="~/lib/codemirror/3024-night.min.css" />
<form id="report-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Report" />
    </div>    
    <div class="row">
        <div class="col-12">
            <p>
                <a asp-page="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                <button type="submit" class="btn btn-success">@Localizer["Save changes"]</button>
            </p>
        </div>
    </div>
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_ReportDetailListValidationPartial" model="@Model.Report" />
<partial name="_MailSettingListValidationPartial" model="@Model.Report" />
<partial name="_MailRecipientListValidationPartial" model="@Model.Report" />
<partial name="_ReportScheduleSettingListValidationPartial" model="@Model.Report" />
<partial name="_CustomScheduleListValidationPartial" model="@Model.Report" />
<script asp-add-nonce src="~/lib/codemirror/codemirror.min.js"></script>
<script asp-add-nonce src="~/lib/codemirror/sql.min.js"></script>
<script asp-add-nonce src="~/lib/codemirror/closebrackets.min.js"></script>
<script asp-add-nonce src="~/lib/codemirror/closetag.min.js"></script>
<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeReportDetailFieldValidations($('#ReportDetailCount').val());
			$('#ScheduleFrequencyId ').on( 'change', function () {		
				$('#AsyncAction').val('');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$('.RemoveReportDetailButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveReportDetail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$('#btnAddReportDetail').on( 'click', function () {
				$('#AsyncAction').val('AddReportDetail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$.InitializeMailSettingFieldValidations($('#MailSettingCount').val());
			$('.RemoveMailSettingButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveMailSetting');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$('#btnAddMailSetting').on( 'click', function () {
				$('#AsyncAction').val('AddMailSetting');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$.InitializeMailRecipientFieldValidations($('#MailRecipientCount').val());
			$('.RemoveMailRecipientButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveMailRecipient');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$('#btnAddMailRecipient').on( 'click', function () {
				$('#AsyncAction').val('AddMailRecipient');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$.InitializeReportScheduleSettingFieldValidations($('#ReportScheduleSettingCount').val());
			$('.RemoveReportScheduleSettingButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveReportScheduleSetting');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$('#btnAddReportScheduleSetting').on( 'click', function () {
				$('#AsyncAction').val('AddReportScheduleSetting');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$.fn.schedulefrequencySelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/ScheduleFrequency/Index", new { area = "SQLReportAutoSender", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var schedulefrequencylistdropdowns = document.getElementsByClassName('SelectScheduleFrequency');
			for ( var i=0; i< schedulefrequencylistdropdowns.length; i++) {
				$("#ReportScheduleSettingList_"+i+"_ScheduleFrequencyId").schedulefrequencySelect();
			}

			$.fn.scheduleparameterSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/ScheduleParameter/Index", new { area = "SQLReportAutoSender", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var scheduleparameterlistdropdowns = document.getElementsByClassName('SelectScheduleParameter');
			for ( var i=0; i< scheduleparameterlistdropdowns.length; i++) {
				$("#ReportScheduleSettingList_"+i+"_ScheduleParameterId").scheduleparameterSelect();
			}

			$.InitializeCustomScheduleFieldValidations($('#CustomScheduleCount').val());
			$('.RemoveCustomScheduleButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveCustomSchedule');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$('#btnAddCustomSchedule').on( 'click', function () {
				$('#AsyncAction').val('AddCustomSchedule');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#report-form', InitializeForm);
			});

			$.fn.schedulefrequencySelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/ScheduleFrequency/Index", new { area = "SQLReportAutoSender", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#ScheduleFrequencyId").schedulefrequencySelect();
			for (let i = 0; i < $('#ReportDetailCount').val(); i++) {
				var editor = CodeMirror.fromTextArea(
				document.getElementById('ReportDetailList_' + i + '_QueryString'), {
					mode: 'sql',
					theme: '3024-night',
					lineNumbers: true,
					autoCloseBrackets: true,
					autoCloseTags: true
				}); 
			}	
		}	
		InitializeForm();
    });
</script>
}