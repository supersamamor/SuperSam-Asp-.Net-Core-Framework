@using Models
@model MailSettingViewModel

<div class="col-md-12">
	<label asp-for="@Model.ReportId" class="fieldrequired"></label>
	<select asp-for="@Model.ReportId" class="form-control" asp-items="@(dropdownService.GetReportList(Model.ReportId))"><option value="">- Select  -</option></select>
	<span asp-validation-for="@Model.ReportId" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Account" class="fieldrequired"></label>
	<input asp-for="@Model.Account" class="form-control" maxlength="50" />
	<span asp-validation-for="@Model.Account" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Password" class="fieldrequired"></label>
	<input asp-for="@Model.Password" class="form-control" maxlength="255" />
	<span asp-validation-for="@Model.Password" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Body" class="fieldrequired"></label>
	<input asp-for="@Model.Body" class="form-control" maxlength="2500" />
	<span asp-validation-for="@Model.Body" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Subject" class="fieldrequired"></label>
	<input asp-for="@Model.Subject" class="form-control" maxlength="50" />
	<span asp-validation-for="@Model.Subject" class="text-danger"></span>
	
</div>

