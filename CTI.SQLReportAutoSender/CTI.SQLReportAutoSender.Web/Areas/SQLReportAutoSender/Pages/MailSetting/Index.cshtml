@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Mail Setting List"];
    ViewData["ActiveMainPage"] = "MailSetting";
    ViewData["Level1"] = "SQLReportAutoSender";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="mailSetting" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["ReportId"]
							</th>
							<th>
								@Localizer["Account"]
							</th>
							<th>
								@Localizer["Password"]
							</th>
							<th>
								@Localizer["Body"]
							</th>
							<th>
								@Localizer["Subject"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#mailSetting').DataTable({
            select: false,
            serverSide: true,
            order: [[ 5, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/MailSetting/Index", new { area = "SQLReportAutoSender", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "reportId", name: "ReportId", responsivePriority: 1, title: '@Localizer["ReportId"]', searchable: false },
				{ data: "account", name: "Account", responsivePriority: 1, title: '@Localizer["Account"]', searchable: false },
				{ data: "password", name: "Password", responsivePriority: 1, title: '@Localizer["Password"]', searchable: false },
				{ data: "body", name: "Body", responsivePriority: 1, title: '@Localizer["Body"]', searchable: false },
				{ data: "subject", name: "Subject", responsivePriority: 1, title: '@Localizer["Subject"]', searchable: false },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/MailSetting/Details", new { area = "SQLReportAutoSender" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btn-secondary btnViewMailSetting">@Localizer["View"]</a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MailSetting.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/MailSetting/Edit", new { area = "SQLReportAutoSender" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btn-primary btnEditMailSetting">@Localizer["Edit"]</a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MailSetting.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/MailSetting/Delete", new { area = "SQLReportAutoSender" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btn-danger btnDeleteMailSetting">@Localizer["Delete"]</a>';
                    </text>
                }
				   
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MailSetting.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/MailSetting/Add", new { area = "SQLReportAutoSender" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#mailSetting tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddMailSetting",".btnEditMailSetting",".btnViewMailSetting",".btnDeleteMailSetting"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddMailSetting",".btnEditMailSetting",".btnViewMailSetting",".btnDeleteMailSetting"]);
    });
</script>
}