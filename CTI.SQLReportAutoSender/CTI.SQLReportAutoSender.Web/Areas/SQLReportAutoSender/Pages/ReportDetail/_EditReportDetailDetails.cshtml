@using Models
@model ReportDetailViewModel

<div class="col-md-12">
	<label asp-for="@Model.ReportId" class="fieldrequired"></label>
	<select asp-for="@Model.ReportId" class="form-control" asp-items="@(dropdownService.GetReportList(Model.ReportId))"><option value="">- Select  -</option></select>
	<span asp-validation-for="@Model.ReportId" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ReportDetailNumber" class="fieldrequired"></label>
	<input asp-for="@Model.ReportDetailNumber" class="form-control"  />
	<span asp-validation-for="@Model.ReportDetailNumber" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.Description" class="fieldrequired"></label>
	<input asp-for="@Model.Description" class="form-control" maxlength="255" />
	<span asp-validation-for="@Model.Description" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.ConnectionString" class="fieldrequired"></label>
	<input asp-for="@Model.ConnectionString" class="form-control" maxlength="255" />
	<span asp-validation-for="@Model.ConnectionString" class="text-danger"></span>
	
</div>
<div class="col-md-12">
	<label asp-for="@Model.QueryString" class="fieldrequired"></label>
	<input asp-for="@Model.QueryString" class="form-control" maxlength="8000" />
	<span asp-validation-for="@Model.QueryString" class="text-danger"></span>
	
</div>

