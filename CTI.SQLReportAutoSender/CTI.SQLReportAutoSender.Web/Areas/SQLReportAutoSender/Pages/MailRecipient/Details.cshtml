@page
@model DetailsModel
@{
    ViewData["Title"] = Localizer["View Recipient"];
    ViewData["ActiveMainPage"] = "MailRecipient";
    ViewData["Level1"] = "SQLReportAutoSender";
}
<div class="container-fluid" id="mailRecipient-container">
    <input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.MailRecipient" />
    </div> 
</div>
<div class="row">
    <div class="col-12">
        <p>
            <a asp-page="Index" class="btn btn-secondary">@Localizer["Close"]</a>
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MailRecipient.Create)).Succeeded)
            {
                <a asp-page="Add" class="btn btn-success">@Localizer["Add"]</a>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MailRecipient.Edit)).Succeeded)
            {
                <a asp-page="Edit" asp-route-id="@Model.MailRecipient.Id" class="btn btn-primary">@Localizer["Edit"]</a>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.MailRecipient.Delete)).Succeeded)
            {
                <a asp-page="Delete" asp-route-id="@Model.MailRecipient.Id" class="btn btn-danger">@Localizer["Delete"]</a>
            }
        </p>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DisableFieldsPartial" model="@("mailRecipient-container")" />
}