@page
@model EditModel

@{
    ViewData["ActiveMainPage"] = "Applications";
    ViewData["Title"] = Localizer["Edit Application"];
}
<div class="card">
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="@Model.Application!.ClientId" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Application!.ClientId" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Application!.DisplayName" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Application!.DisplayName" class="form-control" />
                    <span asp-validation-for="@Model.Application!.DisplayName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Application!.RedirectUri" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Application!.RedirectUri" class="form-control" />
                    <span asp-validation-for="@Model.Application!.RedirectUri" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Application!.Scopes" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Application!.Scopes" class="form-control" />
                    <span asp-validation-for="@Model.Application!.Scopes" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a asp-page="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                    <button asp-page-handler="Generate" type="submit" class="btn btn-primary">@Localizer["Generate new secret"]</button>
                    <button asp-page-handler="Edit" type="submit" class="btn btn-success">@Localizer["Save changes"]</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}