@page
@model IndexModel

@section Styles {
    <partial name="_DataTableStyles" />
}

@{
    ViewData["ActiveMainPage"] = "APIs";
    ViewData["Title"] = Localizer["APIs List"];
}
<div class="card">
    <div class="card-body">
        <table id="scopes" class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Scope!.Name)
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>

<partial name="_FormModalPartial" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DataTableScripts" />
    <script asp-add-nonce>
	$(document).ready(function () {
		var table = $('#scopes').DataTable({
			serverSide: true,
			order: [[ 0, 'asc' ]],
			ajax:
			{
				url: '@Url.Page("/Apis/Index", new { area = "Admin", handler = "ListAll" })',
				type: "POST",
				headers: {
					RequestVerificationToken:
						$('input:hidden[name="__RequestVerificationToken"]').val()
				},
			},
			columns: [
				{ data: "name", name: "Name", title: '@Localizer["Name"]' },
			],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Apis.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var title = '@Localizer["Add API"]';
                        var url = '@Url.Page("/Apis/Add", new { area = "Admin", handler = "Add" })';
                        openFormModal(url, title, function() {
                            dt.order([dt.init().columns.length - 1, 'asc']).page('last').draw(false);
                        });
                    },
				},
            </text>
        }
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Apis.Edit)).Succeeded)
        {
	        <text>
                {
                    extend: 'selectedSingle',
					text: '@Localizer["Edit"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Apis/Edit", new { area = "Admin", handler = "Details" })' + '&name=' + dt.row({ selected: true }).data().name;
                        window.location.href = url;
                    },
				},
	        </text>
        }
                {
                    extend: 'selectedSingle',
					text: '@Localizer["View"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/Apis/View", new { area = "Admin", handler = "Details" })' + '&name=' + dt.row({ selected: true }).data().name;
                        window.location.href = url;
                    },
				},
				'excel', 'pdf', 'pageLength',
			],
		});
	});
    </script>
}