@using Models
@model AddViewModel

<div class="card">
    <input type="hidden" asp-for="@Model.EntityId" value="@CTI.DSF.Core.Constants.Entities.Default" />
    <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["User Info"]</span><br></h5>
    <div class="card-body">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label fieldrequired"><strong>Email :</strong></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label fieldrequired"><strong>Password :</strong></label>
                    <input asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.ConfirmPassword" class="form-label fieldrequired"><strong>Confirm Password :</strong></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label fieldrequired"><strong>Full Name :</strong></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.CompanyId" class="form-label fieldrequired"><strong>Company :</strong></label>
                    <select asp-for="@Model.CompanyId"
                            class="select2 form-control"
                            asp-items="@(await dropdownService.GetEntities());">
                        <option></option>
                    </select>
                    <span asp-validation-for="@Model.CompanyId" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="@Model.DepartmentId" class="form-label fieldrequired"><strong>Department :</strong></label>
                    <select asp-for="@Model.DepartmentId"
                            class="select2 form-control"
                            asp-items="@(await dropdownService.GetDepartments(Model.CompanyId));">
                        <option></option>
                    </select>
                    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="card">
    <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["Roles"]</span><br></h5>
    <div class="card-body" style="overflow-x:scroll;">
        <partial name="_EditRoles" model="Model.Roles" />
    </div>
</div>