@using Models
@model AssignmentViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.AssignmentCode" class="form-label fieldrequired"><strong>@Localizer["Assignment Code"] :</strong></label>
			<input asp-for="@Model.AssignmentCode" class="form-control" maxlength="450" />
			<span asp-validation-for="@Model.AssignmentCode" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TaskListId" class="form-label fieldrequired"><strong>@Localizer["Task List Id"] :</strong></label>
			<select asp-for="@Model.TaskListId" class="form-control" asp-items="@(dropdownService.GetTaskListList(Model.TaskListId))"><option value="">- Select Task List Id -</option></select>
			<span asp-validation-for="@Model.TaskListId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.PrimaryAssignee" class="form-label "><strong>@Localizer["Primary Assignee"] :</strong></label>
			<input asp-for="@Model.PrimaryAssignee" class="form-control" maxlength="36" />
			<span asp-validation-for="@Model.PrimaryAssignee" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.AlternateAssignee" class="form-label fieldrequired"><strong>@Localizer["Alternate Assignee"] :</strong></label>
			<input asp-for="@Model.AlternateAssignee" class="form-control" maxlength="36" />
			<span asp-validation-for="@Model.AlternateAssignee" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.StartDate" class="form-label "><strong>@Localizer["Start Date"] :</strong></label>
			<input asp-for="@Model.StartDate" class="form-control"  />
			<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.EndDate" class="form-label "><strong>@Localizer["End Date"] :</strong></label>
			<input asp-for="@Model.EndDate" class="form-control"  />
			<span asp-validation-for="@Model.EndDate" class="text-danger"></span>
			
	</div>
</div>

</div>
