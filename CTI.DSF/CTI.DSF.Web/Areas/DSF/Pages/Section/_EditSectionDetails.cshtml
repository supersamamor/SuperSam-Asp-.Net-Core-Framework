@using Models
@model SectionViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DepartmentCode" class="form-label "><strong>@Localizer["Department Code"] :</strong></label>
			<input asp-for="ForeignKeyDepartment" class="form-control"   readonly />
			<span asp-validation-for="@Model.DepartmentCode" class="text-danger"></span>
			<input type="hidden" asp-for="@Model.DepartmentCode"/>
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.SectionCode" class="form-label fieldrequired"><strong>@Localizer["Section Code"] :</strong></label>
			<input asp-for="@Model.SectionCode" class="form-control"  />
			<span asp-validation-for="@Model.SectionCode" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.SectionName" class="form-label fieldrequired"><strong>@Localizer["Section Name"] :</strong></label>
			<input asp-for="@Model.SectionName" class="form-control"  />
			<span asp-validation-for="@Model.SectionName" class="text-danger"></span>
			
	</div>
</div>

</div>
