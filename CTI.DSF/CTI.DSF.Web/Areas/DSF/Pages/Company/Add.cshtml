@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Company"];
    ViewData["ActiveMainPage"] = "Company";
    ViewData["Level1"] = "DSF";
}
<form id="company-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Company" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group">
        <a asp-page="Index" id="btnCancelConfirmationModal" class="btn btn-secondary" title="@Localizer["Back"]"><i class="fas fa-arrow-left"></i></a>
        <button type="button" id="btnConfirmationModal" class="btn btn-success" title="@Localizer["Save changes"]"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_DepartmentListValidationPartial" model="@Model.Company" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{			
			$.bindSaveConfirmationModal('Save', '#btnConfirmationModal','#company-form');
            $.bindCancelConfirmationModal('Cancel', '#btnCancelConfirmationModal','#company-form', 'Do you want to cancel the changes?');
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeDepartmentFieldValidations($('#DepartmentCount').val());
			$('.RemoveDepartmentButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveDepartment');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#company-form', InitializeForm);
			});

			$('#btnAddDepartment').on( 'click', function () {
				$('#AsyncAction').val('AddDepartment');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#company-form', InitializeForm);
			});

		}	
		InitializeForm();
    });
</script>
}