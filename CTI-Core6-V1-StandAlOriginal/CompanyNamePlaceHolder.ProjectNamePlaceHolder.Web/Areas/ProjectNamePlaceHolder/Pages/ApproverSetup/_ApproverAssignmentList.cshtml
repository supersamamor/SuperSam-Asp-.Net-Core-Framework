@using Models
@model ApproverSetupViewModel
<input type="hidden" id="ApproverAssignmentCount" value="@Model?.ApproverAssignmentList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Approver Assignment"]</h5>
                    </button>
                    <button type="button" id="btnAddApproverAssignment" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveApproverAssignment" value="RemoveApproverAssignment" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="approverAssignment" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th style="display:none;"></th>
                            <th>
                                @Localizer["Approver Type"]
                            </th>
                            <th>
                                @Localizer["Approver"]
                            </th>
                            <th>
                                @Localizer["Sequence"]
                            </th>
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ApproverAssignmentList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ApproverAssignmentList.OrderBy(l => l.Sequence))
                            {
                                <tr>
                                    <td style="display:none;">
                                        <input type="hidden" name="ApproverAssignmentList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ApproverAssignmentList[@counter].ApproverSetupId" value="@item.ApproverSetupId" />
                                    </td>
                                    <td>
                                        <select asp-for="@item.ApproverType" name="ApproverAssignmentList[@counter].ApproverType" asp-items="@CompanyNamePlaceHolder.ProjectNamePlaceHolder.Core.AreaPlaceHolder.ApproverTypes.ApproverTypeList.Select(l => new SelectListItem { Value = l, Text = l })" class="form-control SelectApproverTypeDropdown">
                                            <option selected="selected" value="">- Select Approver Type -</option>
                                        </select>
                                        <span data-valmsg-for="ApproverAssignmentList[@counter].ApproverType" asp-validation-for="@item.ApproverType" class="text-danger"></span>
                                    </td>
                                    <td>
                                        @if (@item.ApproverType == @CompanyNamePlaceHolder.ProjectNamePlaceHolder.Core.AreaPlaceHolder.ApproverTypes.User)
                                        {
                                            <select asp-for="@item.ApproverUserId" name="ApproverAssignmentList[@counter].ApproverUserId" asp-items="@(await dropdownService.GetUserList(@item.ApproverUserId!, Model.ApproverAssignmentList.Select(l=>l.ApproverUserId).ToList()!))" class="form-control SelectApproverDropdown">
                                                <option selected="selected" value="">- Select Approver -</option>
                                            </select>
                                            <span data-valmsg-for="ApproverAssignmentList[@counter].ApproverUserId" asp-validation-for="@item.ApproverUserId" class="text-danger"></span>
                                        }
                                        else if (@item.ApproverType == @CompanyNamePlaceHolder.ProjectNamePlaceHolder.Core.AreaPlaceHolder.ApproverTypes.Role)
                                        {
                                            <select asp-for="@item.ApproverRoleId" name="ApproverAssignmentList[@counter].ApproverRoleId" asp-items="@(await dropdownService.GetRoleApproverList(@item.ApproverRoleId!, Model.ApproverAssignmentList.Select(l=>l.ApproverRoleId).ToList()!))" class="form-control SelectApproverDropdown">
                                                <option selected="selected" value="">- Select Approver Role -</option>
                                            </select>
                                            <span data-valmsg-for="ApproverAssignmentList[@counter].ApproverRoleId" asp-validation-for="@item.ApproverRoleId" class="text-danger"></span>
                                        }
                                    </td>
                                    <td>
                                        <input asp-for="@item.Sequence" name="ApproverAssignmentList[@counter].Sequence" value="@(counter+1)" class="form-control" maxlength="9" readonly />
                                        <span data-valmsg-for="ApproverAssignmentList[@counter].Sequence" asp-validation-for="@item.Sequence" class="text-danger"></span>
                                    </td>

                                    <td>
                                        <button type="button" class="btn-field btn btn-primary MoveUpApproverAssignmentButton cancel" title="@Localizer["Move-up"]" moveUpId="@(item.Id)">
                                            <i class="fas fa-caret-up"></i>
                                        </button>
                                        <button type="button" class="btn-field btn btn-primary MoveDownApproverAssignmentButton cancel" title="@Localizer["Move-down"]" moveDownId="@(item.Id)">
                                            <i class="fas fa-caret-down"></i>
                                        </button>
                                        <button type="button" class="btn-field btn btn-danger RemoveApproverAssignmentButton cancel" title="@Localizer["Remove ApproverAssignment"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
