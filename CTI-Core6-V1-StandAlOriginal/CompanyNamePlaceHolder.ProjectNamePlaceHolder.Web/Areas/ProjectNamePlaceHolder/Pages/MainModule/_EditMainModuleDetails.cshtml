@using Models
@model MainModuleViewModel

<div class="col-md-12">
    <label asp-for="@Model.Code" class="fieldrequired"></label>
    <input asp-for="@Model.Code" class="form-control" maxlength="255" />
    <span asp-validation-for="@Model.Code" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="@Model.ParentModuleId" class="fieldrequired"></label>
    <select asp-for="@Model.ParentModuleId" class="form-control" asp-items="@(await dropdownService.GetParentModuleList())"><option value="">- Select ParentModule -</option></select>
    <span asp-validation-for="@Model.ParentModuleId" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="@Model.FileUpload" class="fieldrequired"></label>
    <input asp-for="@Model.FileUploadForm" class="file-upload-control" style="display:block" /> @if (!string.IsNullOrEmpty(Model.FileUpload))
    {
        <div class="input-group col-md-12" style="padding-left:0px;padding-right:0px;margin-top:10px;"><input asp-for="@Model.FileUpload" class="form-control" readonly /><a href="/@WebConstants.UploadFilesPath/@Model.FileUpload" class="input-group-text" style="cursor:pointer;background:#28a745;color:#fff;font-weight:700;" target="_blank">@Localizer["View"]</a></div>
    }
    <span asp-validation-for="@Model.FileUpload" class="text-danger"></span>
</div>


