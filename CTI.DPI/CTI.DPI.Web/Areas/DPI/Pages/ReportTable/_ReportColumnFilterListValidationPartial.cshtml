@using Models
@model ReportTableViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeReportColumnFilterFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "ReportColumnFilterList[" + idx + "].ReportFilterGroupingId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Report Filter Grouping"});
				reqs.push({name: "ReportColumnFilterList[" + idx + "].LogicalOperator", el: "Input", minlength:0, maxlength:50, isrequired: false, description: "Logical Operator"});
				reqs.push({name: "ReportColumnFilterList[" + idx + "].TableId", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Table"});
				reqs.push({name: "ReportColumnFilterList[" + idx + "].FieldName", el: "Input", minlength:0, maxlength:255, isrequired: false, description: "Field Name"});
				reqs.push({name: "ReportColumnFilterList[" + idx + "].ComparisonOperator", el: "Input", minlength:0, maxlength:50, isrequired: false, description: "Comparison Operator"});
				reqs.push({name: "ReportColumnFilterList[" + idx + "].IsString", el: "Input", minlength:0, maxlength:0, isrequired: false, description: "Is String"});
				
			}
			let validator = $("#reportTable-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>