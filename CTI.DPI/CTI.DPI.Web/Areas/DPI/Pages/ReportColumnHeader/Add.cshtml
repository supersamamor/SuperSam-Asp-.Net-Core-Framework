@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Column Header"];
    ViewData["ActiveMainPage"] = "ReportColumnHeader";
    ViewData["Level1"] = "DPI";
}
<form id="reportColumnHeader-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.ReportColumnHeader" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group">
        <a asp-page="Index" id="btnCancelConfirmationModal" class="btn btn-secondary" title="@Localizer["Back"]"><i class="fas fa-arrow-left"></i></a>
        <button type="button" id="btnConfirmationModal" class="btn btn-success" title="@Localizer["Save changes"]"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_ReportColumnDetailListValidationPartial" model="@Model.ReportColumnHeader" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{			
			$.bindSaveConfirmationModal('Save', '#btnConfirmationModal','#reportColumnHeader-form');
            $.bindCancelConfirmationModal('Cancel', '#btnCancelConfirmationModal','#reportColumnHeader-form', 'Do you want to cancel the changes?');
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.InitializeReportColumnDetailFieldValidations($('#ReportColumnDetailCount').val());
			$('.RemoveReportColumnDetailButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveReportColumnDetail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#reportColumnHeader-form', InitializeForm);
			});

			$('#btnAddReportColumnDetail').on( 'click', function () {
				$('#AsyncAction').val('AddReportColumnDetail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#reportColumnHeader-form', InitializeForm);
			});

			$.fn.reporttableSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/ReportTable/Index", new { area = "DPI", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			var reporttablelistdropdowns = document.getElementsByClassName('SelectReportTable');
			for ( var i=0; i< reporttablelistdropdowns.length; i++) {
				$("#ReportColumnDetailList_"+i+"_TableId").reporttableSelect();
			}

			$.fn.reportSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/Report/Index", new { area = "DPI", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#ReportId").reportSelect();

		}	
		InitializeForm();
    });
</script>
}