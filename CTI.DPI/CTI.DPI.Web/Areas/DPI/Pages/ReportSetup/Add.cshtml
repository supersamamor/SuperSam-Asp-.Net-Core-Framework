@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Report Setup"];
    ViewData["ActiveMainPage"] = "ReportSetup";
    ViewData["Level1"] = "Admin";
}
<partial name="_CodeMirrorStyles" />
<form id="report-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
    <div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Report" />
    </div>
    <div id="toolbar-container" class="btn-group" role="group">
        <a asp-page="Index" id="btnCancelConfirmationModal" class="btn btn-secondary" title="@Localizer["Back"]"><i class="fas fa-arrow-left"></i></a>
        <button type="button" id="btnConfirmationModal" class="btn btn-success" title="@Localizer["Save changes"]"><i class="fas fa-save"></i></button>
    </div>
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ReportTableListValidationPartial" model="@Model.Report" />
    <partial name="_ReportTableJoinParameterListValidationPartial" model="@Model.Report" />
    <partial name="_ReportColumnHeaderListValidationPartial" model="@Model.Report" />
    <partial name="_ReportFilterGroupingListValidationPartial" model="@Model.Report" />
    <partial name="_ReportQueryFilterListValidationPartial" model="@Model.Report" />
    <partial name="_CodeMirrorScripts" />
    <script asp-add-nonce>
        $(document).ready(function () {
            function InitializeForm() {
                $.bindSaveConfirmationModal('Save', '#btnConfirmationModal', '#report-form');
                $.bindCancelConfirmationModal('Cancel', '#btnCancelConfirmationModal', '#report-form', 'Do you want to cancel the changes?');
                $('.DisableSelectDropdown').on('mousedown', function (e) {
                    e.preventDefault();
                    this.blur();
                    window.focus();
                });

                $.InitializeReportTableFieldValidations($('#ReportTableCount').val());
                $('.RemoveReportTableButton ').on('click', function () {
                    $('#RemoveSubDetailId').val($(this).attr('removeid'));
                    $('#AsyncAction').val('RemoveReportTable');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $('#btnAddReportTable').on('click', function () {
                    $('#AsyncAction').val('AddReportTable');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $.InitializeReportTableJoinParameterFieldValidations($('#ReportTableJoinParameterCount').val());
                $('.RemoveReportTableJoinParameterButton ').on('click', function () {
                    $('#RemoveSubDetailId').val($(this).attr('removeid'));
                    $('#AsyncAction').val('RemoveReportTableJoinParameter');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $('#btnAddReportTableJoinParameter').on('click', function () {
                    $('#AsyncAction').val('AddReportTableJoinParameter');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $.fn.reporttableSelect = function () {
                    this.filter("select").each(function () {
                        $(this).ajaxSelect({
                            ajax: {
                                url: '@Url.Page("/ReportTable/Index", new { area = "DPI", handler = "Select2Data" })',
                            }
                        });
                    });
                    return this;
                };
                var reporttablelistdropdowns = document.getElementsByClassName('SelectReportTable');
                for (var i = 0; i < reporttablelistdropdowns.length; i++) {
                    $("#ReportTableJoinParameterList_" + i + "_TableId").reporttableSelect();
                }

                $.InitializeReportColumnHeaderFieldValidations($('#ReportColumnHeaderCount').val());
                $('.RemoveReportColumnHeaderButton ').on('click', function () {
                    $('#RemoveSubDetailId').val($(this).attr('removeid'));
                    $('#AsyncAction').val('RemoveReportColumnHeader');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $('#btnAddReportColumnHeader').on('click', function () {
                    $('#AsyncAction').val('AddReportColumnHeader');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $.InitializeReportFilterGroupingFieldValidations($('#ReportFilterGroupingCount').val());
                $('.RemoveReportFilterGroupingButton ').on('click', function () {
                    $('#RemoveSubDetailId').val($(this).attr('removeid'));
                    $('#AsyncAction').val('RemoveReportFilterGrouping');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $('#btnAddReportFilterGrouping').on('click', function () {
                    $('#AsyncAction').val('AddReportFilterGrouping');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $.InitializeReportQueryFilterFieldValidations($('#ReportQueryFilterCount').val());
                $('.RemoveReportQueryFilterButton ').on('click', function () {
                    $('#RemoveSubDetailId').val($(this).attr('removeid'));
                    $('#AsyncAction').val('RemoveReportQueryFilter');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });

                $('#btnAddReportQueryFilter').on('click', function () {
                    $('#AsyncAction').val('AddReportQueryFilter');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });
                $('#QueryType, #ReportOrChartType, .DataType, #DisplayOnDashboard').on('change', function () {
                    $('#AsyncAction').val('');
                    $.triggerPageForm('ChangeFormValue', '#PartialLoaderContainer', '#report-form', InitializeForm);
                });
                const textAreaQueryString = document.getElementById('QueryString');
                if (textAreaQueryString) {
                    var editor = CodeMirror.fromTextArea(
                        textAreaQueryString, {
                        mode: 'sql',
                        theme: '3024-night',
                        lineNumbers: true,
                        autoCloseBrackets: true,
                        autoCloseTags: true
                    });
                }           
            }
            InitializeForm();
        });
    </script>
}