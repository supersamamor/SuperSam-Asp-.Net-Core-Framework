@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Column Filter List"];
    ViewData["ActiveMainPage"] = "ReportColumnFilter";
    ViewData["Level1"] = "DPI";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="reportColumnFilter" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Report Filter Grouping"]
							</th>
							<th>
								@Localizer["Logical Operator"]
							</th>
							<th>
								@Localizer["Table"]
							</th>
							<th>
								@Localizer["Field Name"]
							</th>
							<th>
								@Localizer["Comparison Operator"]
							</th>
							<th>
								@Localizer["Is String"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#reportColumnFilter').DataTable({
            select: false,
            serverSide: true,
            order: [[ 6, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/ReportColumnFilter/Index", new { area = "DPI", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "reportFilterGroupingId", name: "ReportFilterGroupingId", responsivePriority: 1, title: '@Localizer["Report Filter Grouping"]', searchable: false },
				{ data: "logicalOperator", name: "LogicalOperator", responsivePriority: 1, title: '@Localizer["Logical Operator"]', searchable: false },
				{ data: "tableId", name: "TableId", responsivePriority: 1, title: '@Localizer["Table"]', searchable: false },
				{ data: "fieldName", name: "FieldName", responsivePriority: 1, title: '@Localizer["Field Name"]', searchable: false },
				{ data: "comparisonOperator", name: "ComparisonOperator", responsivePriority: 1, title: '@Localizer["Comparison Operator"]', searchable: false },
				{ data: "isString", name: "IsString", responsivePriority: 1, title: '@Localizer["Is String"]', searchable: false },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/ReportColumnFilter/Details", new { area = "DPI" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewReportColumnFilter" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.ReportColumnFilter.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/ReportColumnFilter/Edit", new { area = "DPI" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditReportColumnFilter" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.ReportColumnFilter.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/ReportColumnFilter/Delete", new { area = "DPI" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteReportColumnFilter" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders"></i></a>';
                    </text>
                }
				  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.ReportColumnFilter.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/ReportColumnFilter/Add", new { area = "DPI" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#reportColumnFilter tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddReportColumnFilter",".btnEditReportColumnFilter",".btnViewReportColumnFilter",".btnDeleteReportColumnFilter"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddReportColumnFilter",".btnEditReportColumnFilter",".btnViewReportColumnFilter",".btnDeleteReportColumnFilter"]);
        $.EnableNavbarSearch(table);
    });
</script>
}