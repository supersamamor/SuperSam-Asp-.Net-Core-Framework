@using Models
@model ReportColumnFilterViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ReportFilterGroupingId" class="form-label "><strong>@Localizer["Report Filter Grouping"] :</strong></label>
			<select asp-for="@Model.ReportFilterGroupingId" class="form-control" asp-items="@(dropdownService.GetReportFilterGroupingList(Model.ReportFilterGroupingId))"><option value="">- Select Report Filter Grouping -</option></select>
			<span asp-validation-for="@Model.ReportFilterGroupingId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LogicalOperator" class="form-label "><strong>@Localizer["Logical Operator"] :</strong></label>
			<input asp-for="@Model.LogicalOperator" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.LogicalOperator" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TableId" class="form-label "><strong>@Localizer["Table"] :</strong></label>
			<select asp-for="@Model.TableId" class="form-control" asp-items="@(dropdownService.GetReportTableList(Model.TableId))"><option value="">- Select Table -</option></select>
			<span asp-validation-for="@Model.TableId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.FieldName" class="form-label "><strong>@Localizer["Field Name"] :</strong></label>
			<input asp-for="@Model.FieldName" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.FieldName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ComparisonOperator" class="form-label "><strong>@Localizer["Comparison Operator"] :</strong></label>
			<input asp-for="@Model.ComparisonOperator" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.ComparisonOperator" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.IsString" class="form-label "><strong>@Localizer["Is String"] :</strong></label>
			<input asp-for="@Model.IsString" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.IsString" class="text-danger"></span>
			
	</div>
</div>

</div>
