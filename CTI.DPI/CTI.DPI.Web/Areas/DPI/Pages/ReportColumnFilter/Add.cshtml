@page
@model AddModel
@{
    ViewData["Title"] = Localizer["Add Column Filter"];
    ViewData["ActiveMainPage"] = "ReportColumnFilter";
    ViewData["Level1"] = "DPI";
}
<form id="reportColumnFilter-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
	<div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.ReportColumnFilter" />
    </div> 
	<div id="toolbar-container" class="btn-group" role="group">
        <a asp-page="Index" id="btnCancelConfirmationModal" class="btn btn-secondary" title="@Localizer["Back"]"><i class="fas fa-arrow-left"></i></a>
        <button type="button" id="btnConfirmationModal" class="btn btn-success" title="@Localizer["Save changes"]"><i class="fas fa-save"></i></button>
    </div>   
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />

<script asp-add-nonce>
    $(document).ready(function () {
		function InitializeForm()
		{			
			$.bindSaveConfirmationModal('Save', '#btnConfirmationModal','#reportColumnFilter-form');
            $.bindCancelConfirmationModal('Cancel', '#btnCancelConfirmationModal','#reportColumnFilter-form', 'Do you want to cancel the changes?');
			$('.DisableSelectDropdown').on('mousedown', function(e) {
				e.preventDefault();
				this.blur();
				window.focus();
			});
			
			$.fn.reporttableSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/ReportTable/Index", new { area = "DPI", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#TableId").reporttableSelect();

			$.fn.reportfiltergroupingSelect = function() {
				this.filter("select").each(function() {
					$(this).ajaxSelect({
						ajax: {
							url: '@Url.Page("/ReportFilterGrouping/Index", new { area = "DPI", handler = "Select2Data" })',
						}
					});
				});
				return this;
			};
			$("#ReportFilterGroupingId").reportfiltergroupingSelect();

		}	
		InitializeForm();
    });
</script>
}