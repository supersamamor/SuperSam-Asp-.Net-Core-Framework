@using Models
@model ReportTableJoinParameterViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.ReportId" class="form-label fieldrequired"><strong>@Localizer["Report"] :</strong></label>
			<select asp-for="@Model.ReportId" class="form-control" asp-items="@(dropdownService.GetReportList(Model.ReportId))"><option value="">- Select Report -</option></select>
			<span asp-validation-for="@Model.ReportId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.LogicalOperator" class="form-label "><strong>@Localizer["Logical Operator"] :</strong></label>
			<input asp-for="@Model.LogicalOperator" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.LogicalOperator" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.TableId" class="form-label fieldrequired"><strong>@Localizer["Table"] :</strong></label>
			<select asp-for="@Model.TableId" class="form-control" asp-items="@(dropdownService.GetReportTableList(Model.TableId))"><option value="">- Select Table -</option></select>
			<span asp-validation-for="@Model.TableId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.FieldName" class="form-label fieldrequired"><strong>@Localizer["Field Name"] :</strong></label>
			<input asp-for="@Model.FieldName" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.FieldName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.JoinFromTableId" class="form-label fieldrequired"><strong>@Localizer["Join from Table"] :</strong></label>
			<input asp-for="@Model.JoinFromTableId" class="form-control"  />
			<span asp-validation-for="@Model.JoinFromTableId" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.JoinFromFieldName" class="form-label fieldrequired"><strong>@Localizer["Join from FieldName"] :</strong></label>
			<input asp-for="@Model.JoinFromFieldName" class="form-control" maxlength="255" />
			<span asp-validation-for="@Model.JoinFromFieldName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Sequence" class="form-label fieldrequired"><strong>@Localizer["Sequence"] :</strong></label>
			<input asp-for="@Model.Sequence" class="form-control"  />
			<span asp-validation-for="@Model.Sequence" class="text-danger"></span>
			
	</div>
</div>

</div>
