@page
@model DetailsModel

@{
    ViewData["Title"] = Localizer["Application Details"];
    ViewData["ActiveMainPage"] = "Applications";
    ViewData["Level1"] = "Admin";
}
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Application Details"]</h5>
                    </button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="@Model.Application.ClientId" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.Application.ClientId" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.Application.ClientSecret" class="col-md-3 col-form-label"></label>
                    <div class="col-md-9">
                        <input asp-for="@Model.Application.ClientSecret" class="form-control" readonly />
                    </div>
                </div>
                <div class="alert alert-warning">
                    Copy the client secret and store in a secure place.
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <p>
            <a asp-page="Index" class="btn btn-secondary">@Localizer["Close"]</a>
        </p>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>