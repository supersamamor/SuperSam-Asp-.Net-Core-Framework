@using Models
@model ProjectPackageViewModel
<input type="hidden" id="ProjectPackageAdditionalDeliverableCount" value="@Model?.ProjectPackageAdditionalDeliverableList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Project Package Additional Deliverable"]</h5>
                    </button>
                    <button type="button" id="btnAddProjectPackageAdditionalDeliverable" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveProjectPackageAdditionalDeliverable" value="RemoveProjectPackageAdditionalDeliverable" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="projectPackageAdditionalDeliverable" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
							<th style="display:none;"></th>
                            <th>
								@Localizer["Deliverable"]
							</th>
							<th>
								@Localizer["Sequence"]
							</th>
							
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProjectPackageAdditionalDeliverableList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ProjectPackageAdditionalDeliverableList)
                            {
                                <tr>
									<td style="display:none;">
                                        <input type="hidden" name="ProjectPackageAdditionalDeliverableList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ProjectPackageAdditionalDeliverableList[@counter].ProjectPackageId" value="@item.ProjectPackageId" />                                      
                                    </td>
                                    <td>
										<select asp-for="@item.DeliverableId" id="ProjectPackageAdditionalDeliverableList_@(counter)_DeliverableId" name="ProjectPackageAdditionalDeliverableList[@counter].DeliverableId" class="form-control SelectDeliverable" asp-items="@(dropdownService.GetDeliverableList(item.DeliverableId))" >
											<option value="">- Select Deliverable -</option>
										</select>
										<span data-valmsg-for="ProjectPackageAdditionalDeliverableList[@counter].DeliverableId" asp-validation-for="@item.DeliverableId" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Sequence" name="ProjectPackageAdditionalDeliverableList[@counter].Sequence" class="form-control"  />
										<span data-valmsg-for="ProjectPackageAdditionalDeliverableList[@counter].Sequence" asp-validation-for="@item.Sequence" class="text-danger"></span>
										
									</td>
									
                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveProjectPackageAdditionalDeliverableButton cancel" title="@Localizer["Remove ProjectPackageAdditionalDeliverable"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
