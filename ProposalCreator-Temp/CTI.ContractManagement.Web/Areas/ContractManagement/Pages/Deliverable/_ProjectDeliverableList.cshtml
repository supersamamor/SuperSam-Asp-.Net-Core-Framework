@using Models
@model DeliverableViewModel
<input type="hidden" id="ProjectDeliverableCount" value="@Model?.ProjectDeliverableList?.Count" />
<div class="row">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex">
                <div class="card-title flex-grow-1">
                    <button class="btn-field btn btn-block text-left text-black p-0" type="button" data-card-widget="collapse">
                        <h5>@Localizer["Project Deliverable"]</h5>
                    </button>
                    <button type="button" id="btnAddProjectDeliverable" class="btn-field btn btn-primary cancel">
                        <i class="fas fa-plus" style="float:left;padding-top: 7px;padding-right: 10px;"></i>
                        <h6 style="float:left;padding-top: 7px;">@Localizer["Add"]</h6>
                    </button>
                    <button class="cancel" type="button" id="btnRemoveProjectDeliverable" value="RemoveProjectDeliverable" style="display:none;"></button>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body" style="overflow:auto;">
                <table id="projectDeliverable" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
							<th style="display:none;"></th>
                            <th>
								@Localizer["Project"]
							</th>
							<th>
								@Localizer["Amount"]
							</th>
							<th>
								@Localizer["Sequence"]
							</th>
							
                            <th>
                                @Localizer["Action"]
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.ProjectDeliverableList != null)
                        {
                            int counter = 0;
                            foreach (var item in Model.ProjectDeliverableList)
                            {
                                <tr>
									<td style="display:none;">
                                        <input type="hidden" name="ProjectDeliverableList[@counter].Id" value="@item.Id" />
                                        <input type="hidden" name="ProjectDeliverableList[@counter].DeliverableId" value="@item.DeliverableId" />                                      
                                    </td>
                                    <td>
										<select asp-for="@item.ProjectId" id="ProjectDeliverableList_@(counter)_ProjectId" name="ProjectDeliverableList[@counter].ProjectId" class="form-control SelectProject" asp-items="@(dropdownService.GetProjectList(item.ProjectId))" >
											<option value="">- Select Project -</option>
										</select>
										<span data-valmsg-for="ProjectDeliverableList[@counter].ProjectId" asp-validation-for="@item.ProjectId" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Amount" name="ProjectDeliverableList[@counter].Amount" class="form-control"  />
										<span data-valmsg-for="ProjectDeliverableList[@counter].Amount" asp-validation-for="@item.Amount" class="text-danger"></span>
										
									</td>
									<td>
										<input  asp-for="@item.Sequence" name="ProjectDeliverableList[@counter].Sequence" class="form-control"  />
										<span data-valmsg-for="ProjectDeliverableList[@counter].Sequence" asp-validation-for="@item.Sequence" class="text-danger"></span>
										
									</td>
									
                                    <td>
                                        <button type="button" class="btn-field btn btn-danger RemoveProjectDeliverableButton cancel" title="@Localizer["Remove ProjectDeliverable"]" removeId="@(item.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
