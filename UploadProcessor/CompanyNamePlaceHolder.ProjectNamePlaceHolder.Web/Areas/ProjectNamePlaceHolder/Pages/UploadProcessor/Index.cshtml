@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Upload Processor List"];
    ViewData["ActiveMainPage"] = "UploadProcessor";
    ViewData["Level1"] = "ProjectNamePlaceHolder";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="uploadProcessor" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["File Type"]
							</th>
							<th>
								@Localizer["Path"]
							</th>
							<th>
								@Localizer["Status"]
							</th>
							<th>
								@Localizer["Start Date/Time"]
							</th>
							<th>
								@Localizer["End Date/Time"]
							</th>
							<th>
								@Localizer["Module"]
							</th>
							<th>
								@Localizer["Upload Type"]
							</th>
							  
														
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#uploadProcessor').DataTable({
            select: false,
            serverSide: true,
            order: [[ 7, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/UploadProcessor/Index", new { area = "ProjectNamePlaceHolder", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "fileType", name: "FileType", responsivePriority: 1, title: '@Localizer["File Type"]', searchable: true },
				{ data: "path", name: "Path", responsivePriority: 1, title: '@Localizer["Path"]', searchable: true },
				{ data: "status", name: "Status", responsivePriority: 1, title: '@Localizer["Status"]', searchable: true },
				{ data: "startDateTime", name: "StartDateTime", responsivePriority: 1, title: '@Localizer["Start Date/Time"]', searchable: false },
				{ data: "endDateTime", name: "EndDateTime", responsivePriority: 1, title: '@Localizer["End Date/Time"]', searchable: false },
				{ data: "module", name: "Module", responsivePriority: 1, title: '@Localizer["Module"]', searchable: true },
				{ data: "uploadType", name: "UploadType", responsivePriority: 1, title: '@Localizer["Upload Type"]', searchable: true },
				   
				
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/UploadProcessor/Details", new { area = "ProjectNamePlaceHolder" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewUploadProcessor" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.UploadProcessor.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/UploadProcessor/Edit", new { area = "ProjectNamePlaceHolder" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditUploadProcessor" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.UploadProcessor.Delete)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/UploadProcessor/Delete", new { area = "ProjectNamePlaceHolder" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat accent semicircle btnDeleteUploadProcessor" title="@Localizer["Delete"]"><i class="fas fa-trash btnNoBorders"></i></a>';
                    </text>
                }
				  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [
        @if ((await AuthorizationService.AuthorizeAsync(User, Permission.UploadProcessor.Create)).Succeeded)
        {
            <text>
                {
                    text: '@Localizer["Add"]',
                    action: function (e, dt, button, config) {
                        var url = '@Url.Page("/UploadProcessor/Add", new { area = "ProjectNamePlaceHolder" })';
                        window.location.href = url;
                    },
                    className: 'btn btn-success text-light',
                },
            </text>
        }
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#uploadProcessor tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddUploadProcessor",".btnEditUploadProcessor",".btnViewUploadProcessor",".btnDeleteUploadProcessor"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddUploadProcessor",".btnEditUploadProcessor",".btnViewUploadProcessor",".btnDeleteUploadProcessor"]);
        $.EnableNavbarSearch(table);
    });
</script>
}