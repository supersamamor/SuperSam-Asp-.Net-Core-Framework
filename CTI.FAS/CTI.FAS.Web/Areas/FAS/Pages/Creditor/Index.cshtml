@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Creditor List"];
    ViewData["ActiveMainPage"] = "Creditor";
    ViewData["Level1"] = "FAS";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="creditor" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Localizer["Database Connection Setup"]
                            </th>
                            <th>
                                @Localizer["Creditor Account"]
                            </th>
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#creditor').DataTable({
            select: false,
            serverSide: true,
            order: [[ 2, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Creditor/Index", new { area = "FAS", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
            initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
            columns: [
                { data: "databaseConnectionSetupId", name: "DatabaseConnectionSetupId", responsivePriority: 1, title: '@Localizer["Database Connection Setup"]', searchable: false },
                { data: "creditorAccount", name: "CreditorAccount", responsivePriority: 1, title: '@Localizer["Creditor Account"]', searchable: true },
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Creditor/Details", new { area = "FAS" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewCreditor" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Creditor.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Creditor/Edit", new { area = "FAS" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditCreditor" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
                { data: "payeeAccountName", name: "PayeeAccountName", visible: false, searchable: true },
            ],
            buttons: [
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
        function BindTableRowCollapseEvent()
        {
            $('#creditor tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddCreditor",".btnEditCreditor",".btnViewCreditor",".btnDeleteCreditor"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddCreditor",".btnEditCreditor",".btnViewCreditor",".btnDeleteCreditor"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}