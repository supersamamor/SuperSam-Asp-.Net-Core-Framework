@page
@model DetailsModel
@{
    ViewData["Title"] = Localizer["View Creditor"];
    ViewData["ActiveMainPage"] = "Creditor";
    ViewData["Level1"] = "FAS";
}
<div class="container-fluid" id="creditor-container">
    <input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
    <div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.Creditor" />
    </div>
</div>
<div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
    <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Close"]"><i class="fas fa-ban"></i></a>  
    @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Creditor.Edit)).Succeeded)
    {
        <a asp-page="Edit" asp-route-id="@Model.Creditor.Id" class="btn btn-primary" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>
    }   
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DisableFieldsPartial" model="@("creditor-container")" />
}