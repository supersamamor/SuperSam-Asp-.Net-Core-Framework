			<input asp-for="@Model.PayeeAccountAddress" class="form-control" maxlength="60" />
			<span asp-validation-for="@Model.PayeeAccountAddress" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Status" class="form-label "><strong>@Localizer["Status"] :</strong></label>
			<input asp-for="@Model.Status" class="form-control" maxlength="30" />
			<span asp-validation-for="@Model.Status" class="text-danger"></span>
			
	</div>
</div>

</div>
