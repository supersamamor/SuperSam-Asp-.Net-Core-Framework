@using Models
@model CompanyViewModel
<script asp-add-nonce>
    $(document).ready(function () { 
		$.InitializeBankFieldValidations = function(count)
        {
			let reqs = [];			
			for (let idx = 0; idx < count; idx++) {
				reqs.push({name: "BankList[" + idx + "].CompanyId", el: "Input", minlength:0, maxlength:0, isrequired: true, description: "Entity"});
				reqs.push({name: "BankList[" + idx + "].BankName", el: "Input", minlength:0, maxlength:255, isrequired: false, description: "Bank"});
				reqs.push({name: "BankList[" + idx + "].BankCode", el: "Input", minlength:0, maxlength:12, isrequired: false, description: "Bank Code"});
				reqs.push({name: "BankList[" + idx + "].AccountName", el: "Input", minlength:0, maxlength:255, isrequired: false, description: "Account Name"});
				reqs.push({name: "BankList[" + idx + "].AccountType", el: "Input", minlength:0, maxlength:30, isrequired: false, description: "Account Type"});
				reqs.push({name: "BankList[" + idx + "].AccountNumber", el: "Input", minlength:0, maxlength:14, isrequired: false, description: "Account Number"});
				
			}
			let validator = $("#company-form").validate();
			for (let j in reqs)
			{
				let e = reqs[j];
				let el = $(`*[name="${e.name}"]`);
				el.rules("add", {
					required: {                
						depends: function(element) {
							return e.isrequired;
						}
					},
					messages: {
						required: (e.description === '') ? 'this field is required' : `'${e.description}' is required`,
					},
				});
				if(e.isrequired == true)
				{
					let labelElement = $(`label[name="Label.${e.name}"]`);
					$(labelElement).addClass("fieldrequired");
				}
				if(e.maxlength > 0) {el.attr('maxlength', e.maxlength);}
				if(e.minlength > 0) {el.attr('minlength', e.minlength);}   
			} 
		}       
    });
</script>