@page
@model IndexModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Company List"];
    ViewData["ActiveMainPage"] = "Company";
    ViewData["Level1"] = "FAS";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="company" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>
								@Localizer["Database Connection Setup"]
							</th>
							<th>
								@Localizer["Name"]
							</th>
							<th>
								@Localizer["Code"]
							</th>
							<th>
								@Localizer["Short Name"]
							</th>
							<th>
								@Localizer["Submit Place"]
							</th>
							<th>
								@Localizer["Submit Deadline"]
							</th>
							<th>
								@Localizer["Email / Telephone Number"]
							</th>					
                            <th>
                                @Localizer["Actions"]
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var table = $('#company').DataTable({
            select: false,
            serverSide: true,
            order: [[ 7, 'desc' ]],
            ajax:
            {
                url: '@Url.Page("/Company/Index", new { area = "FAS", handler = "ListAll" })',
                type: "POST",
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
            },
			initComplete: function( settings, json ) {
                BindTableRowCollapseEvent();
            },
			columns: [
                { data: "databaseConnectionSetupId", name: "DatabaseConnectionSetupId", responsivePriority: 1, title: '@Localizer["Database Connection Setup"]', searchable: false },
				{ data: "name", name: "Name", responsivePriority: 1, title: '@Localizer["Name"]', searchable: true },
				{ data: "code", name: "Code", responsivePriority: 1, title: '@Localizer["Code"]', searchable: true },
				{ data: "entityShortName", name: "EntityShortName", responsivePriority: 1, title: '@Localizer["Short Name"]', searchable: true },
				{ data: "submitPlace", name: "SubmitPlace", responsivePriority: 1, title: '@Localizer["Submit Place"]', searchable: true },
				{ data: "submitDeadline", name: "SubmitDeadline", responsivePriority: 1, title: '@Localizer["Submit Deadline"]', searchable: false },
				{ data: "emailTelephoneNumber", name: "EmailTelephoneNumber", responsivePriority: 1, title: '@Localizer["Email / Telephone Number"]', searchable: true },
                {
                    data: null,
                    searchable: false,
                    orderable: false,
                    responsivePriority: 2,
                    width: "10%",
                    render: function (data, type, row, meta) {
                        var url = '@Url.Page("/Company/Details", new { area = "FAS" })' + '?id=' + row.id;
                        var button = '<a href="' + url + '" class="btn btnMaterial btn-flat primary semicircle btnViewCompany" title="@Localizer["View"]"><i class="far fa-eye"></i></a>';
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Company.Edit)).Succeeded)
                {
                    <text>
                        url = '@Url.Page("/Company/Edit", new { area = "FAS" })' + '?id=' + row.id;
                        button =  button + '&nbsp;<a href="' + url + '" class="btn btnMaterial btn-flat success semicircle btnEditCompany" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>';
                    </text>
                }  
                        return button;
                    },
                },
                { data: "lastModifiedDate", name: "LastModifiedDate", title: '@Localizer["Last Modified Date"]', visible: false, searchable: false },
                { data: "id", name: "Id", visible: false },
            ],
            buttons: [      
                'excel', 'pdf', 'pageLength',
            ],
        });
        var debounce = new $.fn.dataTable.Debounce(table); // Add delay to search

        $('.btn-table_filter').on('click', function(e) {
            table.ajax.reload(null, false);
        });
		function BindTableRowCollapseEvent()
        {
            $('#company tbody').on('click', 'td.dtr-control', function () {
                $.showAjaxLoaderOnClick([".btnAddCompany",".btnEditCompany",".btnViewCompany",".btnDeleteCompany"]);
            });
        }
        $.showAjaxLoaderOnClick([".btnAddCompany",".btnEditCompany",".btnViewCompany",".btnDeleteCompany"]);

        $('#navbar_search').keyup(function(){
              table.search($(this).val()).draw();
        })
        $(".dataTables_filter").hide();
        $("#navbar_search_container").show();
    });
</script>
}