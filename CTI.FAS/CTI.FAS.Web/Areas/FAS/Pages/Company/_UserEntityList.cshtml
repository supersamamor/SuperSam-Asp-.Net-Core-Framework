@using Models
@model CompanyViewModel
<input type="hidden" id="UserEntityCount" value="@Model?.UserEntityList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span style="background-color: var(--bs-card-cap-bg);">@Localizer["User Entity Assignment"]</span>
        <a id="btnAddUserEntity" class="btn btnMaterial btn-flat primary semicircle cancel" title="@Localizer["Add"]"><i class="fas fa-plus" style="font-size:18px;"></i></a>
        <button class="cancel" type="button" id="btnRemoveUserEntity" value="RemoveUserEntity" style="display:none;"></button>
    </h5>
    <div class="card-body" style="overflow:auto;">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th style="display:none;"></th>
                    <th>
								@Localizer["Pplus User Id"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.UserEntityList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.UserEntityList)
                    {
                        <tr>
                            <td style="display:none;">
                                <input type="hidden" name="UserEntityList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="UserEntityList[@counter].CompanyId" value="@item.CompanyId" />
                            </td>
                            <td>
										<input  asp-for="@item.PplusUserId" name="UserEntityList[@counter].PplusUserId" class="form-control" maxlength="50" />
										<span data-valmsg-for="UserEntityList[@counter].PplusUserId" asp-validation-for="@item.PplusUserId" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveUserEntityButton" title="@Localizer["Remove UserEntity"]" removeId="@(item.Id)"><i class="fas fa-trash" style="font-size:18px;"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
