@page
@model EnrollmentModel

@section Styles {
<partial name="_DataTableStyles" />
}
@{
    ViewData["Title"] = Localizer["Payee Enrollment"];
    ViewData["ActiveMainPage"] = "EnrolledPayee";
    ViewData["Level1"] = "AP";
}
<form id="enrollment-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            <partial name="_PayeeEnrollmentTabNavigation" model="@Model.PayeeEnrollmentTabNavigation" />
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <table id="enrolledPayee" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Localizer["Actions"]
                                        </th>
                                        <th>
                                            @Localizer["Entity"]
                                        </th>
                                        <th>
                                            @Localizer["Creditor"]
                                        </th>
                                        <th>
                                            @Localizer["Account Type"]
                                        </th>
                                        <th>
                                            @Localizer["Status"]
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.EnrolledPayeeList.Count(); i++)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check m-1">
                                                    @if (Model.EnrolledPayeeList[i].Enabled)
                                                    {
                                                        <input type="checkbox" name="EnrolledPayeeList[@(i)].Enabled" class="form-check-input" value=true checked />
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" name="EnrolledPayeeList[@(i)].Enabled" class="form-check-input" value=true />
                                                    }
                                                    <input type="hidden" asp-for="@Model.EnrolledPayeeList[i].Id" />
                                                </div>
                                            </td>
                                            <td>
                                                @Model.EnrolledPayeeList[i].ForeignKeyCompany
                                            </td>
                                            <td>
                                                @Model.EnrolledPayeeList[i].ForeignKeyCreditor
                                            </td>
                                            <td>
                                                @Model.EnrolledPayeeList[i].PayeeAccountType
                                            </td>
                                            <td>
                                                @Model.EnrolledPayeeList[i].Status
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
                <i class="fas fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">      
        <button type="submit" class="btn btn-success" title="@Localizer["Save changes"]" style="color:#fff;"><i class="fas fa-save"></i></button>
    </div>
</form>
@section Scripts {
<partial name="_DataTableScripts" />
<script asp-add-nonce>
    $(document).ready(function () {
        var roles = $("#enrolledPayee").DataTable({
            select: false,
            searching: true,
            paging: true,
            pageLength: 10,
            info: true,
            buttons: [
                @if ((await AuthorizationService.AuthorizeAsync(User, Permission.EnrolledPayee.Create)).Succeeded)
                {
                    <text>
                        {
                            text: '@Localizer["Add"]',
                            action: function (e, dt, button, config) {
                                var url = '@Url.Page("/EnrolledPayee/Add", new { area = "FAS" })';
                                window.location.href = url;
                            },
                            className: 'btn btn-success text-light',
                        },
                    </text>
                }
            ],
            columnDefs: [
                {
                    targets: [1],
                    orderDataType: 'dom-checkbox',
                }
            ]
        });
        $('#enrollment-form').onSubmitIncludeAllFieldsFromTable(roles);
    });
</script>
}