@page
@model EditModel
@{
    ViewData["Title"] = Localizer["Edit Payee Enrollment"];
    ViewData["ActiveMainPage"] = "EnrolledPayee";
    ViewData["Level1"] = "AP";
}
<form id="enrolledPayee-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.RemoveSubDetailId" />
    <input type="hidden" asp-for="@Model.AsyncAction" />
    <div id="PartialLoaderContainer">
        <partial name="_InputFieldsPartial" model="Model.EnrolledPayee" />
    </div>
    <div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
        <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Cancel"]"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-success" title="@Localizer["Save changes"]" style="color:#fff;"><i class="fas fa-save"></i></button>
    </div>
</form>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_EnrolledPayeeEmailListValidationPartial" model="@Model.EnrolledPayee" />
<partial name="_DisableFieldsViaClassPartial" model="@("DisableOnEdit")" />
<script asp-add-nonce>
    $(document).ready(function () {
        function InitializeForm()
        {
            $.DisableFieldsViaClass();
            $('.DisableSelectDropdown').on('mousedown', function(e) {
                e.preventDefault();
                this.blur();
                window.focus();
            });			
            $('#CompanyId').on( 'change', function () {				
				$('#AsyncAction').val('');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#enrolledPayee-form', InitializeForm);
			});
			$('#CreditorId').on( 'change', function () {				
				$('#AsyncAction').val('GetDefaultEmail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#enrolledPayee-form', InitializeForm);
			});
			$.InitializeEnrolledPayeeEmailFieldValidations($('#EnrolledPayeeEmailCount').val());
			$('.RemoveEnrolledPayeeEmailButton ').on( 'click', function () {
				$('#RemoveSubDetailId').val($(this).attr('removeid'));
				$('#AsyncAction').val('RemoveEnrolledPayeeEmail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#enrolledPayee-form', InitializeForm);
			});

			$('#btnAddEnrolledPayeeEmail').on( 'click', function () {
				$('#AsyncAction').val('AddEnrolledPayeeEmail');
				$.triggerPageForm('ChangeFormValue','#PartialLoaderContainer', '#enrolledPayee-form', InitializeForm);
			});
        }
        InitializeForm();
    });
</script>
}