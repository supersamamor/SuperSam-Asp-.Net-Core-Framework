@using Models
@model DatabaseConnectionSetupViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Code" class="form-label fieldrequired"><strong>@Localizer["Code"] :</strong></label>
			<input asp-for="@Model.Code" class="form-control" maxlength="20" />
			<span asp-validation-for="@Model.Code" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Name" class="form-label fieldrequired"><strong>@Localizer["Name"] :</strong></label>
			<input asp-for="@Model.Name" class="form-control" maxlength="100" />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.DatabaseAndServerName" class="form-label fieldrequired"><strong>@Localizer["Database And Server Name"] :</strong></label>
			<input asp-for="@Model.DatabaseAndServerName" class="form-control" maxlength="100" />
			<span asp-validation-for="@Model.DatabaseAndServerName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.InhouseDatabaseAndServerName" class="form-label "><strong>@Localizer["Inhouse Database And Server Name"] :</strong></label>
			<input asp-for="@Model.InhouseDatabaseAndServerName" class="form-control" maxlength="100" />
			<span asp-validation-for="@Model.InhouseDatabaseAndServerName" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.SystemConnectionString" class="form-label "><strong>@Localizer["System Connection String"] :</strong></label>
			<input asp-for="@Model.SystemConnectionString" class="form-control" maxlength="1000" />
			<span asp-validation-for="@Model.SystemConnectionString" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.IsDisabled" class="form-label "><strong>@Localizer["Disabled"] :</strong></label>
			<input asp-for="@Model.IsDisabled" class="custom-checkbox-label"/>
			<span asp-validation-for="@Model.IsDisabled" class="text-danger"></span>
			
	</div>
</div>

</div>
