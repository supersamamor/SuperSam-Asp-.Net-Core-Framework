@page
@model ViewModel
@{
    ViewData["Title"] = Localizer["View Group"];
    ViewData["ActiveMainPage"] = "Group";
    ViewData["Level1"] = "Admin";
}
<div class="card">
    <h5 class="card-header"><span style="background-color: var(--bs-card-cap-bg);">@Localizer["Group Info"]</span><br></h5>
    <div class="card-body">
        <partial name="_ViewGroupDetails" model="Model.Group" />
    </div>
</div>
<div id="toolbar-container" class="btn-group" role="group" style="float:right;margin-top:10px;">
    <a asp-page="Index" class="btn btn-secondary" title="@Localizer["Close"]"><i class="fas fa-ban"></i></a>
    @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Group.Create)).Succeeded)
    {
        <a asp-page="Add" class="btn btn-success" title="@Localizer["Add"]" style="color:#fff;"><i class="fas fa-plus"></i></a>
    }
    @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Group.Edit)).Succeeded)
    {
        <a asp-page="Edit" asp-route-id="@Model.Group.Id" class="btn btn-primary" title="@Localizer["Edit"]"><i class="fas fa-pen"></i></a>
    }
</div>
<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
    <i class="fas fa-chevron-up"></i>
</a>