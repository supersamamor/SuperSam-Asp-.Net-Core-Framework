@model ProjectNamePlaceHolder.Application.Models.MainModulePlaceHolder.MainModulePlaceHolderModel
@using ProjectNamePlaceHolder.Web.Pages.MainModulePlaceHolder

<form method="get">
    <div class="row toolbar-container">
        <div class="btn-toolbar mb-1 col-12" role="toolbar">
            <div class="input-group input-group-sm">
                <div class="input-group input-group-sm" data-toggle="tooltip" data-placement="top" title="@Resource.LabelSave" onclick="@(MainModulePlaceHolderHtmlElementVariables.Save.JSFunctionTriggerHandler)();">
                    <a class="input-group-text custom-anchor-button" href="#">
                        <i class="fas fa-save"></i><span class="btn-label"> @Resource.LabelSave</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="" id="@MainModulePlaceHolderHtmlElementVariables.MainModulePlaceHolderFormPromptContainer" style="margin-top:5px;">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger small alert-dismissible fade show" role="alert">
            <span>@TempData["Error"] </span>
        </div>
    }
    else if (TempData["Success"] != null)
    {
        <div class="alert alert-info small alert-dismissible fade show" role="alert">
            <span>@TempData["Success"]</span>
        </div>
    }
</div>
<div class="row panel-container">
    <div class="col-md-12">
        <form method="post"  id="@MainModulePlaceHolderHtmlElementVariables.MainModulePlaceHolderForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            @if (Model.Id == 0)
            {
                <div class="form-group">
                    @Html.DisplayLabelWithRequiredTag(model => Model.Code, "control-label small")
                    <input asp-for="Code" class="form-control form-control-sm" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    @Html.DisplayLabelWithRequiredTag(model => Model.Code, "control-label small")
                    <input asp-for="Code" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>
            }
            <div class="form-group">
                @Html.DisplayLabelWithRequiredTag(model => Model.Name, "control-label small")
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>          
        </form>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

@MainModulePlaceHolderHtmlElementVariables.Save.CelerSoftPostTriggerHandlerAjax(modal: MainModulePlaceHolderHtmlElementVariables.MainModulePlaceHolderModal,
    promptMessageContainer: @MainModulePlaceHolderHtmlElementVariables.MainModulePlaceHolderFormPromptContainer,
    formName: MainModulePlaceHolderHtmlElementVariables.MainModulePlaceHolderForm,
    confirmationMessage : Resource.PromptMessageSaveConfirmation)

<script type="text/javascript">
     $('#@MainModulePlaceHolderHtmlElementVariables.MainModulePlaceHolderFormPromptContainer').fadeOut(100).fadeIn(100).fadeOut(100).fadeIn(100);
</script>