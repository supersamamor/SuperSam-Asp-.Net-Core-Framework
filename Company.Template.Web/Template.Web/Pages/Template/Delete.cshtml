@page
@model Template.Web.Pages.Template.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewBag.Title</h1>
<h4>Template</h4>
<div class="">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span>@TempData["Error"] </span>
        </div>
    }
    else if (TempData["Success"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <span>@TempData["Success"]</span>
        </div>
    }
</div>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Template.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
