@page
@model Template.Web.Pages.Template.IndexModel
@using X.PagedList.Web.Common
@using X.PagedList.Mvc.Core
@using X.PagedList
@using Template.Web.Extensions;
@{
    ViewData["Title"] = @Resource.LabelTemplateList;
}

    <form method="get">       
        <div class="row toolbar-container">
            <div class="btn-toolbar mb-1 col-12" role="toolbar">
                <div class="input-group input-group-sm">
                    <div class="input-group input-group-sm" data-toggle="tooltip" data-placement="top" title="@Resource.LabelAdd">
                        <a asp-page="Create" class="input-group-text custom-anchor-button">
                            <i class="fas fa-plus text-dark"
                               aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="vertical-divider"></div>
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend input-group-sm">
                        <button type="submit" class="input-group-text">
                            <i class="fas fa-search text-dark"
                               aria-hidden="true"></i>
                        </button>
                    </div>
                    <input asp-for="SearchKey" class="form-control" placeholder="Search" />
                </div>
            </div>
        </div>      
    </form>  
    <div class="" style="margin-top:5px;">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger small alert-dismissible fade show" role="alert">
                <span>@TempData["Error"] </span>
            </div>
        }
        else if (TempData["Success"] != null)
        {
            <div class="alert alert-info small alert-dismissible fade show" role="alert">
                <span>@TempData["Success"]</span>
            </div>
        }
    </div>  
    <table class="table small table-striped table-hover">
        <thead>
            <tr>
                @Html.PageSorter(model => Model.TemplateList[0].Code)
                @Html.PageSorter(model => Model.TemplateList[0].Name)           
            </tr>
        </thead>
        <tbody>
            @if (Model.TemplateList != null)
            {              
                foreach (var item in Model.TemplateList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            <span style="float:left;">@Html.DisplayFor(modelItem => item.Name)</span>                         
                            <ul class="list-toolbar" style="float:right;">
                                <li class="list-toolbar-button">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="@Resource.LabelEdit">
                                        <i class="fas fa-edit text-dark"
                                           aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="list-toolbar-button">
                                    <a asp-page="./Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="@Resource.LabelView">
                                        <i class="fas fa-search text-dark"
                                           aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="list-toolbar-button">
                                    <a asp-page="./Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="@Resource.LabelDelete">
                                        <i class="fas fa-trash text-dark"
                                           aria-hidden="true"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>                      
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="small">
        <br />
        @if (Model.TemplateList != null)
        {
            <ul class="pagination justify-content-center">
                @Html.PagedListPager((IPagedList)Model.TemplateList, page => Url.Action("Index", new
                {
                    SearchKey = Model.SearchKey,
                    PageNumber = page
                }),
                new PagedListRenderOptionsBase
                {
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" }
                })
            </ul>
        }
    </div>
