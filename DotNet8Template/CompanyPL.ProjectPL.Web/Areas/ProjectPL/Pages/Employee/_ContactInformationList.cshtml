@using Models
@model EmployeeViewModel
<input type="hidden" id="ContactInformationCount" value="@Model?.ContactInformationList?.Count" />
<div class="card">
    <h5 class="card-header">
        <span  class="card-header-custom">@Localizer["Contact Information"]</span>
        <a id="btnAddContactInformation" class="btn btnMaterial btn-flat primary semicircle cancel btnAddRemoveSubDetailList" title="@Localizer["Add"]"><i class="fas fa-plus"></i></a>
        <button class="cancel d-none" type="button" id="btnRemoveContactInformation" value="RemoveContactInformation"></button>
    </h5>
    <div class="card-body overflow-auto">
        <table id="subDetailList" class="table table-hover table-bordered table-striped responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th class="d-none"></th>
                    <th>
								@Localizer["Contact Details"]
							</th>
							
                    <th>
                        @Localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.ContactInformationList != null)
                {
                    int counter = 0;
                    foreach (var item in Model.ContactInformationList)
                    {
                        <tr>
                            <td class="d-none">
                                <input type="hidden" name="ContactInformationList[@counter].Id" value="@item.Id" />
                                <input type="hidden" name="ContactInformationList[@counter].EmployeeId" value="@item.EmployeeId" />
                            </td>
                            <td>
										<input  asp-for="@item.ContactDetails" name="ContactInformationList[@counter].ContactDetails" class="form-control" maxlength="255" />
										<span data-valmsg-for="ContactInformationList[@counter].ContactDetails" asp-validation-for="@item.ContactDetails" class="text-danger"></span>
										
									</td>
									
                            <td>
                                <a class="btn btnMaterial btn-flat accent semicircle cancel RemoveContactInformationButton btnAddRemoveSubDetailList" title="@Localizer["Remove ContactInformation"]" removeId="@(item.Id)"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
