@model ProjectNamePlaceHolder.Application.Models.MainModulePlaceHolder.MainModulePlaceHolderModel

<form method="get">
    <div class="row toolbar-container">
        <div class="btn-toolbar mb-1 col-12" role="toolbar">
            <div class="input-group input-group-sm">
                <div class="input-group input-group-sm" data-toggle="tooltip" data-placement="top" title="@Resource.LabelSave" id="btnShowSaveModal">
                    <a class="input-group-text custom-anchor-button" href="#">
                        <i class="fas fa-save"></i><span class="btn-label"> @Resource.LabelSave</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="" id="PromptContainer" style="margin-top:5px;">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger small alert-dismissible fade show" role="alert">
            <span>@TempData["Error"] </span>
        </div>
    }
    else if (TempData["Success"] != null)
    {
        <div class="alert alert-info small alert-dismissible fade show" role="alert">
            <span>@TempData["Success"]</span>
        </div>
    }
</div>
<div class="row panel-container">
    <div class="col-md-12">
        <form method="post" asp-page-handler="Save" id="FormAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayLabelWithRequiredTag(model => Model.Code, "control-label small")
                <input asp-for="Code" class="form-control form-control-sm" />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>
            <div class="form-group">
                @Html.DisplayLabelWithRequiredTag(model => Model.Name, "control-label small")
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="form-group" style="display:none;">
                <input type="submit" id="btnSave" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
@Html.PromptConfirmationModalAjax("ConfirmSaveModal", "btnShowSaveModal", "btnSave", "FormAdd", "PromptContainer", Resource.PromptMessageSaveConfirmation)
<script type="text/javascript">
    $('#btnSave').on('click', function (evt) {
        evt.preventDefault();
        $.post('?handler=Save', $('#FormAdd').serialize(), function (data) {
            $('#CreateEditBody').html(data);
        });
    });
</script>
